@page
@model SD.Project.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1 class="text-center mb-4">Change Password</h1>

        @if (Model.ShowSuccess)
        {
            <div class="alert alert-success" role="alert">
                <h5 class="alert-heading">Password Changed!</h5>
                <p class="mb-0">Your password has been changed successfully.</p>
            </div>
            <div class="d-grid mt-4">
                <a asp-page="/" class="btn btn-primary btn-lg">Return to Home</a>
            </div>
        }
        else
        {
            <p class="text-center text-muted mb-4">Enter your current password and choose a new password.</p>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                    @if (Model.ValidationErrors?.Any() == true)
                    {
                        <ul class="mb-0 mt-2">
                            @foreach (var error in Model.ValidationErrors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    }
                </div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="currentPassword" class="form-label">Current Password</label>
                    <input type="password" class="form-control" id="currentPassword" name="Input.CurrentPassword" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="newPassword" name="Input.NewPassword" required>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="Input.ConfirmPassword" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Change Password</button>
                </div>
            </form>
        }
    </div>
</div>
