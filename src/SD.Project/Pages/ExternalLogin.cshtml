@page
@model SD.Project.Pages.ExternalLoginModel
@{
    ViewData["Title"] = "External Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1 class="text-center mb-4">External Login</h1>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Login Failed</h4>
                <p>@Model.ErrorMessage</p>
            </div>
            
            <div class="text-center">
                <a asp-page="/Login" class="btn btn-primary">Return to Login</a>
            </div>
        }
        else
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Processing...</span>
                </div>
                <p class="mt-3 text-muted">Processing your login...</p>
            </div>
        }
    </div>
</div>
