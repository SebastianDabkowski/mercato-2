@page
@model SD.Project.Pages.Buyer.OrdersModel
@{
    ViewData["Title"] = "My Orders";
    var hasFilters = !string.IsNullOrEmpty(Model.Status) || Model.FromDate.HasValue || Model.ToDate.HasValue;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">My Orders</h1>
            <p class="text-muted mb-0">View and track your orders</p>
        </div>
        <a asp-page="/Buyer/Dashboard" class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
            </svg>
            Back to Dashboard
        </a>
    </div>

    <!-- Filters Card -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h6 class="mb-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel me-2" viewBox="0 0 16 16">
                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                </svg>
                Filter Orders
            </h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="Status">
                        <option value="">All Statuses</option>
                        @foreach (var status in Model.AvailableStatuses)
                        {
                            var displayName = status switch
                            {
                                "PaymentConfirmed" => "Confirmed",
                                "PaymentFailed" => "Failed",
                                _ => status
                            };
                            if (Model.Status == status)
                            {
                                <option value="@status" selected>@displayName</option>
                            }
                            else
                            {
                                <option value="@status">@displayName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" class="form-control" id="fromDate" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" class="form-control" id="toDate" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search me-1" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                        Filter
                    </button>
                    @if (hasFilters)
                    {
                        <a asp-page="/Buyer/Orders" class="btn btn-outline-secondary" title="Clear Filters">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                            </svg>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (Model.Orders.Count == 0 && !hasFilters)
    {
        <div class="text-center py-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-bag-x text-muted mb-3" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M6.146 8.146a.5.5 0 0 1 .708 0L8 9.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 10l1.147 1.146a.5.5 0 0 1-.708.708L8 10.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 10 6.146 8.854a.5.5 0 0 1 0-.708"/>
                <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
            </svg>
            <h4 class="text-muted">No orders yet</h4>
            <p class="text-muted mb-3">Start shopping to see your orders here.</p>
            <a asp-page="/Buyer/Search" class="btn btn-primary">Browse Products</a>
        </div>
    }
    else if (Model.Orders.Count == 0 && hasFilters)
    {
        <div class="text-center py-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-search text-muted mb-3" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
            </svg>
            <h4 class="text-muted">No orders match your filters</h4>
            <p class="text-muted">Try adjusting your filter criteria or clear filters to see all orders.</p>
            <a asp-page="/Buyer/Orders" class="btn btn-outline-primary mt-2">Clear Filters</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-light">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag-check me-2" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                                <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                            </svg>
                            Your Orders (@Model.TotalCount)
                            @if (hasFilters)
                            {
                                <span class="badge bg-info ms-2">Filtered</span>
                            }
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Order #</th>
                                <th scope="col">Date</th>
                                <th scope="col" class="text-center">Items</th>
                                <th scope="col" class="text-center">Status</th>
                                <th scope="col" class="text-end">Total</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                var statusClass = order.Status switch
                                {
                                    "PaymentConfirmed" => "bg-success",
                                    "Processing" => "bg-info",
                                    "Shipped" => "bg-primary",
                                    "Delivered" => "bg-success",
                                    "Cancelled" => "bg-secondary",
                                    "PaymentFailed" => "bg-danger",
                                    "Refunded" => "bg-warning",
                                    _ => "bg-warning"
                                };
                                var statusDisplay = order.Status switch
                                {
                                    "PaymentConfirmed" => "Confirmed",
                                    "PaymentFailed" => "Failed",
                                    _ => order.Status
                                };
                                <tr>
                                    <td>
                                        <a asp-page="/Buyer/OrderDetails" asp-route-orderId="@order.OrderId" class="fw-bold text-decoration-none">
                                            @order.OrderNumber
                                        </a>
                                    </td>
                                    <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-center">@order.ItemCount</td>
                                    <td class="text-center">
                                        <span class="badge @statusClass">@statusDisplay</span>
                                    </td>
                                    <td class="text-end fw-bold">@order.Currency @order.TotalAmount.ToString("N2")</td>
                                    <td class="text-end">
                                        <a asp-page="/Buyer/OrderDetails" asp-route-orderId="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-light">
                    <nav aria-label="Order pagination">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="/Buyer/Orders" 
                                   asp-route-PageNumber="@(Model.CurrentPage - 1)"
                                   asp-route-Status="@Model.Status"
                                   asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                   asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Previous</a>
                            </li>
                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-page="/Buyer/Orders"
                                       asp-route-PageNumber="@i"
                                       asp-route-Status="@Model.Status"
                                       asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                       asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-page="/Buyer/Orders"
                                   asp-route-PageNumber="@(Model.CurrentPage + 1)"
                                   asp-route-Status="@Model.Status"
                                   asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                   asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Next</a>
                            </li>
                        </ul>
                    </nav>
                    <p class="text-muted text-center mt-2 mb-0 small">
                        Showing @Model.DisplayStartItem-@Model.DisplayEndItem of @Model.TotalCount orders
                    </p>
                </div>
            }
        </div>
    }
</div>
