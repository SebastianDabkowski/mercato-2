@page
@model SD.Project.Pages.Buyer.CheckoutPaymentModel
@{
    ViewData["Title"] = "Checkout - Payment";
}

<div class="container py-4">
    <!-- Breadcrumb Progress -->
    <nav aria-label="Checkout progress" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Buyer/Cart">Cart</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Buyer/Checkout">Delivery Address</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Buyer/CheckoutShipping">Shipping</a>
            </li>
            <li class="breadcrumb-item active" aria-current="step">
                <strong>Payment</strong>
            </li>
            <li class="breadcrumb-item text-muted">Confirmation</li>
        </ol>
    </nav>

    <h1 class="mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-credit-card me-2" viewBox="0 0 16 16">
            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1z"/>
            <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
        </svg>
        Select Payment Method
    </h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.PaymentData is null)
    {
        <div class="alert alert-warning">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
            </svg>
            Session expired or checkout data missing. Please <a asp-page="/Buyer/Cart" class="alert-link">start over from the cart</a>.
        </div>
    }
    else if (!Model.IsAuthenticated)
    {
        <div class="alert alert-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-lock me-2" viewBox="0 0 16 16">
                <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m0 5.996V14H3s-1 0-1-1 1-4 6-4q.564.001 1.077.07"/>
                <path d="M9.5 10a.5.5 0 0 1 .5.5v.05a2.5 2.5 0 0 1 2.5-2.5c1.38 0 2.5 1.12 2.5 2.5v.05a.5.5 0 0 1 .5.5v5a.5.5 0 0 1-.5.5h-5a.5.5 0 0 1-.5-.5v-5zm3 .5V9.5A1.5 1.5 0 0 0 11 8a1.5 1.5 0 0 0-1.5 1.5v1z"/>
            </svg>
            Please <a asp-page="/Login" asp-route-returnUrl="@Url.Page("/Buyer/CheckoutPayment")" class="alert-link">log in</a> to complete your purchase.
            Guest checkout is coming soon.
        </div>
    }
    else
    {
        <form method="post" asp-page-handler="PlaceOrder">
            <div class="row">
                <!-- Payment Methods -->
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-wallet2 me-2" viewBox="0 0 16 16">
                                    <path d="M12.136.326A1.5 1.5 0 0 1 14 1.78V3h.5A1.5 1.5 0 0 1 16 4.5v9a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 13.5v-9a1.5 1.5 0 0 1 1.432-1.499zM5.562 3H13V1.78a.5.5 0 0 0-.621-.484zM1.5 4a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5z"/>
                                </svg>
                                Payment Options
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.PaymentData.PaymentMethods.Any())
                            {
                                <div class="row g-3">
                                    @foreach (var method in Model.PaymentData.PaymentMethods)
                                    {
                                        var isSelected = Model.SelectedPaymentMethodId == method.Id || 
                                            (!Model.SelectedPaymentMethodId.HasValue && method.IsDefault);
                                        <div class="col-md-6">
                                            <div class="card h-100 @(isSelected ? "border-primary" : "")" style="cursor: pointer;" tabindex="0" role="button" aria-pressed="@(isSelected ? "true" : "false")" onclick="selectPayment('@method.Id')" onkeydown="if(event.key === 'Enter' || event.key === ' ') { event.preventDefault(); selectPayment('@method.Id'); }">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="d-flex align-items-center">
                                                            @if (!string.IsNullOrEmpty(method.IconClass))
                                                            {
                                                                <i class="@method.IconClass fs-3 me-3"></i>
                                                            }
                                                            else
                                                            {
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-credit-card me-3" viewBox="0 0 16 16">
                                                                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1z"/>
                                                                    <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                                                                </svg>
                                                            }
                                                            <div>
                                                                <h6 class="card-title mb-1">@method.Name</h6>
                                                                @if (!string.IsNullOrEmpty(method.Description))
                                                                {
                                                                    <small class="text-muted">@method.Description</small>
                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" 
                                                                name="SelectedPaymentMethodId" 
                                                                id="payment_@method.Id" 
                                                                value="@method.Id" 
                                                                @(isSelected ? "checked" : "") 
                                                                onchange="selectPayment('@method.Id')"
                                                                aria-label="Select @method.Name">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0">
                                    No payment methods are currently available. Please try again later.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="acceptTerms" name="AcceptTerms" value="true" required>
                                <label class="form-check-label" for="acceptTerms">
                                    I agree to the <a href="#" target="_blank">Terms of Service</a> and <a href="#" target="_blank">Privacy Policy</a>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="/Buyer/CheckoutShipping" class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                            </svg>
                            Back to Shipping
                        </a>
                        <button type="submit" class="btn btn-success btn-lg" @(Model.PaymentData.PaymentMethods.Any() ? "" : "disabled")>
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lock me-2" viewBox="0 0 16 16">
                                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
                            </svg>
                            Place Order - @Model.PaymentData.Currency @Model.PaymentData.TotalAmount.ToString("N2")
                        </button>
                    </div>
                </div>

                <!-- Order Summary Sidebar -->
                <div class="col-lg-4">
                    <div class="card sticky-top" style="top: 1rem;">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Items</span>
                                <span>@Model.PaymentData.Currency @Model.PaymentData.ItemSubtotal.ToString("N2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping</span>
                                <span>@Model.PaymentData.Currency @Model.PaymentData.TotalShipping.ToString("N2")</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="fw-bold fs-5">Total</span>
                                <span class="fw-bold fs-5 text-primary">@Model.PaymentData.Currency @Model.PaymentData.TotalAmount.ToString("N2")</span>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.PaymentData.DeliveryAddressSummary))
                            {
                                <div class="bg-light p-3 rounded mb-3">
                                    <h6 class="mb-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt me-2" viewBox="0 0 16 16">
                                            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                        </svg>
                                        Shipping To
                                    </h6>
                                    <p class="small mb-0">@Model.PaymentData.DeliveryAddressSummary</p>
                                </div>
                            }

                            <div class="alert alert-success small mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-shield-check me-1" viewBox="0 0 16 16">
                                    <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56"/>
                                    <path d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                                </svg>
                                Your payment is secured by 256-bit SSL encryption
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

@section Scripts {
    <script>
        function selectPayment(methodId) {
            // Update the radio button
            const radio = document.getElementById('payment_' + methodId);
            if (radio) {
                radio.checked = true;
            }

            // Highlight selected card
            document.querySelectorAll('.card.h-100').forEach(card => {
                card.classList.remove('border-primary');
            });
            const selectedCard = radio.closest('.card.h-100');
            if (selectedCard) {
                selectedCard.classList.add('border-primary');
            }
        }
    </script>
}
