@page "{id:guid?}"
@model SD.Project.Pages.Buyer.CategoryModel
@{
    ViewData["Title"] = Model.CurrentCategory?.Name ?? "Browse Categories";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-page="/Buyer/Category" asp-route-id="">Categories</a></li>
        @if (Model.ParentCategory is not null)
        {
            <li class="breadcrumb-item">
                <a asp-page="/Buyer/Category" asp-route-id="@Model.ParentCategory.Id">@Model.ParentCategory.Name</a>
            </li>
        }
        @if (Model.CurrentCategory is not null)
        {
            <li class="breadcrumb-item active" aria-current="page">@Model.CurrentCategory.Name</li>
        }
    </ol>
</nav>

@if (Model.CurrentCategory is null)
{
    <h1>Browse Categories</h1>
    <p class="lead">Select a category to explore products.</p>

    @if (Model.RootCategories.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
            @foreach (var category in Model.RootCategories)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text text-muted">
                                @category.ProductCount product(s)
                                @if (category.ChildCount > 0)
                                {
                                    <text> â€¢ @category.ChildCount subcategory(ies)</text>
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-page="/Buyer/Category" asp-route-id="@category.Id" class="btn btn-primary">
                                Browse
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No Categories Available</h4>
            <p>There are currently no categories configured in the system.</p>
            <hr>
            <p class="mb-0">Check back later or <a asp-page="/Index" class="alert-link">browse all products</a>.</p>
        </div>
    }
}
else
{
    <h1>@Model.CurrentCategory.Name</h1>

    @if (Model.Subcategories.Any())
    {
        <section class="mb-4">
            <h5>Subcategories</h5>
            <div class="d-flex flex-wrap gap-2">
                @foreach (var subcategory in Model.Subcategories)
                {
                    <a asp-page="/Buyer/Category" asp-route-id="@subcategory.Id" class="btn btn-outline-secondary">
                        @subcategory.Name
                        <span class="badge bg-secondary">@subcategory.ProductCount</span>
                    </a>
                }
            </div>
        </section>
    }

    <!-- Filter Panel -->
    <form method="get" class="mb-4">
        <input type="hidden" name="id" value="@Model.CurrentCategory.Id" />
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#filterPanel" role="button" aria-expanded="false" aria-controls="filterPanel">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel me-2" viewBox="0 0 16 16">
                        <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
                    </svg>
                    Filters
                    @if (Model.HasActiveFilters)
                    {
                        <span class="badge bg-primary ms-2">Active</span>
                    }
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                </svg>
            </div>
            <div class="collapse @(Model.HasActiveFilters ? "show" : "")" id="filterPanel">
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Price Range -->
                        <div class="col-md-4">
                            <label for="MinPrice" class="form-label">Min Price</label>
                            <input type="number" name="MinPrice" id="MinPrice" class="form-control" step="0.01" min="0"
                                   placeholder="0.00" value="@Model.Filters.MinPrice">
                        </div>
                        <div class="col-md-4">
                            <label for="MaxPrice" class="form-label">Max Price</label>
                            <input type="number" name="MaxPrice" id="MaxPrice" class="form-control" step="0.01" min="0"
                                   placeholder="No limit" value="@Model.Filters.MaxPrice">
                        </div>

                        <!-- Seller/Store Filter -->
                        <div class="col-md-4">
                            <label for="StoreId" class="form-label">Seller</label>
                            <select name="StoreId" id="StoreId" class="form-select">
                                <option value="">All Sellers</option>
                                @foreach (var store in Model.AvailableStores)
                                {
                                    <option value="@store.Id" selected="@(Model.Filters.StoreId == store.Id)">@store.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                        @if (Model.HasActiveFilters)
                        {
                            <a asp-page="/Buyer/Category" asp-route-id="@Model.CurrentCategory.Id" asp-route-ClearFilters="true" class="btn btn-outline-secondary">
                                Clear All Filters
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>

    @if (Model.Products.Any())
    {
        <section>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">Products</h5>
                <span class="text-muted">
                    @Model.Products.Count result(s)
                    @if (Model.HasActiveFilters)
                    {
                        <text>with filters applied</text>
                    }
                </span>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(product.MainImageThumbnailUrl))
                            {
                                <img src="@product.MainImageThumbnailUrl" class="card-img-top" alt="@product.Name">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                    <span class="text-muted">No Image</span>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted">@(string.IsNullOrEmpty(product.Description) ? "" : (product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description))</p>
                                <p class="card-text">
                                    <strong>@product.Currency @product.Amount.ToString("N2")</strong>
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                @if (product.Stock > 0)
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No Products Found</h4>
            @if (Model.HasActiveFilters)
            {
                <p>No products match the selected filters in the "@Model.CurrentCategory.Name" category.</p>
                <hr>
                <p class="mb-0">
                    <a asp-page="/Buyer/Category" asp-route-id="@Model.CurrentCategory.Id" asp-route-ClearFilters="true" class="alert-link">
                        Clear all filters
                    </a> to see more products.
                </p>
            }
            else
            {
                <p>There are currently no products in the "@Model.CurrentCategory.Name" category.</p>
                <hr>
                @if (Model.Subcategories.Any())
                {
                    <p class="mb-0">Try browsing one of the subcategories above.</p>
                }
                else if (Model.RootCategories.Any())
                {
                    <p class="mb-0">Explore other categories:</p>
                    <div class="mt-2">
                        @foreach (var category in Model.RootCategories.Take(5))
                        {
                            <a asp-page="/Buyer/Category" asp-route-id="@category.Id" class="btn btn-outline-primary btn-sm me-1 mb-1">
                                @category.Name
                            </a>
                        }
                    </div>
                }
                else
                {
                    <p class="mb-0">Check back later or <a asp-page="/Index" class="alert-link">browse all products</a>.</p>
                }
            }
        </div>
    }
}
