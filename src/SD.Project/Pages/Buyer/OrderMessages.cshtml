@page
@model SD.Project.Pages.Buyer.OrderMessagesModel
@{
    ViewData["Title"] = Model.Thread is not null ? $"Messages - Order {Model.Thread.OrderNumber}" : "Messages";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Buyer/Dashboard">Dashboard</a></li>
            @if (Model.Thread is not null)
            {
                <li class="breadcrumb-item"><a asp-page="/Buyer/OrderMessages">Messages</a></li>
                <li class="breadcrumb-item active" aria-current="page">Order @Model.Thread.OrderNumber</li>
            }
            else
            {
                <li class="breadcrumb-item active" aria-current="page">Messages</li>
            }
        </ol>
    </nav>

    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Thread is not null)
    {
        <!-- Thread View -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>Order: @Model.Thread.OrderNumber</strong>
                    <span class="text-muted ms-2">with @Model.Thread.StoreName</span>
                </div>
                <a asp-page="/Buyer/OrderDetails" asp-route-id="@Model.Thread.OrderId" class="btn btn-outline-secondary btn-sm">
                    View Order
                </a>
            </div>
            <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                @if (Model.Thread.Messages.Count == 0)
                {
                    <div class="text-center text-muted py-4">
                        <p>No messages yet. Start the conversation below.</p>
                    </div>
                }
                else
                {
                    @foreach (var message in Model.Thread.Messages)
                    {
                        <div class="mb-3 @(message.IsBuyerMessage ? "text-end" : "")">
                            <div class="d-inline-block p-3 rounded-3 @(message.IsBuyerMessage ? "bg-primary text-white" : "bg-light")" 
                                 style="max-width: 75%;">
                                <div class="small mb-1">
                                    <strong>@message.SenderName</strong>
                                    <span class="@(message.IsBuyerMessage ? "text-white-50" : "text-muted")">
                                        â€¢ @message.SentAtDisplay
                                    </span>
                                </div>
                                <div>@message.Content</div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Send Message Form -->
        <div class="card">
            <div class="card-body">
                <form method="post" asp-page-handler="SendMessage">
                    <input type="hidden" asp-for="MessageInput.OrderId" value="@Model.Thread.OrderId" />
                    <input type="hidden" asp-for="MessageInput.StoreId" value="@Model.Thread.StoreId" />
                    <div class="mb-3">
                        <textarea class="form-control" asp-for="MessageInput.Content" rows="3" 
                                  placeholder="Type your message..." maxlength="5000" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send me-1" viewBox="0 0 16 16">
                            <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/>
                        </svg>
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <!-- Thread List View -->
        @if (Model.Threads.Count == 0)
        {
            <div class="alert alert-light border text-center py-5" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-chat-dots text-muted mb-3" viewBox="0 0 16 16">
                    <path d="M5 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                    <path d="m2.165 15.803.02-.004c1.83-.363 2.948-.842 3.468-1.105A9.06 9.06 0 0 0 8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6a10.437 10.437 0 0 1-.524 2.318l-.003.011a10.722 10.722 0 0 1-.244.637c-.079.186.074.394.273.362a21.673 21.673 0 0 0 .693-.125zm.8-3.108a1 1 0 0 0-.287-.801C1.618 10.83 1 9.468 1 8c0-3.192 3.004-6 7-6s7 2.808 7 6c0 3.193-3.004 6-7 6a8.06 8.06 0 0 1-2.088-.272 1 1 0 0 0-.711.074c-.387.196-1.24.57-2.634.893a10.97 10.97 0 0 0 .398-2z"/>
                </svg>
                <h5 class="text-muted mb-2">No Messages Yet</h5>
                <p class="text-muted mb-0">When you message a seller about an order, it will appear here.</p>
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var thread in Model.Threads)
                {
                    <a asp-page="/Buyer/OrderMessages" asp-route-orderId="@thread.OrderId" asp-route-storeId="@thread.StoreId" 
                       class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1">
                                Order @thread.OrderNumber
                                @if (thread.UnreadCount > 0)
                                {
                                    <span class="badge bg-primary ms-2">@thread.UnreadCount new</span>
                                }
                            </h6>
                            <small class="text-muted">@thread.LastMessageAtDisplay</small>
                        </div>
                        <p class="mb-1 text-muted small">with @thread.StoreName</p>
                        <small class="text-muted">@thread.LastMessagePreview</small>
                    </a>
                }
            </div>
        }
    }
</div>
