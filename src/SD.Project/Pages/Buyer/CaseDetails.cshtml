@page "{caseId:guid}"
@model SD.Project.Pages.Buyer.CaseDetailsModel
@{
    ViewData["Title"] = Model.CaseDetails is not null ? $"Case {Model.CaseDetails.CaseNumber}" : "Case Details";
}

<div class="container py-4">
    @if (Model.CaseDetails is null)
    {
        <div class="text-center py-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-question-circle text-muted mb-3" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286m1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94"/>
            </svg>
            <h4 class="text-muted">Case not found</h4>
            <p class="text-muted">The case you're looking for doesn't exist or you don't have access to it.</p>
            <a asp-page="/Buyer/Cases" class="btn btn-primary mt-3">Back to Cases</a>
        </div>
    }
    else
    {
        var statusClass = SD.Project.ViewModels.ReturnRequestStatusHelper.GetStatusBadgeClass(Model.CaseDetails.Status);
        var statusDisplay = SD.Project.ViewModels.ReturnRequestStatusHelper.GetStatusDisplayName(Model.CaseDetails.Status);
        var statusAlertClass = SD.Project.ViewModels.ReturnRequestStatusHelper.GetStatusAlertClass(Model.CaseDetails.Status);
        var typeDisplay = SD.Project.ViewModels.ReturnRequestStatusHelper.GetTypeDisplayName(Model.CaseDetails.Type);
        
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a asp-page="/Buyer/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-page="/Buyer/Cases">Returns & Complaints</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.CaseDetails.CaseNumber</li>
                    </ol>
                </nav>
                <h1 class="mb-0">Case @Model.CaseDetails.CaseNumber</h1>
            </div>
            <span class="badge @statusClass fs-5">@statusDisplay</span>
        </div>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Status Alert -->
                <div class="alert @statusAlertClass mb-4" role="alert">
                    @switch (Model.CaseDetails.Status)
                    {
                        case "Requested":
                            <h5 class="alert-heading">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-hourglass-split me-2" viewBox="0 0 16 16">
                                    <path d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z"/>
                                </svg>
                                Awaiting Seller Review
                            </h5>
                            <p class="mb-0">Your request is being reviewed by the seller. They will respond as soon as possible.</p>
                            break;
                        case "Approved":
                            <h5 class="alert-heading">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                    <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                                </svg>
                                Request Approved
                            </h5>
                            <p class="mb-0">Your request has been approved by the seller. Please follow any instructions provided below.</p>
                            break;
                        case "Rejected":
                            <h5 class="alert-heading">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle me-2" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                                </svg>
                                Request Rejected
                            </h5>
                            <p class="mb-0">Unfortunately, your request was rejected. Please see the seller's response below for more information.</p>
                            break;
                        case "Completed":
                            <h5 class="alert-heading">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill me-2" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                </svg>
                                Case Resolved
                            </h5>
                            <p class="mb-0">This case has been fully resolved. Thank you for your patience.</p>
                            break;
                    }
                </div>

                <!-- Request Details -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-file-text me-2" viewBox="0 0 16 16">
                                <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5M5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1z"/>
                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1"/>
                            </svg>
                            Request Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Reason</h6>
                                <p class="mb-0 fw-bold">@Model.CaseDetails.Reason</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">Submitted On</h6>
                                <p class="mb-0">@Model.CaseDetails.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.CaseDetails.Comments))
                        {
                            <div class="mb-0">
                                <h6 class="text-muted mb-1">Your Description</h6>
                                <div class="bg-light p-3 rounded">
                                    @Model.CaseDetails.Comments
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Seller Response -->
                @if (!string.IsNullOrEmpty(Model.CaseDetails.SellerResponse))
                {
                    <div class="card mb-4 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chat-left-text me-2" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                    <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5M3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6m0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5"/>
                                </svg>
                                Seller's Response
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.CaseDetails.SellerResponse</p>
                        </div>
                    </div>
                }

                <!-- Resolution Information -->
                @if (Model.CaseDetails.ResolutionType != null)
                {
                    var resolutionDisplayName = SD.Project.ViewModels.ReturnRequestStatusHelper.GetResolutionTypeDisplayName(Model.CaseDetails.ResolutionType);
                    var resolutionBadgeClass = SD.Project.ViewModels.ReturnRequestStatusHelper.GetResolutionTypeBadgeClass(Model.CaseDetails.ResolutionType);
                    
                    <div class="card mb-4 border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle-fill me-2" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                </svg>
                                Resolution
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-1">Decision</h6>
                                    <p class="mb-0">
                                        <span class="badge @resolutionBadgeClass fs-6">@resolutionDisplayName</span>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-1">Resolved On</h6>
                                    <p class="mb-0">@Model.CaseDetails.ResolvedAt?.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                                </div>
                            </div>
                            
                            @if (Model.CaseDetails.ResolutionType == "PartialRefund" && Model.CaseDetails.PartialRefundAmount.HasValue)
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted mb-1">Refund Amount</h6>
                                    <p class="mb-0 fw-bold text-success fs-5">
                                        @(Model.CaseDetails.LinkedRefunds?.FirstOrDefault()?.Currency ?? "USD") @Model.CaseDetails.PartialRefundAmount.Value.ToString("N2")
                                    </p>
                                </div>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.CaseDetails.ResolutionNotes))
                            {
                                <div class="mb-0">
                                    <h6 class="text-muted mb-1">Seller's Notes</h6>
                                    <div class="bg-light p-3 rounded">
                                        @Model.CaseDetails.ResolutionNotes
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Items in Request -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag me-2" viewBox="0 0 16 16">
                                <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                            </svg>
                            Items in Request
                        </h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CaseDetails.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Linked Refunds -->
                @if (Model.CaseDetails.LinkedRefunds is not null && Model.CaseDetails.LinkedRefunds.Count > 0)
                {
                    <div class="card mb-4 border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-currency-dollar me-2" viewBox="0 0 16 16">
                                    <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73z"/>
                                </svg>
                                Refund Information
                            </h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Refund ID</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-end">Amount</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var refund in Model.CaseDetails.LinkedRefunds)
                                    {
                                        var refundStatusClass = refund.Status switch
                                        {
                                            "Completed" => "bg-success",
                                            "Pending" => "bg-warning",
                                            "Processing" => "bg-info",
                                            "Failed" => "bg-danger",
                                            "Rejected" => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(refund.RefundTransactionId))
                                                {
                                                    <code>@refund.RefundTransactionId</code>
                                                }
                                                else
                                                {
                                                    <code>@refund.RefundId.ToString()[..8]...</code>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @refundStatusClass">@refund.Status</span>
                                            </td>
                                            <td class="text-end fw-bold text-success">@refund.Currency @refund.Amount.ToString("N2")</td>
                                            <td>
                                                @if (refund.CompletedAt.HasValue)
                                                {
                                                    @refund.CompletedAt.Value.ToString("MMM dd, yyyy")
                                                }
                                                else
                                                {
                                                    @refund.CreatedAt.ToString("MMM dd, yyyy")
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <!-- Messaging Thread -->
                <div class="card mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chat-dots me-2" viewBox="0 0 16 16">
                                <path d="M5 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0m4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0m3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2"/>
                                <path d="m2.165 15.803.02-.004c1.83-.363 2.948-.842 3.468-1.105A9 9 0 0 0 8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6a10.4 10.4 0 0 1-.524 2.318l-.003.011a11 11 0 0 1-.244.637c-.079.186.074.394.273.362a22 22 0 0 0 .693-.125m.8-3.108a1 1 0 0 0-.287-.801C1.618 10.83 1 9.468 1 8c0-3.192 3.004-6 7-6s7 2.808 7 6-3.004 6-7 6a8 8 0 0 1-2.088-.272 1 1 0 0 0-.711.074c-.387.196-1.24.57-2.634.893a11 11 0 0 0 .398-2"/>
                            </svg>
                            Messages
                            @if (Model.MessageThread?.UnreadCount > 0)
                            {
                                <span class="badge bg-danger ms-2">@Model.MessageThread.UnreadCount new</span>
                            }
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Message Thread -->
                        <div class="message-thread mb-3" style="max-height: 400px; overflow-y: auto;">
                            @if (Model.MessageThread?.Messages.Count > 0)
                            {
                                foreach (var message in Model.MessageThread.Messages)
                                {
                                    var alignClass = message.IsCurrentUser ? "text-end" : "";
                                    var bubbleClass = message.IsCurrentUser ? "bg-primary text-white" : "bg-light";
                                    var marginClass = message.IsCurrentUser ? "ms-auto" : "me-auto";
                                    
                                    <div class="mb-3 @alignClass">
                                        <div class="d-inline-block p-3 rounded-3 @bubbleClass @marginClass" style="max-width: 75%;">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <strong class="small">@message.SenderName</strong>
                                                @if (!message.IsCurrentUser)
                                                {
                                                    <span class="badge @SD.Project.ViewModels.ReturnRequestStatusHelper.GetSenderRoleBadgeClass(message.SenderRole) ms-2 small">@message.SenderRole</span>
                                                }
                                            </div>
                                            <p class="mb-1" style="white-space: pre-wrap;">@message.Content</p>
                                            <small class="@(message.IsCurrentUser ? "text-white-50" : "text-muted")">
                                                @message.SentAt.ToString("MMM dd, h:mm tt")
                                                @if (message.IsCurrentUser && message.IsRead)
                                                {
                                                    <span class="ms-1">âœ“</span>
                                                }
                                            </small>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-chat-left mb-2" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                    </svg>
                                    <p class="mb-0">No messages yet. Start the conversation by sending a message below.</p>
                                </div>
                            }
                        </div>

                        <!-- Send Message Form -->
                        <form method="post" asp-page-handler="SendMessage">
                            <input type="hidden" name="CaseId" value="@Model.CaseDetails.ReturnRequestId" />
                            <div class="mb-3">
                                <label for="MessageContent" class="form-label visually-hidden">Message</label>
                                <textarea class="form-control" id="MessageContent" name="MessageContent" rows="3" 
                                          placeholder="Type your message here... (avoid sharing personal contact details like email or phone)"
                                          maxlength="5000" required></textarea>
                                <div class="form-text">
                                    <small class="text-muted">Messages are visible to the seller and platform administrators.</small>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send me-2" viewBox="0 0 16 16">
                                        <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
                                    </svg>
                                    Send Message
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                @if (TempData["MessageSuccess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["MessageSuccess"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["MessageError"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["MessageError"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Actions -->
                <div class="d-flex justify-content-between">
                    <a asp-page="/Buyer/Cases" class="btn btn-outline-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                        </svg>
                        Back to Cases
                    </a>
                    <a asp-page="/Buyer/OrderDetails" asp-route-orderId="@Model.CaseDetails.OrderId" class="btn btn-outline-primary">
                        View Original Order
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right ms-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 1rem;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Case Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Case Number</small>
                            <p class="mb-0 fw-bold">@Model.CaseDetails.CaseNumber</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Type</small>
                            <p class="mb-0">@typeDisplay</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Order Number</small>
                            <p class="mb-0">
                                <a asp-page="/Buyer/OrderDetails" asp-route-orderId="@Model.CaseDetails.OrderId" class="text-decoration-none">
                                    @Model.CaseDetails.OrderNumber
                                </a>
                            </p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Seller</small>
                            <p class="mb-0">@Model.CaseDetails.StoreName</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Status</small>
                            <p class="mb-0">
                                <span class="badge @statusClass">@statusDisplay</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Submitted</small>
                            <p class="mb-0">@Model.CaseDetails.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                        @if (Model.CaseDetails.ApprovedAt.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Approved</small>
                                <p class="mb-0">@Model.CaseDetails.ApprovedAt.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                        @if (Model.CaseDetails.RejectedAt.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Rejected</small>
                                <p class="mb-0">@Model.CaseDetails.RejectedAt.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                        @if (Model.CaseDetails.CompletedAt.HasValue)
                        {
                            <div class="mb-0">
                                <small class="text-muted">Completed</small>
                                <p class="mb-0">@Model.CaseDetails.CompletedAt.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                        @if (Model.CaseDetails.ResolutionType != null)
                        {
                            var resolutionDisplayName = SD.Project.ViewModels.ReturnRequestStatusHelper.GetResolutionTypeDisplayName(Model.CaseDetails.ResolutionType);
                            var resolutionBadgeClass = SD.Project.ViewModels.ReturnRequestStatusHelper.GetResolutionTypeBadgeClass(Model.CaseDetails.ResolutionType);
                            <hr>
                            <div class="mb-0">
                                <small class="text-muted">Resolution</small>
                                <p class="mb-0">
                                    <span class="badge @resolutionBadgeClass">@resolutionDisplayName</span>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
