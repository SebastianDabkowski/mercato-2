@page
@model SD.Project.Pages.Buyer.CheckoutModel
@{
    ViewData["Title"] = "Checkout - Delivery Address";
}

<div class="container py-4">
    <!-- Breadcrumb Progress -->
    <nav aria-label="Checkout progress" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="/Buyer/Cart">Cart</a>
            </li>
            <li class="breadcrumb-item active" aria-current="step">
                <strong>Delivery Address</strong>
            </li>
            <li class="breadcrumb-item text-muted">Shipping</li>
            <li class="breadcrumb-item text-muted">Payment</li>
            <li class="breadcrumb-item text-muted">Confirmation</li>
        </ol>
    </nav>

    <h1 class="mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-geo-alt me-2" viewBox="0 0 16 16">
            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
        </svg>
        Delivery Address
    </h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.CartSummary is null || Model.CartSummary.TotalItemCount == 0)
    {
        <div class="alert alert-warning">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
            </svg>
            Your cart is empty. Please add items before checking out.
            <a asp-page="/Buyer/Search" class="alert-link">Browse products</a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Address Section -->
            <div class="col-lg-8">
                @if (Model.SavedAddresses.Any())
                {
                    <!-- Saved Addresses -->
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bookmark me-2" viewBox="0 0 16 16">
                                    <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"/>
                                </svg>
                                Saved Addresses
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                @foreach (var address in Model.SavedAddresses)
                                {
                                    <div class="col-md-6">
                                        <div class="card h-100 @(Model.SelectedAddressId == address.Id ? "border-primary" : "")" style="cursor: pointer;" tabindex="0" role="button" aria-pressed="@(Model.SelectedAddressId == address.Id ? "true" : "false")" onclick="selectAddress('@address.Id')" onkeydown="if(event.key === 'Enter' || event.key === ' ') { event.preventDefault(); selectAddress('@address.Id'); }">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <div>
                                                        @if (!string.IsNullOrEmpty(address.Label))
                                                        {
                                                            <span class="badge bg-secondary me-2">@address.Label</span>
                                                        }
                                                        @if (address.IsDefault)
                                                        {
                                                            <span class="badge bg-primary">Default</span>
                                                        }
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="selectedAddress" id="addr_@address.Id" value="@address.Id" @(Model.SelectedAddressId == address.Id ? "checked" : "") onchange="selectAddress('@address.Id')" aria-label="Select address for @address.RecipientName at @address.Street">
                                                    </div>
                                                </div>
                                                <h6 class="card-title">@address.RecipientName</h6>
                                                <p class="card-text small text-muted mb-1">
                                                    @address.Street<br>
                                                    @if (!string.IsNullOrEmpty(address.Street2))
                                                    {
                                                        @address.Street2<br>
                                                    }
                                                    @address.City@(string.IsNullOrEmpty(address.State) ? "" : ", " + address.State) @address.PostalCode<br>
                                                    @address.Country
                                                </p>
                                                @if (!string.IsNullOrEmpty(address.PhoneNumber))
                                                {
                                                    <p class="card-text small text-muted mb-0">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-telephone me-1" viewBox="0 0 16 16">
                                                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.6 17.6 0 0 0 4.168 6.608 17.6 17.6 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.68.68 0 0 0-.58-.122l-2.19.547a1.75 1.75 0 0 1-1.657-.459L5.482 8.062a1.75 1.75 0 0 1-.46-1.657l.548-2.19a.68.68 0 0 0-.122-.58zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"/>
                                                        </svg>
                                                        @address.PhoneNumber
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- New Address Form -->
                <div class="card mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                            </svg>
                            @(Model.SavedAddresses.Any() ? "Or Enter a New Address" : "Enter Delivery Address")
                        </h5>
                        @if (Model.SavedAddresses.Any())
                        {
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="toggleNewAddressForm()">
                                <span id="toggleText">Show Form</span>
                            </button>
                        }
                    </div>
                    <div class="card-body @(Model.SavedAddresses.Any() && Model.SelectedAddressId.HasValue ? "d-none" : "")" id="newAddressForm">
                        <form method="post" asp-page-handler="SaveAddress">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="AddressInput.RecipientName" class="form-label">Recipient Name *</label>
                                    <input asp-for="AddressInput.RecipientName" class="form-control" placeholder="Full name of the recipient">
                                    <span asp-validation-for="AddressInput.RecipientName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="AddressInput.PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="AddressInput.PhoneNumber" class="form-control" placeholder="+1 (555) 123-4567">
                                    <span asp-validation-for="AddressInput.PhoneNumber" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="AddressInput.Street" class="form-label">Street Address *</label>
                                    <input asp-for="AddressInput.Street" class="form-control" placeholder="123 Main Street">
                                    <span asp-validation-for="AddressInput.Street" class="text-danger small"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="AddressInput.Street2" class="form-label">Apartment, Suite, Unit, etc.</label>
                                    <input asp-for="AddressInput.Street2" class="form-control" placeholder="Apt 4B">
                                    <span asp-validation-for="AddressInput.Street2" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="AddressInput.City" class="form-label">City *</label>
                                    <input asp-for="AddressInput.City" class="form-control" placeholder="New York">
                                    <span asp-validation-for="AddressInput.City" class="text-danger small"></span>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="AddressInput.State" class="form-label">State/Province</label>
                                    <input asp-for="AddressInput.State" class="form-control" placeholder="NY">
                                    <span asp-validation-for="AddressInput.State" class="text-danger small"></span>
                                </div>

                                <div class="col-md-3">
                                    <label asp-for="AddressInput.PostalCode" class="form-label">Postal Code *</label>
                                    <input asp-for="AddressInput.PostalCode" class="form-control" placeholder="10001">
                                    <span asp-validation-for="AddressInput.PostalCode" class="text-danger small"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="AddressInput.Country" class="form-label">Country *</label>
                                    <select asp-for="AddressInput.Country" class="form-select">
                                        <option value="">Select a country...</option>
                                        <option value="United States">United States</option>
                                        <option value="Canada">Canada</option>
                                        <option value="United Kingdom">United Kingdom</option>
                                        <option value="Germany">Germany</option>
                                        <option value="France">France</option>
                                        <option value="Spain">Spain</option>
                                        <option value="Italy">Italy</option>
                                        <option value="Netherlands">Netherlands</option>
                                        <option value="Belgium">Belgium</option>
                                        <option value="Poland">Poland</option>
                                        <option value="Australia">Australia</option>
                                    </select>
                                    <span asp-validation-for="AddressInput.Country" class="text-danger small"></span>
                                </div>

                                @if (Model.IsAuthenticated)
                                {
                                    <div class="col-md-6">
                                        <label asp-for="AddressInput.Label" class="form-label">Address Label</label>
                                        <input asp-for="AddressInput.Label" class="form-control" placeholder="e.g., Home, Work">
                                        <span asp-validation-for="AddressInput.Label" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-check">
                                            <input asp-for="AddressInput.SetAsDefault" class="form-check-input" type="checkbox">
                                            <label asp-for="AddressInput.SetAsDefault" class="form-check-label">
                                                Set as my default delivery address
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="AddressInput.SaveToProfile" class="form-check-input" type="checkbox" checked>
                                            <label asp-for="AddressInput.SaveToProfile" class="form-check-label">
                                                Save this address for future orders
                                            </label>
                                        </div>
                                    </div>
                                }

                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg me-2" viewBox="0 0 16 16">
                                            <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/>
                                        </svg>
                                        Use This Address
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                @if (Model.SavedAddresses.Any() && Model.SelectedAddressId.HasValue)
                {
                    <form method="post" asp-page-handler="UseSelectedAddress">
                        <input type="hidden" asp-for="SelectedAddressId" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="/Buyer/Cart" class="btn btn-outline-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                                </svg>
                                Back to Cart
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                Continue to Shipping
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right ms-2" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
                                </svg>
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="d-flex justify-content-between">
                        <a asp-page="/Buyer/Cart" class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                            </svg>
                            Back to Cart
                        </a>
                    </div>
                }
            </div>

            <!-- Order Summary Sidebar -->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 1rem;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items (@Model.CartSummary.TotalItemCount)</span>
                            <span>@Model.CartSummary.Currency @Model.CartSummary.Subtotal.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            @if (Model.CartSummary.ShippingTotal > 0)
                            {
                                <span>@Model.CartSummary.Currency @Model.CartSummary.ShippingTotal.ToString("N2")</span>
                            }
                            else
                            {
                                <span class="text-muted">Calculated after address</span>
                            }
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fw-bold fs-5">Total</span>
                            <span class="fw-bold fs-5 text-primary">@Model.CartSummary.Currency @Model.CartSummary.TotalAmount.ToString("N2")</span>
                        </div>

                        @if (Model.SelectedAddress is not null)
                        {
                            <div class="bg-light p-3 rounded mb-3">
                                <h6 class="mb-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt me-2" viewBox="0 0 16 16">
                                        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                                        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                    </svg>
                                    Shipping To
                                </h6>
                                <p class="small mb-0">
                                    @Model.SelectedAddress.RecipientName<br>
                                    @Model.SelectedAddress.FormattedAddress
                                </p>
                            </div>
                        }

                        <div class="alert alert-info small mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-shield-check me-1" viewBox="0 0 16 16">
                                <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56"/>
                                <path d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                            </svg>
                            Secure checkout - your data is protected
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function selectAddress(addressId) {
            const radio = document.getElementById('addr_' + addressId);
            if (radio) {
                radio.checked = true;
            }

            // Update hidden field
            const hiddenField = document.querySelector('input[name="SelectedAddressId"]');
            if (hiddenField) {
                hiddenField.value = addressId;
            }

            // Highlight selected card
            document.querySelectorAll('.card.h-100').forEach(card => {
                card.classList.remove('border-primary');
            });
            const selectedCard = radio.closest('.card');
            if (selectedCard) {
                selectedCard.classList.add('border-primary');
            }

            // Hide new address form when an existing address is selected
            const newAddressForm = document.getElementById('newAddressForm');
            if (newAddressForm) {
                newAddressForm.classList.add('d-none');
                document.getElementById('toggleText').textContent = 'Show Form';
            }
        }

        function toggleNewAddressForm() {
            const form = document.getElementById('newAddressForm');
            const toggleText = document.getElementById('toggleText');
            if (form.classList.contains('d-none')) {
                form.classList.remove('d-none');
                toggleText.textContent = 'Hide Form';

                // Deselect saved addresses when showing the form
                document.querySelectorAll('input[name="selectedAddress"]').forEach(radio => {
                    radio.checked = false;
                });
                document.querySelectorAll('.card.h-100').forEach(card => {
                    card.classList.remove('border-primary');
                });
            } else {
                form.classList.add('d-none');
                toggleText.textContent = 'Show Form';
            }
        }
    </script>
}
