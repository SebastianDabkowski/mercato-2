@page
@model SD.Project.Pages.Buyer.CasesModel
@{
    ViewData["Title"] = "Returns & Complaints";
    var hasFilters = !string.IsNullOrEmpty(Model.Status) || Model.FromDate.HasValue || Model.ToDate.HasValue;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Returns & Complaints</h1>
            <p class="text-muted mb-0">Track your return requests and complaints</p>
        </div>
        <a asp-page="/Buyer/Dashboard" class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
            </svg>
            Back to Dashboard
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Success"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filters Card -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h6 class="mb-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel me-2" viewBox="0 0 16 16">
                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                </svg>
                Filter Cases
            </h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="Status">
                        <option value="">All Statuses</option>
                        <option value="Requested" selected="@(Model.Status == "Requested")">Pending seller review</option>
                        <option value="Approved" selected="@(Model.Status == "Approved")">Approved</option>
                        <option value="Rejected" selected="@(Model.Status == "Rejected")">Rejected</option>
                        <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" class="form-control" id="fromDate" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" class="form-control" id="toDate" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search me-1" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg>
                        Filter
                    </button>
                    @if (hasFilters)
                    {
                        <a asp-page="/Buyer/Cases" class="btn btn-outline-secondary" title="Clear Filters">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                            </svg>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (Model.Cases.Count == 0 && !hasFilters)
    {
        <div class="text-center py-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-inbox text-muted mb-3" viewBox="0 0 16 16">
                <path d="M4.98 4a.5.5 0 0 0-.39.188L1.54 8H6a.5.5 0 0 1 .5.5 1.5 1.5 0 1 0 3 0A.5.5 0 0 1 10 8h4.46l-3.05-3.812A.5.5 0 0 0 11.02 4zm9.954 5H10.45a2.5 2.5 0 0 1-4.9 0H1.066l.32 2.562a.5.5 0 0 0 .497.438h12.234a.5.5 0 0 0 .496-.438zM3.809 3.563A1.5 1.5 0 0 1 4.981 3h6.038a1.5 1.5 0 0 1 1.172.563l3.7 4.625a.5.5 0 0 1 .105.374l-.39 3.124A1.5 1.5 0 0 1 14.117 13H1.883a1.5 1.5 0 0 1-1.489-1.314l-.39-3.124a.5.5 0 0 1 .106-.374z"/>
            </svg>
            <h4 class="text-muted">No cases yet</h4>
            <p class="text-muted mb-3">You haven't submitted any return requests or complaints.</p>
            <a asp-page="/Buyer/Orders" class="btn btn-primary">View Your Orders</a>
        </div>
    }
    else if (Model.Cases.Count == 0 && hasFilters)
    {
        <div class="text-center py-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-search text-muted mb-3" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
            </svg>
            <h4 class="text-muted">No cases match your filters</h4>
            <p class="text-muted">Try adjusting your filter criteria or clear filters to see all cases.</p>
            <a asp-page="/Buyer/Cases" class="btn btn-outline-primary mt-2">Clear Filters</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-light">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-return-left me-2" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
                            </svg>
                            Your Cases (@Model.Cases.Count)
                            @if (hasFilters)
                            {
                                <span class="badge bg-info ms-2">Filtered</span>
                            }
                        </h5>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Case #</th>
                                <th scope="col">Order</th>
                                <th scope="col">Seller</th>
                                <th scope="col" class="text-center">Type</th>
                                <th scope="col">Created</th>
                                <th scope="col" class="text-center">Status</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var caseItem in Model.Cases)
                            {
                                var statusClass = SD.Project.ViewModels.ReturnRequestStatusHelper.GetStatusBadgeClass(caseItem.Status);
                                var statusDisplay = SD.Project.ViewModels.ReturnRequestStatusHelper.GetStatusDisplayName(caseItem.Status);
                                var typeDisplay = SD.Project.ViewModels.ReturnRequestStatusHelper.GetTypeDisplayName(caseItem.Type);
                                var typeClass = caseItem.Type == "Return" ? "bg-secondary" : "bg-primary";
                                
                                <tr>
                                    <td>
                                        <a asp-page="/Buyer/CaseDetails" asp-route-caseId="@caseItem.ReturnRequestId" class="fw-bold text-decoration-none">
                                            @caseItem.CaseNumber
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-page="/Buyer/OrderDetails" asp-route-orderId="@caseItem.OrderId" class="text-decoration-none">
                                            @caseItem.OrderNumber
                                        </a>
                                    </td>
                                    <td>@caseItem.StoreName</td>
                                    <td class="text-center">
                                        <span class="badge @typeClass">@typeDisplay</span>
                                    </td>
                                    <td>@caseItem.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td class="text-center">
                                        <span class="badge @statusClass">@statusDisplay</span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="/Buyer/CaseDetails" asp-route-caseId="@caseItem.ReturnRequestId" class="btn btn-sm btn-outline-primary">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
