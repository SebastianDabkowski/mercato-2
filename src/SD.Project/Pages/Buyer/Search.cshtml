@page
@model SD.Project.Pages.Buyer.SearchModel
@using SD.Project.Application.Queries
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.SearchTerm) ? "Search Products" : $"Search: {Model.SearchTerm}";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Search</li>
    </ol>
</nav>

<h1>Search Products</h1>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="q" class="form-control form-control-lg" placeholder="Search for products..."
               value="@Model.SearchTerm" aria-label="Search products">
        <button class="btn btn-primary" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
            Search
        </button>
    </div>

    <!-- Filter Panel -->
    <div class="card mt-3">
        <div class="card-header d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#filterPanel" role="button" aria-expanded="false" aria-controls="filterPanel">
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel me-2" viewBox="0 0 16 16">
                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
                </svg>
                Filters
                @if (Model.HasActiveFilters)
                {
                    <span class="badge bg-primary ms-2">Active</span>
                }
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
            </svg>
        </div>
        <div class="collapse @(Model.HasActiveFilters ? "show" : "")" id="filterPanel">
            <div class="card-body">
                <div class="row g-3">
                    <!-- Category Filter -->
                    <div class="col-md-3">
                        <label for="CategoryFilter" class="form-label">Category</label>
                        <select name="CategoryFilter" id="CategoryFilter" class="form-select">
                            <option value="">All Categories</option>
                            @foreach (var category in Model.AllCategories)
                            {
                                <option value="@category.Name" selected="@(Model.Filters.Category == category.Name)">@category.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Price Range -->
                    <div class="col-md-3">
                        <label for="MinPrice" class="form-label">Min Price</label>
                        <input type="number" name="MinPrice" id="MinPrice" class="form-control" step="0.01" min="0"
                               placeholder="0.00" value="@Model.Filters.MinPrice">
                    </div>
                    <div class="col-md-3">
                        <label for="MaxPrice" class="form-label">Max Price</label>
                        <input type="number" name="MaxPrice" id="MaxPrice" class="form-control" step="0.01" min="0"
                               placeholder="No limit" value="@Model.Filters.MaxPrice">
                    </div>

                    <!-- Seller/Store Filter -->
                    <div class="col-md-3">
                        <label for="StoreId" class="form-label">Seller</label>
                        <select name="StoreId" id="StoreId" class="form-select">
                            <option value="">All Sellers</option>
                            @foreach (var store in Model.AvailableStores)
                            {
                                <option value="@store.Id" selected="@(Model.Filters.StoreId == store.Id)">@store.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    @if (Model.HasActiveFilters)
                    {
                        <a asp-page="/Buyer/Search" asp-route-q="@Model.SearchTerm" asp-route-ClearFilters="true" class="btn btn-outline-secondary">
                            Clear All Filters
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@{
    var hasSearchOrFilters = !string.IsNullOrEmpty(Model.SearchTerm) || Model.HasActiveFilters;
    var currentSort = Model.SortBy ?? ProductSortOption.Relevance;
}

@if (hasSearchOrFilters)
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">
            @if (Model.Products.Any())
            {
                <text>Found @Model.Products.Count result(s)</text>
                if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <text> for "<strong>@Model.SearchTerm</strong>"</text>
                }
                if (Model.HasActiveFilters)
                {
                    <text> with filters applied</text>
                }
            }
            else
            {
                <text>No results found</text>
                if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <text> for "<strong>@Model.SearchTerm</strong>"</text>
                }
                if (Model.HasActiveFilters)
                {
                    <text> with the selected filters</text>
                }
            }
        </p>

        @if (Model.Products.Any())
        {
            <div class="d-flex align-items-center gap-2">
                <label for="sortSelect" class="form-label mb-0 text-nowrap">Sort by:</label>
                <select id="sortSelect" class="form-select form-select-sm" style="width: auto;" onchange="applySorting(this.value)">
                    <option value="Relevance" selected="@(currentSort == ProductSortOption.Relevance)">Relevance</option>
                    <option value="PriceAscending" selected="@(currentSort == ProductSortOption.PriceAscending)">Price: Low to High</option>
                    <option value="PriceDescending" selected="@(currentSort == ProductSortOption.PriceDescending)">Price: High to Low</option>
                    <option value="Newest" selected="@(currentSort == ProductSortOption.Newest)">Newest</option>
                </select>
            </div>
        }
    </div>

    @if (Model.Products.Any())
    {
        <section>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(product.MainImageThumbnailUrl))
                            {
                                <img src="@product.MainImageThumbnailUrl" class="card-img-top" alt="@product.Name">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                    <span class="text-muted">No Image</span>
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text text-muted">@(string.IsNullOrEmpty(product.Description) ? "" : (product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description))</p>
                                <p class="card-text">
                                    <strong>@product.Currency @product.Amount.ToString("N2")</strong>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">Category: @product.Category</small>
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                @if (product.Stock > 0)
                                {
                                    <span class="badge bg-success">In Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No Products Found</h4>
            <p>We couldn't find any products matching your criteria.</p>
            <hr>
            @if (Model.HasActiveFilters)
            {
                <p class="mb-0">
                    <a asp-page="/Buyer/Search" asp-route-q="@Model.SearchTerm" asp-route-ClearFilters="true" class="alert-link">
                        Clear all filters
                    </a> to see more results.
                </p>
            }
            else
            {
                <p class="mb-0">Suggestions:</p>
                <ul class="mb-0">
                    <li>Check your spelling</li>
                    <li>Try using different or more general keywords</li>
                    <li>Try using fewer keywords</li>
                    <li><a asp-page="/Buyer/Category" asp-route-id="" class="alert-link">Browse all categories</a></li>
                </ul>
            }
        </div>
    }
}
else
{
    <div class="alert alert-secondary" role="alert">
        <h4 class="alert-heading">Start Your Search</h4>
        <p class="mb-0">Enter a keyword above to find products by name or description, or use the filters to narrow down results.</p>
    </div>

    @if (Model.RootCategories.Any())
    {
        <section class="mt-4">
            <h5>Or browse by category</h5>
            <div class="d-flex flex-wrap gap-2 mt-3">
                @foreach (var category in Model.RootCategories)
                {
                    <a asp-page="/Buyer/Category" asp-route-id="@category.Id" class="btn btn-outline-primary">
                        @category.Name
                    </a>
                }
            </div>
        </section>
    }
}

@section Scripts {
    <script>
        function applySorting(sortValue) {
            const url = new URL(window.location.href);
            url.searchParams.set('SortBy', sortValue);
            window.location.href = url.toString();
        }
    </script>
}
