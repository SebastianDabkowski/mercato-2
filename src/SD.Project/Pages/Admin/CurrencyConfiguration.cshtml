@page
@model SD.Project.Pages.Admin.CurrencyConfigurationModel
@{
    ViewData["Title"] = "Currency Configuration";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Currency Configuration</h1>
            <p class="text-muted mb-0">Manage available currencies and base currency for the platform.</p>
        </div>
        <div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCurrencyModal">
                <i class="bi bi-plus-lg me-1"></i> Add Currency
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.WarningMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@Model.WarningMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Base Currency Card -->
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-currency-exchange me-2"></i>Base Currency</h5>
        </div>
        <div class="card-body">
            @if (Model.BaseCurrency is not null)
            {
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h4 class="mb-1">@Model.BaseCurrency.Symbol @Model.BaseCurrency.Code</h4>
                        <p class="text-muted mb-0">@Model.BaseCurrency.Name</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small class="text-muted">All prices and exchange rates are relative to this currency.</small>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-3">
                    <p class="text-muted mb-2">No base currency configured</p>
                    <small class="text-muted">Add a currency and set it as the base currency to enable pricing calculations.</small>
                </div>
            }
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title mb-0">@Model.Currencies.Count</h3>
                    <p class="card-text text-muted mb-0">Total Currencies</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title mb-0 text-success">@Model.Currencies.Count(c => c.IsEnabled)</h3>
                    <p class="card-text text-muted mb-0">Enabled</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title mb-0 text-secondary">@Model.Currencies.Count(c => !c.IsEnabled)</h3>
                    <p class="card-text text-muted mb-0">Disabled</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title mb-0 text-warning">@Model.Currencies.Count(c => c.IsExchangeRateStale && !c.IsBaseCurrency)</h3>
                    <p class="card-text text-muted mb-0">Stale Rates</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Currencies.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">No currencies configured</h4>
                <p class="text-muted">Set up currencies to enable multi-currency support for the platform.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCurrencyModal">
                    Add Your First Currency
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">All Currencies</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Currency</th>
                                <th>Symbol</th>
                                <th>Decimals</th>
                                <th>Exchange Rate</th>
                                <th>Status</th>
                                <th>Last Updated</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var currency in Model.Currencies)
                            {
                                <tr class="@(currency.IsBaseCurrency ? "table-primary" : "")">
                                    <td>
                                        <strong>@currency.Code</strong>
                                        <br />
                                        <small class="text-muted">@currency.Name</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark fs-6">@currency.Symbol</span>
                                    </td>
                                    <td>@currency.DecimalPlaces</td>
                                    <td>
                                        <span class="@(currency.IsExchangeRateStale && !currency.IsBaseCurrency ? "text-warning" : "")">
                                            @currency.ExchangeRateDisplay
                                        </span>
                                        @if (!currency.IsBaseCurrency)
                                        {
                                            <br />
                                            <small class="text-muted">
                                                @if (currency.ExchangeRateSource is not null)
                                                {
                                                    <span>@currency.ExchangeRateSource</span>
                                                }
                                                @if (currency.ExchangeRateUpdatedAt.HasValue)
                                                {
                                                    <span>@currency.ExchangeRateUpdatedAt.Value.ToString("MMM d, h:mm tt")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-warning">Never updated</span>
                                                }
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @currency.StatusBadgeClass">@currency.StatusDisplay</span>
                                    </td>
                                    <td>
                                        <small>@currency.LastUpdatedDisplay</small>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button"
                                                    class="btn btn-outline-secondary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#editCurrencyModal"
                                                    data-currency-id="@currency.Id"
                                                    data-currency-code="@currency.Code"
                                                    data-currency-name="@currency.Name"
                                                    data-currency-symbol="@currency.Symbol"
                                                    data-currency-decimals="@currency.DecimalPlaces"
                                                    data-currency-order="@currency.DisplayOrder"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            @if (!currency.IsBaseCurrency)
                                            {
                                                <form method="post" asp-page-handler="ToggleStatus" class="d-inline">
                                                    <input type="hidden" name="currencyId" value="@currency.Id" />
                                                    <button type="submit" class="btn btn-outline-secondary" title="@(currency.IsEnabled ? "Disable" : "Enable")">
                                                        @if (currency.IsEnabled)
                                                        {
                                                            <i class="bi bi-pause-fill"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-play-fill"></i>
                                                        }
                                                    </button>
                                                </form>
                                                @if (currency.IsEnabled)
                                                {
                                                    <form method="post" asp-page-handler="SetBaseCurrency" class="d-inline">
                                                        <input type="hidden" name="currencyId" value="@currency.Id" />
                                                        <button type="submit" class="btn btn-outline-primary" title="Set as Base Currency">
                                                            <i class="bi bi-star"></i>
                                                        </button>
                                                    </form>
                                                }
                                                <button type="button"
                                                        class="btn btn-outline-secondary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#updateRateModal"
                                                        data-currency-id="@currency.Id"
                                                        data-currency-code="@currency.Code"
                                                        data-currency-rate="@currency.ExchangeRate"
                                                        data-currency-source="@currency.ExchangeRateSource"
                                                        title="Update Exchange Rate">
                                                    <i class="bi bi-arrow-repeat"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>

<!-- Create Currency Modal -->
<div class="modal fade" id="createCurrencyModal" tabindex="-1" aria-labelledby="createCurrencyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createCurrencyModalLabel">Add Currency</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Quick Select</label>
                        <select class="form-select" id="quickSelectCurrency">
                            <option value="">Choose a common currency...</option>
                            @foreach (var c in CurrencyConfigurationModel.CommonCurrencies)
                            {
                                <option value="@c.Code|@c.Name|@c.Symbol|@c.Decimals">@c.Code - @c.Name (@c.Symbol)</option>
                            }
                        </select>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="NewCurrency.Code" class="form-label">Code <span class="text-danger">*</span></label>
                            <input asp-for="NewCurrency.Code" class="form-control" id="newCode" placeholder="USD" maxlength="3" />
                            <span asp-validation-for="NewCurrency.Code" class="text-danger"></span>
                            <div class="form-text">ISO 4217 code</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="NewCurrency.Symbol" class="form-label">Symbol <span class="text-danger">*</span></label>
                            <input asp-for="NewCurrency.Symbol" class="form-control" id="newSymbol" placeholder="$" />
                            <span asp-validation-for="NewCurrency.Symbol" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="NewCurrency.DecimalPlaces" class="form-label">Decimals</label>
                            <input asp-for="NewCurrency.DecimalPlaces" class="form-control" id="newDecimals" type="number" min="0" max="8" />
                            <span asp-validation-for="NewCurrency.DecimalPlaces" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCurrency.Name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input asp-for="NewCurrency.Name" class="form-control" id="newName" placeholder="US Dollar" />
                        <span asp-validation-for="NewCurrency.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCurrency.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="NewCurrency.DisplayOrder" class="form-control" type="number" />
                        <div class="form-text">Lower numbers appear first in lists.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Currency</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Currency Modal -->
<div class="modal fade" id="editCurrencyModal" tabindex="-1" aria-labelledby="editCurrencyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCurrencyModalLabel">Edit Currency</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="EditCurrency.CurrencyId" id="editCurrencyId" />
                    <div class="mb-3">
                        <label class="form-label">Currency Code</label>
                        <input type="text" class="form-control" id="editCodeDisplay" readonly />
                        <div class="form-text">Currency code cannot be changed after creation.</div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditCurrency.Symbol" class="form-label">Symbol <span class="text-danger">*</span></label>
                            <input asp-for="EditCurrency.Symbol" class="form-control" id="editSymbol" />
                            <span asp-validation-for="EditCurrency.Symbol" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EditCurrency.DecimalPlaces" class="form-label">Decimals</label>
                            <input asp-for="EditCurrency.DecimalPlaces" class="form-control" id="editDecimals" type="number" min="0" max="8" />
                            <span asp-validation-for="EditCurrency.DecimalPlaces" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditCurrency.Name" class="form-label">Name <span class="text-danger">*</span></label>
                        <input asp-for="EditCurrency.Name" class="form-control" id="editName" />
                        <span asp-validation-for="EditCurrency.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditCurrency.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="EditCurrency.DisplayOrder" class="form-control" id="editDisplayOrder" type="number" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Update Exchange Rate Modal -->
<div class="modal fade" id="updateRateModal" tabindex="-1" aria-labelledby="updateRateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="UpdateExchangeRate">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateRateModalLabel">Update Exchange Rate</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="currencyId" id="rateUpdateCurrencyId" />
                    <div class="mb-3">
                        <label class="form-label">Currency</label>
                        <input type="text" class="form-control" id="rateUpdateCodeDisplay" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Exchange Rate <span class="text-danger">*</span></label>
                        <input type="number" name="rate" class="form-control" id="rateUpdateRate" step="0.000001" min="0.000001" required />
                        <div class="form-text">Rate relative to base currency (@(Model.BaseCurrency?.Code ?? "not set")).</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Source</label>
                        <input type="text" name="source" class="form-control" id="rateUpdateSource" placeholder="e.g., ECB, Manual" />
                        <div class="form-text">Optional. Source of the exchange rate data.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Rate</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Confirm Base Currency Change Modal -->
@if (Model.ShowConfirmationModal && Model.PendingBaseCurrencyId.HasValue)
{
    <div class="modal fade show" id="confirmBaseCurrencyModal" tabindex="-1" aria-labelledby="confirmBaseCurrencyModalLabel" style="display: block;" aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="SetBaseCurrency">
                    <div class="modal-header bg-warning">
                        <h5 class="modal-title" id="confirmBaseCurrencyModalLabel">
                            <i class="bi bi-exclamation-triangle me-2"></i>Confirm Base Currency Change
                        </h5>
                        <a asp-page="/Admin/CurrencyConfiguration" class="btn-close" aria-label="Close"></a>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="currencyId" value="@Model.PendingBaseCurrencyId" />
                        <input type="hidden" name="confirmed" value="true" />
                        <div class="alert alert-warning">
                            <strong>Warning:</strong> @Model.WarningMessage
                        </div>
                        <p>Are you sure you want to proceed with this change?</p>
                    </div>
                    <div class="modal-footer">
                        <a asp-page="/Admin/CurrencyConfiguration" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-warning">Confirm Change</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@section Scripts {
    <script>
        // Quick select currency handler
        document.getElementById('quickSelectCurrency')?.addEventListener('change', function () {
            if (this.value) {
                var parts = this.value.split('|');
                document.getElementById('newCode').value = parts[0];
                document.getElementById('newName').value = parts[1];
                document.getElementById('newSymbol').value = parts[2];
                document.getElementById('newDecimals').value = parts[3];
            }
        });

        // Edit currency modal handler
        document.getElementById('editCurrencyModal')?.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('editCurrencyId').value = button.getAttribute('data-currency-id');
            document.getElementById('editCodeDisplay').value = button.getAttribute('data-currency-code');
            document.getElementById('editName').value = button.getAttribute('data-currency-name');
            document.getElementById('editSymbol').value = button.getAttribute('data-currency-symbol');
            document.getElementById('editDecimals').value = button.getAttribute('data-currency-decimals');
            document.getElementById('editDisplayOrder').value = button.getAttribute('data-currency-order');
        });

        // Update rate modal handler
        document.getElementById('updateRateModal')?.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('rateUpdateCurrencyId').value = button.getAttribute('data-currency-id');
            document.getElementById('rateUpdateCodeDisplay').value = button.getAttribute('data-currency-code');
            document.getElementById('rateUpdateRate').value = button.getAttribute('data-currency-rate');
            document.getElementById('rateUpdateSource').value = button.getAttribute('data-currency-source') || '';
        });
    </script>
}
