@page "{categoryId:guid}"
@model SD.Project.Pages.Admin.CategoryAttributesModel
@using SD.Project.Domain.Entities
@{
    ViewData["Title"] = $"Attribute Templates - {Model.Category?.Name}";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Admin/Categories">Categories</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Category?.Name</li>
                </ol>
            </nav>
            <h1>Attribute Templates</h1>
            <p class="text-muted mb-0">
                Manage attribute templates for <strong>@Model.Category?.Name</strong>. 
                These attributes define the structured fields sellers must fill when creating products in this category.
            </p>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAttributeModal">
            <i class="bi bi-plus-lg me-1"></i> Add Attribute
        </button>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Attributes.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">No attribute templates yet</h4>
                <p class="text-muted">Define attributes that sellers must fill when creating products in this category.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAttributeModal">
                    Add Your First Attribute
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 20%">Attribute Name</th>
                                <th>Type</th>
                                <th>Required</th>
                                <th>List Values</th>
                                <th class="text-center">Order</th>
                                <th>Shared</th>
                                <th class="text-center">Status</th>
                                <th class="text-end">Created</th>
                                <th class="text-center" style="width: 180px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attr in Model.Attributes)
                            {
                                <tr class="@(attr.IsDeprecated ? "table-warning" : "")">
                                    <td>
                                        <strong>@attr.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@attr.TypeDisplay</span>
                                    </td>
                                    <td>
                                        <span class="badge @attr.RequiredBadgeClass">@attr.RequiredDisplay</span>
                                    </td>
                                    <td>
                                        @if (attr.Type == AttributeType.List && !string.IsNullOrWhiteSpace(attr.ListValues))
                                        {
                                            <small class="text-muted">
                                                @(attr.ListValues!.Length > 50 ? attr.ListValues.Substring(0, 50) + "..." : attr.ListValues)
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="text-center">@attr.DisplayOrder</td>
                                    <td>
                                        @if (attr.IsLinkedToShared)
                                        {
                                            <span class="badge bg-primary" title="Linked to shared attribute">
                                                <i class="bi bi-link-45deg"></i> @attr.SharedAttributeName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @attr.StatusBadgeClass">@attr.StatusDisplay</span>
                                    </td>
                                    <td class="text-end">@attr.CreatedAt.ToString("MMM d, yyyy")</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-primary me-1"
                                                data-bs-toggle="modal" data-bs-target="#editAttributeModal"
                                                data-attribute-id="@attr.Id"
                                                data-attribute-name="@attr.Name"
                                                data-attribute-type="@((int)attr.Type)"
                                                data-attribute-required="@attr.IsRequired.ToString().ToLower()"
                                                data-attribute-listvalues="@(attr.ListValues ?? "")"
                                                data-attribute-order="@attr.DisplayOrder"
                                                title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        @if (attr.IsDeprecated)
                                        {
                                            <form method="post" asp-page-handler="Reactivate" asp-route-attributeId="@attr.Id" class="d-inline">
                                                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                                                <button type="submit" class="btn btn-sm btn-outline-success me-1" title="Reactivate">
                                                    <i class="bi bi-arrow-clockwise"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="post" asp-page-handler="Deprecate" asp-route-attributeId="@attr.Id" class="d-inline">
                                                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                                                <button type="submit" class="btn btn-sm btn-outline-warning me-1" title="Deprecate">
                                                    <i class="bi bi-archive"></i>
                                                </button>
                                            </form>
                                        }
                                        <form method="post" asp-page-handler="Delete" asp-route-attributeId="@attr.Id" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this attribute? This may affect existing products.');">
                                            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Admin/Categories" class="btn btn-outline-secondary">Back to Categories</a>
        <a asp-page="/Admin/SharedAttributes" class="btn btn-outline-info ms-2">
            <i class="bi bi-share me-1"></i> Manage Shared Attributes
        </a>
    </div>
</div>

<!-- Create Attribute Modal -->
<div class="modal fade" id="createAttributeModal" tabindex="-1" aria-labelledby="createAttributeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="createAttributeModalLabel">Add New Attribute</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewAttribute.Name" class="form-label">Attribute Name <span class="text-danger">*</span></label>
                        <input asp-for="NewAttribute.Name" class="form-control" placeholder="e.g., Size, Color, Material" />
                        <span asp-validation-for="NewAttribute.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewAttribute.Type" class="form-label">Type <span class="text-danger">*</span></label>
                        <select asp-for="NewAttribute.Type" asp-items="Model.TypeOptions" class="form-select" id="newAttributeType">
                        </select>
                        <span asp-validation-for="NewAttribute.Type" class="text-danger"></span>
                        <div class="form-text">The type determines how the field is displayed and validated.</div>
                    </div>
                    <div class="mb-3" id="newListValuesGroup" style="display: none;">
                        <label asp-for="NewAttribute.ListValues" class="form-label">List Values <span class="text-danger">*</span></label>
                        <textarea asp-for="NewAttribute.ListValues" class="form-control" rows="2" placeholder="e.g., Small, Medium, Large, Extra Large"></textarea>
                        <span asp-validation-for="NewAttribute.ListValues" class="text-danger"></span>
                        <div class="form-text">Comma-separated list of allowed values.</div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="NewAttribute.IsRequired" class="form-check-input" type="checkbox" />
                            <label asp-for="NewAttribute.IsRequired" class="form-check-label">
                                Required field
                            </label>
                        </div>
                        <div class="form-text">If checked, sellers must fill this field when creating products.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewAttribute.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="NewAttribute.DisplayOrder" class="form-control" type="number" min="0" />
                        <span asp-validation-for="NewAttribute.DisplayOrder" class="text-danger"></span>
                        <div class="form-text">Lower numbers appear first.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewAttribute.SharedAttributeId" class="form-label">Shared Attribute (Optional)</label>
                        <select asp-for="NewAttribute.SharedAttributeId" asp-items="Model.SharedAttributeOptions" class="form-select">
                        </select>
                        <div class="form-text">Link to a shared attribute to sync changes across categories.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Attribute</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Attribute Modal -->
<div class="modal fade" id="editAttributeModal" tabindex="-1" aria-labelledby="editAttributeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                <div class="modal-header">
                    <h5 class="modal-title" id="editAttributeModalLabel">Edit Attribute</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="EditAttribute.AttributeId" id="editAttributeId" />
                    <div class="mb-3">
                        <label asp-for="EditAttribute.Name" class="form-label">Attribute Name <span class="text-danger">*</span></label>
                        <input asp-for="EditAttribute.Name" class="form-control" id="editAttributeName" placeholder="e.g., Size, Color, Material" />
                        <span asp-validation-for="EditAttribute.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditAttribute.Type" class="form-label">Type <span class="text-danger">*</span></label>
                        <select asp-for="EditAttribute.Type" asp-items="Model.TypeOptions" class="form-select" id="editAttributeType">
                        </select>
                        <span asp-validation-for="EditAttribute.Type" class="text-danger"></span>
                        <div class="form-text">Changing type may affect existing product data.</div>
                    </div>
                    <div class="mb-3" id="editListValuesGroup" style="display: none;">
                        <label asp-for="EditAttribute.ListValues" class="form-label">List Values <span class="text-danger">*</span></label>
                        <textarea asp-for="EditAttribute.ListValues" class="form-control" rows="2" id="editAttributeListValues" placeholder="e.g., Small, Medium, Large, Extra Large"></textarea>
                        <span asp-validation-for="EditAttribute.ListValues" class="text-danger"></span>
                        <div class="form-text">Comma-separated list of allowed values.</div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="EditAttribute.IsRequired" class="form-check-input" type="checkbox" id="editAttributeRequired" />
                            <label asp-for="EditAttribute.IsRequired" class="form-check-label">
                                Required field
                            </label>
                        </div>
                        <div class="form-text">If checked, sellers must fill this field when creating products.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditAttribute.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="EditAttribute.DisplayOrder" class="form-control" type="number" min="0" id="editAttributeOrder" />
                        <span asp-validation-for="EditAttribute.DisplayOrder" class="text-danger"></span>
                        <div class="form-text">Lower numbers appear first.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show/hide list values based on type selection
        function toggleListValues(typeSelect, listValuesGroup) {
            if (typeSelect.value === '@((int)AttributeType.List)') {
                listValuesGroup.style.display = 'block';
            } else {
                listValuesGroup.style.display = 'none';
            }
        }

        // New attribute form
        var newTypeSelect = document.getElementById('newAttributeType');
        var newListValuesGroup = document.getElementById('newListValuesGroup');
        newTypeSelect.addEventListener('change', function() {
            toggleListValues(this, newListValuesGroup);
        });
        toggleListValues(newTypeSelect, newListValuesGroup);

        // Edit attribute form
        var editTypeSelect = document.getElementById('editAttributeType');
        var editListValuesGroup = document.getElementById('editListValuesGroup');
        editTypeSelect.addEventListener('change', function() {
            toggleListValues(this, editListValuesGroup);
        });

        // Populate edit modal when opened
        document.getElementById('editAttributeModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('editAttributeId').value = button.getAttribute('data-attribute-id');
            document.getElementById('editAttributeName').value = button.getAttribute('data-attribute-name');
            document.getElementById('editAttributeType').value = button.getAttribute('data-attribute-type');
            document.getElementById('editAttributeRequired').checked = button.getAttribute('data-attribute-required') === 'true';
            document.getElementById('editAttributeListValues').value = button.getAttribute('data-attribute-listvalues');
            document.getElementById('editAttributeOrder').value = button.getAttribute('data-attribute-order');
            
            toggleListValues(editTypeSelect, editListValuesGroup);
        });
    </script>
}
