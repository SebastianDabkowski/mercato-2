@page
@model SD.Project.Pages.Admin.PhotoModerationModel
@using SD.Project.ViewModels
@{
    ViewData["Title"] = "Photo Moderation";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Photo Moderation</h1>
        <span class="badge bg-primary fs-6">@Model.TotalCount photos</span>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Stats Cards -->
    @if (Model.Stats != null)
    {
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card text-bg-warning">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.PendingCount</h3>
                        <small>Pending</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-bg-info">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.FlaggedCount</h3>
                        <small>Flagged</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-bg-success">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.ApprovedCount</h3>
                        <small>Approved</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-bg-danger">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.RemovedCount</h3>
                        <small>Removed</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-bg-secondary">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.ApprovedTodayCount</h3>
                        <small>Approved Today</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-bg-dark">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.RemovedTodayCount</h3>
                        <small>Removed Today</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="SearchTerm" class="form-label">Search</label>
                    <input type="text" class="form-control" id="SearchTerm" name="SearchTerm" 
                           value="@Model.SearchTerm" placeholder="Search by file name...">
                </div>
                <div class="col-md-3">
                    <label for="Status" class="form-label">Moderation Status</label>
                    <select class="form-select" id="Status" name="Status">
                        @foreach (var option in Model.StatusOptions)
                        {
                            <option value="@option.Value" selected="@(option.Value == Model.Status)">@option.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="IsFlagged" class="form-label">Flagged</label>
                    <select class="form-select" id="IsFlagged" name="IsFlagged">
                        <option value="" selected="@(!Model.IsFlagged.HasValue)">All</option>
                        <option value="true" selected="@(Model.IsFlagged == true)">Flagged Only</option>
                        <option value="false" selected="@(Model.IsFlagged == false)">Not Flagged</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Batch Actions -->
    <div class="card mb-3" id="batchActionsCard" style="display: none;">
        <div class="card-body d-flex gap-2 align-items-center">
            <span id="selectedCount" class="badge bg-primary">0 selected</span>
            <button type="button" class="btn btn-success btn-sm" onclick="batchApprove()">
                <i class="bi bi-check-lg"></i> Approve Selected
            </button>
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#batchRemoveModal">
                <i class="bi bi-x-lg"></i> Remove Selected
            </button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="clearSelection()">
                Clear Selection
            </button>
        </div>
    </div>

    <!-- Photos Grid -->
    <div class="card">
        <div class="card-body">
            @if (Model.Photos.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-images fs-1 text-muted"></i>
                    <p class="text-muted mt-2">No photos found matching your criteria.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                    @foreach (var photo in Model.Photos)
                    {
                        <div class="col">
                            <div class="card h-100 @(photo.IsFlagged ? "border-danger" : photo.ModerationStatus == "Removed" ? "border-dark" : photo.ModerationStatus == "PendingReview" ? "border-warning" : "")">
                                <div class="position-relative">
                                    <input type="checkbox" class="form-check-input photo-checkbox position-absolute top-0 start-0 m-2" 
                                           value="@photo.PhotoId" onchange="updateBatchActions()" style="z-index: 10;">
                                    <img src="@photo.ImageUrl" class="card-img-top" alt="@photo.FileName" 
                                         style="height: 200px; object-fit: cover; @(photo.ModerationStatus == "Removed" ? "opacity: 0.5;" : "")">
                                    @if (photo.IsMain)
                                    {
                                        <span class="badge bg-primary position-absolute top-0 end-0 m-2">Main</span>
                                    }
                                    @if (photo.IsFlagged)
                                    {
                                        <span class="badge bg-danger position-absolute bottom-0 start-0 m-2">
                                            <i class="bi bi-flag-fill"></i> Flagged
                                        </span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title text-truncate" title="@photo.FileName">@photo.FileName</h6>
                                    <p class="card-text small mb-1">
                                        <strong>Product:</strong> 
                                        <a asp-page="/Admin/ProductModerationDetails" asp-route-id="@photo.ProductId">
                                            @(photo.ProductName ?? "Unknown")
                                        </a>
                                    </p>
                                    <p class="card-text small mb-1">
                                        <strong>Store:</strong> @(photo.StoreName ?? "Unknown")
                                    </p>
                                    @if (!string.IsNullOrEmpty(photo.SellerName))
                                    {
                                        <p class="card-text small mb-1">
                                            <strong>Seller:</strong> @photo.SellerName
                                        </p>
                                    }
                                    <p class="card-text small mb-2">
                                        <span class="badge @PhotoModerationStatusHelper.GetStatusBadgeClass(photo.ModerationStatus)">
                                            @PhotoModerationStatusHelper.GetStatusDisplayName(photo.ModerationStatus)
                                        </span>
                                    </p>
                                    @if (!string.IsNullOrEmpty(photo.FlagReason))
                                    {
                                        <p class="card-text small text-danger mb-2">
                                            <i class="bi bi-exclamation-triangle"></i> @photo.FlagReason
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(photo.ModerationRemovalReason))
                                    {
                                        <p class="card-text small text-muted mb-2">
                                            <i class="bi bi-info-circle"></i> @photo.ModerationRemovalReason
                                        </p>
                                    }
                                    <p class="card-text small text-muted">
                                        Uploaded: @photo.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </p>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100">
                                        <a href="@photo.ImageUrl" target="_blank" class="btn btn-outline-secondary btn-sm" title="View Full Size">
                                            <i class="bi bi-arrows-fullscreen"></i>
                                        </a>
                                        @if (photo.ModerationStatus != "Approved")
                                        {
                                            <button type="button" class="btn btn-outline-success btn-sm" 
                                                    onclick="approvePhoto('@photo.PhotoId')" title="Approve">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        }
                                        @if (photo.ModerationStatus != "Removed")
                                        {
                                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                                    data-bs-toggle="modal" data-bs-target="#removeModal"
                                                    data-photo-id="@photo.PhotoId"
                                                    data-photo-name="@photo.FileName"
                                                    title="Remove">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Photos pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/Admin/PhotoModeration" 
                       asp-route-Page="@(Model.CurrentPage - 1)"
                       asp-route-Status="@Model.Status"
                       asp-route-IsFlagged="@Model.IsFlagged"
                       asp-route-SearchTerm="@Model.SearchTerm">Previous</a>
                </li>
                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="/Admin/PhotoModeration"
                           asp-route-Page="@i"
                           asp-route-Status="@Model.Status"
                           asp-route-IsFlagged="@Model.IsFlagged"
                           asp-route-SearchTerm="@Model.SearchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/Admin/PhotoModeration"
                       asp-route-Page="@(Model.CurrentPage + 1)"
                       asp-route-Status="@Model.Status"
                       asp-route-IsFlagged="@Model.IsFlagged"
                       asp-route-SearchTerm="@Model.SearchTerm">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Approve Form (hidden) -->
<form id="approveForm" method="post" asp-page-handler="Approve">
    <input type="hidden" id="approvePhotoId" name="photoId" />
</form>

<!-- Batch Approve Form (hidden) -->
<form id="batchApproveForm" method="post" asp-page-handler="BatchApprove">
    <input type="hidden" id="batchApprovePhotoIds" name="photoIds" />
</form>

<!-- Remove Modal -->
<div class="modal fade" id="removeModal" tabindex="-1" aria-labelledby="removeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Remove">
                <div class="modal-header">
                    <h5 class="modal-title" id="removeModalLabel">Remove Photo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="removePhotoId" name="photoId" />
                    <p>You are about to remove: <strong id="removePhotoName"></strong></p>
                    <div class="mb-3">
                        <label for="removeReason" class="form-label">Removal Reason <span class="text-danger">*</span></label>
                        <select class="form-select" id="removeReason" name="reason" required>
                            <option value="">Select reason...</option>
                            <option value="Inappropriate content - Image contains inappropriate or offensive content">Inappropriate content</option>
                            <option value="Illegal content - Image appears to depict illegal activities or content">Illegal content</option>
                            <option value="Copyright violation - Image may infringe on copyright or intellectual property">Copyright violation</option>
                            <option value="Misleading image - Image does not accurately represent the product">Misleading image</option>
                            <option value="Low quality - Image quality is too low for marketplace standards">Low quality</option>
                            <option value="Watermark or branding - Image contains unauthorized watermarks or branding">Watermark or branding</option>
                            <option value="Other - Please contact support for more information">Other</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Remove Photo</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Batch Remove Modal -->
<div class="modal fade" id="batchRemoveModal" tabindex="-1" aria-labelledby="batchRemoveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="BatchRemove">
                <div class="modal-header">
                    <h5 class="modal-title" id="batchRemoveModalLabel">Remove Selected Photos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="batchRemovePhotoIds" name="photoIds" />
                    <p>You are about to remove <strong id="batchRemoveCount">0</strong> photo(s).</p>
                    <div class="mb-3">
                        <label for="batchRemoveReason" class="form-label">Removal Reason <span class="text-danger">*</span></label>
                        <select class="form-select" id="batchRemoveReason" name="reason" required>
                            <option value="">Select reason...</option>
                            <option value="Inappropriate content - Image contains inappropriate or offensive content">Inappropriate content</option>
                            <option value="Illegal content - Image appears to depict illegal activities or content">Illegal content</option>
                            <option value="Copyright violation - Image may infringe on copyright or intellectual property">Copyright violation</option>
                            <option value="Misleading image - Image does not accurately represent the product">Misleading image</option>
                            <option value="Low quality - Image quality is too low for marketplace standards">Low quality</option>
                            <option value="Watermark or branding - Image contains unauthorized watermarks or branding">Watermark or branding</option>
                            <option value="Other - Please contact support for more information">Other</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Remove Selected</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approvePhoto(photoId) {
            if (confirm('Are you sure you want to approve this photo?')) {
                document.getElementById('approvePhotoId').value = photoId;
                document.getElementById('approveForm').submit();
            }
        }

        function getSelectedPhotoIds() {
            var checkboxes = document.querySelectorAll('.photo-checkbox:checked');
            return Array.from(checkboxes).map(function(cb) {
                return cb.value;
            });
        }

        function updateBatchActions() {
            var ids = getSelectedPhotoIds();
            var batchCard = document.getElementById('batchActionsCard');
            var countBadge = document.getElementById('selectedCount');

            if (ids.length > 0) {
                batchCard.style.display = 'block';
                countBadge.textContent = ids.length + ' selected';
            } else {
                batchCard.style.display = 'none';
            }
        }

        function clearSelection() {
            var checkboxes = document.querySelectorAll('.photo-checkbox');
            checkboxes.forEach(function(cb) {
                cb.checked = false;
            });
            updateBatchActions();
        }

        function batchApprove() {
            var ids = getSelectedPhotoIds();
            if (ids.length === 0) {
                alert('No photos selected.');
                return;
            }

            if (confirm('Are you sure you want to approve ' + ids.length + ' photo(s)?')) {
                document.getElementById('batchApprovePhotoIds').value = ids.join(',');
                document.getElementById('batchApproveForm').submit();
            }
        }

        // Modal event handlers
        document.addEventListener('DOMContentLoaded', function() {
            var removeModal = document.getElementById('removeModal');
            if (removeModal) {
                removeModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var photoId = button.getAttribute('data-photo-id');
                    var photoName = button.getAttribute('data-photo-name');
                    document.getElementById('removePhotoId').value = photoId;
                    document.getElementById('removePhotoName').textContent = photoName;
                });
            }

            var batchRemoveModal = document.getElementById('batchRemoveModal');
            if (batchRemoveModal) {
                batchRemoveModal.addEventListener('show.bs.modal', function(event) {
                    var ids = getSelectedPhotoIds();
                    document.getElementById('batchRemovePhotoIds').value = ids.join(',');
                    document.getElementById('batchRemoveCount').textContent = ids.length;
                });
            }
        });
    </script>
}
