@page
@model SD.Project.Pages.Admin.SharedAttributesModel
@using SD.Project.Domain.Entities
@{
    ViewData["Title"] = "Shared Attribute Templates";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Admin/Categories">Categories</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Shared Attributes</li>
                </ol>
            </nav>
            <h1>Shared Attribute Templates</h1>
            <p class="text-muted mb-0">
                Manage reusable attributes that can be linked across multiple categories.
                Changes to shared attributes are reflected in all linked categories.
            </p>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAttributeModal">
            <i class="bi bi-plus-lg me-1"></i> Add Shared Attribute
        </button>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.SharedAttributes.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">No shared attributes yet</h4>
                <p class="text-muted">Create shared attributes that can be reused across multiple categories.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAttributeModal">
                    Add Your First Shared Attribute
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 20%">Attribute Name</th>
                                <th>Type</th>
                                <th>List Values</th>
                                <th>Description</th>
                                <th class="text-center">Linked Categories</th>
                                <th class="text-end">Created</th>
                                <th class="text-center" style="width: 120px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var attr in Model.SharedAttributes)
                            {
                                <tr>
                                    <td>
                                        <strong>@attr.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@attr.TypeDisplay</span>
                                    </td>
                                    <td>
                                        @if (attr.Type == AttributeType.List && !string.IsNullOrWhiteSpace(attr.ListValues))
                                        {
                                            <small class="text-muted">
                                                @(attr.ListValues!.Length > 50 ? attr.ListValues.Substring(0, 50) + "..." : attr.ListValues)
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(attr.Description))
                                        {
                                            <small class="text-muted">
                                                @(attr.Description!.Length > 60 ? attr.Description.Substring(0, 60) + "..." : attr.Description)
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (attr.LinkedCategoryCount > 0)
                                        {
                                            <span class="badge bg-primary">@attr.LinkedCategoryCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-end">@attr.CreatedAt.ToString("MMM d, yyyy")</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-primary me-1"
                                                data-bs-toggle="modal" data-bs-target="#editAttributeModal"
                                                data-attribute-id="@attr.Id"
                                                data-attribute-name="@attr.Name"
                                                data-attribute-type="@((int)attr.Type)"
                                                data-attribute-listvalues="@(attr.ListValues ?? "")"
                                                data-attribute-description="@(attr.Description ?? "")"
                                                title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <form method="post" asp-page-handler="Delete" asp-route-sharedAttributeId="@attr.Id" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this shared attribute? This action cannot be undone.');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete" @(attr.LinkedCategoryCount > 0 ? "disabled" : "")>
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Admin/Categories" class="btn btn-outline-secondary">Back to Categories</a>
    </div>
</div>

<!-- Create Shared Attribute Modal -->
<div class="modal fade" id="createAttributeModal" tabindex="-1" aria-labelledby="createAttributeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createAttributeModalLabel">Add Shared Attribute</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewAttribute.Name" class="form-label">Attribute Name <span class="text-danger">*</span></label>
                        <input asp-for="NewAttribute.Name" class="form-control" placeholder="e.g., Brand, Material, Country of Origin" />
                        <span asp-validation-for="NewAttribute.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewAttribute.Type" class="form-label">Type <span class="text-danger">*</span></label>
                        <select asp-for="NewAttribute.Type" asp-items="Model.TypeOptions" class="form-select" id="newAttributeType">
                        </select>
                        <span asp-validation-for="NewAttribute.Type" class="text-danger"></span>
                        <div class="form-text">The type determines how the field is displayed and validated.</div>
                    </div>
                    <div class="mb-3" id="newListValuesGroup" style="display: none;">
                        <label asp-for="NewAttribute.ListValues" class="form-label">List Values <span class="text-danger">*</span></label>
                        <textarea asp-for="NewAttribute.ListValues" class="form-control" rows="2" placeholder="e.g., Nike, Adidas, Puma, New Balance"></textarea>
                        <span asp-validation-for="NewAttribute.ListValues" class="text-danger"></span>
                        <div class="form-text">Comma-separated list of allowed values.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewAttribute.Description" class="form-label">Description</label>
                        <textarea asp-for="NewAttribute.Description" class="form-control" rows="2" placeholder="Brief description of this attribute"></textarea>
                        <span asp-validation-for="NewAttribute.Description" class="text-danger"></span>
                        <div class="form-text">Optional description explaining what this attribute represents.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Shared Attribute</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Shared Attribute Modal -->
<div class="modal fade" id="editAttributeModal" tabindex="-1" aria-labelledby="editAttributeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editAttributeModalLabel">Edit Shared Attribute</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-1"></i>
                        Changes will be reflected in all linked category attributes.
                    </div>
                    <input type="hidden" asp-for="EditAttribute.SharedAttributeId" id="editAttributeId" />
                    <div class="mb-3">
                        <label asp-for="EditAttribute.Name" class="form-label">Attribute Name <span class="text-danger">*</span></label>
                        <input asp-for="EditAttribute.Name" class="form-control" id="editAttributeName" placeholder="e.g., Brand, Material, Country of Origin" />
                        <span asp-validation-for="EditAttribute.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditAttribute.Type" class="form-label">Type <span class="text-danger">*</span></label>
                        <select asp-for="EditAttribute.Type" asp-items="Model.TypeOptions" class="form-select" id="editAttributeType">
                        </select>
                        <span asp-validation-for="EditAttribute.Type" class="text-danger"></span>
                        <div class="form-text">Changing type may affect existing product data in linked categories.</div>
                    </div>
                    <div class="mb-3" id="editListValuesGroup" style="display: none;">
                        <label asp-for="EditAttribute.ListValues" class="form-label">List Values <span class="text-danger">*</span></label>
                        <textarea asp-for="EditAttribute.ListValues" class="form-control" rows="2" id="editAttributeListValues" placeholder="e.g., Nike, Adidas, Puma, New Balance"></textarea>
                        <span asp-validation-for="EditAttribute.ListValues" class="text-danger"></span>
                        <div class="form-text">Comma-separated list of allowed values.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditAttribute.Description" class="form-label">Description</label>
                        <textarea asp-for="EditAttribute.Description" class="form-control" rows="2" id="editAttributeDescription" placeholder="Brief description of this attribute"></textarea>
                        <span asp-validation-for="EditAttribute.Description" class="text-danger"></span>
                        <div class="form-text">Optional description explaining what this attribute represents.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show/hide list values based on type selection
        function toggleListValues(typeSelect, listValuesGroup) {
            if (typeSelect.value === '@((int)AttributeType.List)') {
                listValuesGroup.style.display = 'block';
            } else {
                listValuesGroup.style.display = 'none';
            }
        }

        // New attribute form
        var newTypeSelect = document.getElementById('newAttributeType');
        var newListValuesGroup = document.getElementById('newListValuesGroup');
        newTypeSelect.addEventListener('change', function() {
            toggleListValues(this, newListValuesGroup);
        });
        toggleListValues(newTypeSelect, newListValuesGroup);

        // Edit attribute form
        var editTypeSelect = document.getElementById('editAttributeType');
        var editListValuesGroup = document.getElementById('editListValuesGroup');
        editTypeSelect.addEventListener('change', function() {
            toggleListValues(this, editListValuesGroup);
        });

        // Populate edit modal when opened
        document.getElementById('editAttributeModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('editAttributeId').value = button.getAttribute('data-attribute-id');
            document.getElementById('editAttributeName').value = button.getAttribute('data-attribute-name');
            document.getElementById('editAttributeType').value = button.getAttribute('data-attribute-type');
            document.getElementById('editAttributeListValues').value = button.getAttribute('data-attribute-listvalues');
            document.getElementById('editAttributeDescription').value = button.getAttribute('data-attribute-description');
            
            toggleListValues(editTypeSelect, editListValuesGroup);
        });
    </script>
}
