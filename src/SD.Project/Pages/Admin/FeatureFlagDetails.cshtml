@page "{id:guid}"
@model SD.Project.Pages.Admin.FeatureFlagDetailsModel
@{
    ViewData["Title"] = $"Feature Flag: {Model.FeatureFlag?.Name ?? "Not Found"}";
}

<div class="container">
    @if (Model.FeatureFlag is null)
    {
        <div class="alert alert-warning">
            <h4>Feature flag not found</h4>
            <p>The requested feature flag does not exist or has been deleted.</p>
            <a asp-page="/Admin/FeatureFlags" class="btn btn-primary">Back to Feature Flags</a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>@Model.FeatureFlag.Name</h1>
                <p class="text-muted mb-0">
                    <code>@Model.FeatureFlag.Key</code>
                    <span class="badge @Model.FeatureFlag.StatusBadgeClass ms-2">@Model.FeatureFlag.StatusDisplay</span>
                    @if (Model.FeatureFlag.GlobalOverride)
                    {
                        <span class="badge bg-warning text-dark ms-1">Global Override ON</span>
                    }
                </p>
            </div>
            <div>
                <form method="post" asp-page-handler="Delete" class="d-inline"
                      onsubmit="return confirm('Are you sure you want to delete this feature flag? This action cannot be undone.');">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row">
            <!-- Left Column: Status & Settings -->
            <div class="col-lg-8">
                <!-- Status Control -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Status Control</h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Current Status:</strong> <span class="badge @Model.FeatureFlag.StatusBadgeClass">@Model.FeatureFlag.StatusDisplay</span></p>
                                <p class="text-muted small">
                                    @switch (Model.FeatureFlag.Status)
                                    {
                                        case SD.Project.Domain.Entities.FeatureFlagStatus.Disabled:
                                            <text>This flag is completely OFF for all users.</text>
                                            break;
                                        case SD.Project.Domain.Entities.FeatureFlagStatus.Enabled:
                                            <text>This flag is ON for all users (subject to environment settings).</text>
                                            break;
                                        case SD.Project.Domain.Entities.FeatureFlagStatus.Targeted:
                                            <text>This flag is ON only for users matching targeting rules.</text>
                                            break;
                                    }
                                </p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                @if (Model.FeatureFlag.Status == SD.Project.Domain.Entities.FeatureFlagStatus.Disabled)
                                {
                                    <form method="post" asp-page-handler="Enable" class="d-inline">
                                        <button type="submit" class="btn btn-success">
                                            <i class="bi bi-play-fill me-1"></i> Enable for All
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="EnableTargeting" class="d-inline ms-2">
                                        <button type="submit" class="btn btn-info">
                                            <i class="bi bi-funnel me-1"></i> Enable Targeting
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Disable" class="d-inline">
                                        <button type="submit" class="btn btn-secondary">
                                            <i class="bi bi-stop-fill me-1"></i> Disable
                                        </button>
                                    </form>
                                    @if (Model.FeatureFlag.Status == SD.Project.Domain.Entities.FeatureFlagStatus.Enabled)
                                    {
                                        <form method="post" asp-page-handler="EnableTargeting" class="d-inline ms-2">
                                            <button type="submit" class="btn btn-info">
                                                <i class="bi bi-funnel me-1"></i> Switch to Targeting
                                            </button>
                                        </form>
                                    }
                                }
                            </div>
                        </div>

                        <hr class="my-3" />

                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Global Override:</strong>
                                    @if (Model.FeatureFlag.GlobalOverride)
                                    {
                                        <span class="badge bg-warning text-dark">ON</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Off</span>
                                    }
                                </p>
                                <p class="text-muted small">
                                    When enabled, the flag is ON for all users in all environments regardless of other settings.
                                </p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                @if (Model.FeatureFlag.GlobalOverride)
                                {
                                    <form method="post" asp-page-handler="SetGlobalOverride" class="d-inline">
                                        <input type="hidden" name="enabled" value="false" />
                                        <button type="submit" class="btn btn-outline-secondary">
                                            <i class="bi bi-toggle-off me-1"></i> Disable Global Override
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="SetGlobalOverride" class="d-inline"
                                          onsubmit="return confirm('Enable global override? This will turn ON this feature for ALL users in ALL environments immediately.');">
                                        <input type="hidden" name="enabled" value="true" />
                                        <button type="submit" class="btn btn-warning">
                                            <i class="bi bi-toggle-on me-1"></i> Enable Global Override
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Environment Settings -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Environment Settings</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Environment</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Rollout Override</th>
                                        <th class="text-end">Last Updated</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var env in Model.FeatureFlag.Environments.OrderBy(e => GetEnvironmentOrder(e.Environment)))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge @env.EnvironmentBadgeClass">@env.EnvironmentDisplay</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @env.StatusBadgeClass">@env.StatusDisplay</span>
                                            </td>
                                            <td class="text-center">
                                                @if (env.RolloutPercentageOverride.HasValue)
                                                {
                                                    <span>@env.RolloutPercentageOverride%</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <small>@env.UpdatedAt.ToString("MMM d, HH:mm")</small>
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-outline-primary"
                                                        data-bs-toggle="modal" data-bs-target="#editEnvModal"
                                                        data-env-name="@env.Environment"
                                                        data-env-display="@env.EnvironmentDisplay"
                                                        data-env-enabled="@env.IsEnabled.ToString().ToLowerInvariant()"
                                                        data-env-rollout="@(env.RolloutPercentageOverride?.ToString() ?? "")">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Targeting Rules -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Targeting Rules</h5>
                        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editTargetingModal">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Rollout Percentage</label>
                                <p class="mb-0"><strong>@Model.FeatureFlag.RolloutPercentage%</strong></p>
                                <small class="text-muted">Percentage of users who see this feature</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Target User Groups</label>
                                @if (!string.IsNullOrWhiteSpace(Model.FeatureFlag.TargetUserGroups))
                                {
                                    <p class="mb-0">
                                        @foreach (var group in Model.FeatureFlag.TargetUserGroups.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <span class="badge bg-light text-dark me-1">@group.Trim()</span>
                                        }
                                    </p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">—</p>
                                }
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Target User IDs</label>
                                @if (!string.IsNullOrWhiteSpace(Model.FeatureFlag.TargetUserIds))
                                {
                                    var userIds = Model.FeatureFlag.TargetUserIds.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                    <p class="mb-0">@userIds.Length user(s)</p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">—</p>
                                }
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small">Target Seller IDs</label>
                                @if (!string.IsNullOrWhiteSpace(Model.FeatureFlag.TargetSellerIds))
                                {
                                    var sellerIds = Model.FeatureFlag.TargetSellerIds.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                    <p class="mb-0">@sellerIds.Length seller(s)</p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">—</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Audit Log -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Audit Log</h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.AuditLogs.Count == 0)
                        {
                            <div class="text-center py-4 text-muted">
                                No audit log entries yet.
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Action</th>
                                            <th>Details</th>
                                            <th>Environment</th>
                                            <th class="text-end">When</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var log in Model.AuditLogs.Take(10))
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge @log.ActionBadgeClass">@log.ActionDisplay</span>
                                                </td>
                                                <td>
                                                    <small>@log.Details</small>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrWhiteSpace(log.Environment))
                                                    {
                                                        <small>@log.Environment</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">—</small>
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    <small>@log.OccurredAt.ToString("MMM d, HH:mm")</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column: Info -->
            <div class="col-lg-4">
                <!-- Details -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Details</h5>
                        <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editMetadataModal">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8">@Model.FeatureFlag.Name</dd>

                            <dt class="col-sm-4">Key</dt>
                            <dd class="col-sm-8"><code>@Model.FeatureFlag.Key</code></dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.FeatureFlag.DescriptionDisplay</dd>

                            <dt class="col-sm-4">Created</dt>
                            <dd class="col-sm-8">@Model.FeatureFlag.CreatedAt.ToString("MMM d, yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Updated</dt>
                            <dd class="col-sm-8">@Model.FeatureFlag.UpdatedAt.ToString("MMM d, yyyy HH:mm")</dd>
                        </dl>
                    </div>
                </div>

                <!-- Code Usage -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Code Usage</h5>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted mb-2">Use this code to check the flag in your application:</p>
                        <pre class="bg-light p-2 rounded small mb-0"><code>// Inject IFeatureFlagEvaluator
var isEnabled = await _featureFlagEvaluator
    .IsEnabledAsync(
        "@Model.FeatureFlag.Key",
        environment,
        userId,
        sellerId,
        userGroups);</code></pre>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-page="/Admin/FeatureFlags" class="btn btn-outline-secondary">Back to Feature Flags</a>
        </div>

        <!-- Edit Metadata Modal -->
        <div class="modal fade" id="editMetadataModal" tabindex="-1" aria-labelledby="editMetadataModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-page-handler="UpdateMetadata">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editMetadataModalLabel">Edit Feature Flag</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label asp-for="EditMetadata.Name" class="form-label">Name <span class="text-danger">*</span></label>
                                <input asp-for="EditMetadata.Name" class="form-control" value="@Model.FeatureFlag.Name" />
                                <span asp-validation-for="EditMetadata.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EditMetadata.Description" class="form-label">Description</label>
                                <textarea asp-for="EditMetadata.Description" class="form-control" rows="3">@Model.FeatureFlag.Description</textarea>
                                <span asp-validation-for="EditMetadata.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Edit Targeting Modal -->
        <div class="modal fade" id="editTargetingModal" tabindex="-1" aria-labelledby="editTargetingModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form method="post" asp-page-handler="UpdateTargeting">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editTargetingModalLabel">Edit Targeting Rules</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label asp-for="EditTargeting.RolloutPercentage" class="form-label">Rollout Percentage</label>
                                <div class="input-group">
                                    <input asp-for="EditTargeting.RolloutPercentage" type="number" min="0" max="100" class="form-control" value="@Model.FeatureFlag.RolloutPercentage" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">Percentage of users who will see this feature (0-100).</div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EditTargeting.TargetUserGroups" class="form-label">Target User Groups</label>
                                <input asp-for="EditTargeting.TargetUserGroups" class="form-control" placeholder="e.g., internal-users, beta-testers" value="@Model.FeatureFlag.TargetUserGroups" />
                                <div class="form-text">Comma-separated list of user group identifiers.</div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EditTargeting.TargetUserIds" class="form-label">Target User IDs</label>
                                <textarea asp-for="EditTargeting.TargetUserIds" class="form-control" rows="2" placeholder="Comma-separated GUIDs">@Model.FeatureFlag.TargetUserIds</textarea>
                                <div class="form-text">Comma-separated list of specific user IDs.</div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EditTargeting.TargetSellerIds" class="form-label">Target Seller IDs</label>
                                <textarea asp-for="EditTargeting.TargetSellerIds" class="form-control" rows="2" placeholder="Comma-separated GUIDs">@Model.FeatureFlag.TargetSellerIds</textarea>
                                <div class="form-text">Comma-separated list of specific seller IDs.</div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Edit Environment Modal -->
        <div class="modal fade" id="editEnvModal" tabindex="-1" aria-labelledby="editEnvModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="post" asp-page-handler="UpdateEnvironment">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editEnvModalLabel">Edit Environment Settings</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" asp-for="EditEnvironment.Environment" id="editEnvName" />
                            <p><strong>Environment:</strong> <span id="editEnvDisplayName"></span></p>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="EditEnvironment.IsEnabled" id="editEnvEnabled" />
                                    <label class="form-check-label" asp-for="EditEnvironment.IsEnabled">Enabled in this environment</label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EditEnvironment.RolloutPercentageOverride" class="form-label">Rollout Percentage Override</label>
                                <div class="input-group">
                                    <input asp-for="EditEnvironment.RolloutPercentageOverride" type="number" min="0" max="100" class="form-control" id="editEnvRollout" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">Leave empty to use the flag's default rollout percentage.</div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('editEnvModal')?.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('editEnvName').value = button.getAttribute('data-env-name');
            document.getElementById('editEnvDisplayName').textContent = button.getAttribute('data-env-display');
            document.getElementById('editEnvEnabled').checked = button.getAttribute('data-env-enabled') === 'true';
            document.getElementById('editEnvRollout').value = button.getAttribute('data-env-rollout');
        });
    </script>
}

@functions {
    private int GetEnvironmentOrder(string env) => env switch
    {
        "development" => 0,
        "test" => 1,
        "staging" => 2,
        "production" => 3,
        _ => 99
    };
}
