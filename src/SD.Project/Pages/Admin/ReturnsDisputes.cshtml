@page
@model SD.Project.Pages.Admin.ReturnsDisputesModel
@using SD.Project.ViewModels
@{
    ViewData["Title"] = "Returns & Disputes";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Returns & Disputes</h1>
        <span class="badge bg-primary fs-6">@Model.TotalCount cases</span>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="SearchTerm" class="form-label">Search</label>
                    <input type="text" class="form-control" id="SearchTerm" name="SearchTerm" 
                           value="@Model.SearchTerm" placeholder="Case number or reason...">
                </div>
                <div class="col-md-2">
                    <label for="Status" class="form-label">Status</label>
                    <select class="form-select" id="Status" name="Status">
                        @foreach (var option in Model.StatusOptions)
                        {
                            <option value="@option.Value" selected="@(option.Value == Model.Status)">@option.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="Type" class="form-label">Type</label>
                    <select class="form-select" id="Type" name="Type">
                        @foreach (var option in Model.TypeOptions)
                        {
                            <option value="@option.Value" selected="@(option.Value == Model.Type)">@option.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="FromDate" class="form-label">From Date</label>
                    <input type="date" class="form-control" id="FromDate" name="FromDate" 
                           value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-2">
                    <label for="ToDate" class="form-label">To Date</label>
                    <input type="date" class="form-control" id="ToDate" name="ToDate" 
                           value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Cases Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Cases.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <p class="text-muted mt-2">No cases found matching your criteria.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Case #</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Seller</th>
                                <th>Buyer</th>
                                <th>Reason</th>
                                <th>Age</th>
                                <th>Amount</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var caseItem in Model.Cases)
                            {
                                <tr>
                                    <td>
                                        <a asp-page="/Admin/CaseDetails" asp-route-id="@caseItem.ReturnRequestId" 
                                           class="fw-semibold text-decoration-none">
                                            @caseItem.CaseNumber
                                        </a>
                                        @if (caseItem.IsEscalated)
                                        {
                                            <span class="badge bg-danger ms-1" title="Escalated">!</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @(caseItem.Type == "Return" ? "bg-info" : "bg-warning")">
                                            @ReturnRequestStatusHelper.GetTypeDisplayName(caseItem.Type)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @ReturnRequestStatusHelper.GetStatusBadgeClass(caseItem.Status)">
                                            @ReturnRequestStatusHelper.GetStatusDisplayName(caseItem.Status)
                                        </span>
                                    </td>
                                    <td>@caseItem.SellerName</td>
                                    <td>@caseItem.BuyerAlias</td>
                                    <td class="text-truncate" style="max-width: 150px;" title="@caseItem.Reason">
                                        @caseItem.Reason
                                    </td>
                                    <td>
                                        <span class="@(caseItem.AgeInDays > 7 ? "text-danger fw-bold" : "")">
                                            @caseItem.AgeInDays day@(caseItem.AgeInDays != 1 ? "s" : "")
                                        </span>
                                    </td>
                                    <td>@caseItem.Currency @caseItem.SubOrderTotal.ToString("N2")</td>
                                    <td>@caseItem.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="/Admin/CaseDetails" asp-route-id="@caseItem.ReturnRequestId" 
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (caseItem.Status == "Requested" || caseItem.Status == "Rejected")
                                            {
                                                <button type="button" class="btn btn-outline-warning" 
                                                        data-bs-toggle="modal" data-bs-target="#escalateModal"
                                                        data-case-id="@caseItem.ReturnRequestId"
                                                        data-case-number="@caseItem.CaseNumber"
                                                        title="Escalate">
                                                    <i class="bi bi-arrow-up-circle"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Cases pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/Admin/ReturnsDisputes" 
                       asp-route-Page="@(Model.CurrentPage - 1)"
                       asp-route-Status="@Model.Status"
                       asp-route-Type="@Model.Type"
                       asp-route-SearchTerm="@Model.SearchTerm"
                       asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                       asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Previous</a>
                </li>
                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="/Admin/ReturnsDisputes"
                           asp-route-Page="@i"
                           asp-route-Status="@Model.Status"
                           asp-route-Type="@Model.Type"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                           asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/Admin/ReturnsDisputes"
                       asp-route-Page="@(Model.CurrentPage + 1)"
                       asp-route-Status="@Model.Status"
                       asp-route-Type="@Model.Type"
                       asp-route-SearchTerm="@Model.SearchTerm"
                       asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                       asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Escalate Modal -->
<div class="modal fade" id="escalateModal" tabindex="-1" aria-labelledby="escalateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Escalate">
                <div class="modal-header">
                    <h5 class="modal-title" id="escalateModalLabel">Escalate Case</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="escalateCaseId" name="caseId" />
                    <p>You are about to escalate case <strong id="escalateCaseNumber"></strong> to admin review.</p>
                    
                    <div class="mb-3">
                        <label for="escalateReason" class="form-label">Escalation Reason</label>
                        <select class="form-select" id="escalateReason" name="reason" required>
                            <option value="">Select reason...</option>
                            <option value="BuyerRequested">Buyer Requested</option>
                            <option value="SLABreach">SLA Breach</option>
                            <option value="AdminFlagged">Admin Flagged</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="escalateNotes" class="form-label">Notes (optional)</label>
                        <textarea class="form-control" id="escalateNotes" name="notes" rows="3" 
                                  placeholder="Additional context for the escalation..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Escalate Case</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var escalateModal = document.getElementById('escalateModal');
            if (escalateModal) {
                escalateModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var caseId = button.getAttribute('data-case-id');
                    var caseNumber = button.getAttribute('data-case-number');
                    
                    document.getElementById('escalateCaseId').value = caseId;
                    document.getElementById('escalateCaseNumber').textContent = caseNumber;
                });
            }
        });
    </script>
}
