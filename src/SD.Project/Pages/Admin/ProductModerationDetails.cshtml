@page "{id:guid}"
@model SD.Project.Pages.Admin.ProductModerationDetailsModel
@using SD.Project.ViewModels
@{
    ViewData["Title"] = "Product Moderation Details";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Admin/ProductModeration">Product Moderation</a></li>
            <li class="breadcrumb-item active" aria-current="page">Product Details</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Product == null)
    {
        <div class="alert alert-warning">Product not found.</div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Product Header -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">@Model.Product.Name</h4>
                        <div>
                            <span class="badge @ProductModerationStatusHelper.GetStatusBadgeClass(Model.Product.ModerationStatus) me-2">
                                @ProductModerationStatusHelper.GetStatusDisplayName(Model.Product.ModerationStatus)
                            </span>
                            <span class="badge @ProductModerationStatusHelper.GetProductStatusBadgeClass((SD.Project.Domain.Entities.ProductStatus)Enum.Parse(typeof(SD.Project.Domain.Entities.ProductStatus), Model.Product.Status))">
                                @ProductModerationStatusHelper.GetProductStatusDisplayName((SD.Project.Domain.Entities.ProductStatus)Enum.Parse(typeof(SD.Project.Domain.Entities.ProductStatus), Model.Product.Status))
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                @if (Model.ProductImages.Count > 0)
                                {
                                    var mainImage = Model.ProductImages.FirstOrDefault(i => i.IsMain) ?? Model.ProductImages.First();
                                    <img src="@mainImage.ImageUrl" alt="@Model.Product.Name" 
                                         class="img-fluid rounded mb-3" style="max-height: 300px; width: 100%; object-fit: cover;">
                                    
                                    @if (Model.ProductImages.Count > 1)
                                    {
                                        <div class="d-flex flex-wrap gap-2">
                                            @foreach (var image in Model.ProductImages.Where(i => i.Id != mainImage.Id).Take(4))
                                            {
                                                <img src="@image.ThumbnailUrl" alt="@Model.Product.Name" 
                                                     class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                            }
                                            @if (Model.ProductImages.Count > 5)
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                     style="width: 60px; height: 60px;">
                                                    <small class="text-muted">+@(Model.ProductImages.Count - 5)</small>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                         style="height: 200px;">
                                        <i class="bi bi-image fs-1 text-muted"></i>
                                    </div>
                                    <p class="text-muted text-center mt-2">No images uploaded</p>
                                }
                            </div>
                            <div class="col-md-8">
                                <table class="table table-borderless">
                                    <tr>
                                        <th style="width: 150px;">Price:</th>
                                        <td><strong class="text-success">@Model.Product.Currency @Model.Product.Price.ToString("N2")</strong></td>
                                    </tr>
                                    <tr>
                                        <th>Stock:</th>
                                        <td>@Model.Product.Stock units</td>
                                    </tr>
                                    <tr>
                                        <th>Category:</th>
                                        <td>@Model.Product.Category</td>
                                    </tr>
                                    <tr>
                                        <th>Created:</th>
                                        <td>@Model.Product.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                    <tr>
                                        <th>Updated:</th>
                                        <td>@Model.Product.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Description -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Description</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Product.Description))
                        {
                            <div class="product-description">
                                @Model.Product.Description
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No description provided.</p>
                        }
                    </div>
                </div>

                <!-- Moderation History -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Moderation History</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.AuditHistory.Count == 0)
                        {
                            <p class="text-muted">No moderation history available.</p>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Moderator</th>
                                            <th>Decision</th>
                                            <th>Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var audit in Model.AuditHistory)
                                        {
                                            <tr>
                                                <td>@audit.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                <td>@(audit.ModeratorName ?? "Unknown")</td>
                                                <td>
                                                    <span class="badge @ProductModerationStatusHelper.GetStatusBadgeClass(audit.Decision)">
                                                        @ProductModerationStatusHelper.GetStatusDisplayName(audit.Decision)
                                                    </span>
                                                </td>
                                                <td>@(audit.Reason ?? "-")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Seller Information -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Seller Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless table-sm mb-0">
                            <tr>
                                <th>Store:</th>
                                <td>@(Model.Product.StoreName ?? "Unknown")</td>
                            </tr>
                            <tr>
                                <th>Seller:</th>
                                <td>@(Model.Product.SellerName ?? "Unknown")</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.Product.SellerEmail))
                            {
                                <tr>
                                    <th>Email:</th>
                                    <td><a href="mailto:@Model.Product.SellerEmail">@Model.Product.SellerEmail</a></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

                <!-- Rejection Reason (if rejected) -->
                @if (Model.Product.ModerationStatus == "Rejected" && !string.IsNullOrEmpty(Model.Product.ModerationRejectionReason))
                {
                    <div class="card mb-4 border-danger">
                        <div class="card-header text-bg-danger">
                            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Rejection Reason</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">@Model.Product.ModerationRejectionReason</p>
                            @if (Model.Product.LastModeratedAt.HasValue)
                            {
                                <small class="text-muted">
                                    Rejected on @Model.Product.LastModeratedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                    @if (!string.IsNullOrEmpty(Model.Product.LastModeratorName))
                                    {
                                        <text> by @Model.Product.LastModeratorName</text>
                                    }
                                </small>
                            }
                        </div>
                    </div>
                }

                <!-- Moderation Actions -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Moderation Actions</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Product.ModerationStatus == "PendingReview")
                        {
                            <form method="post" asp-page-handler="Approve" class="mb-3">
                                <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                                <button type="submit" class="btn btn-success w-100" 
                                        onclick="return confirm('Are you sure you want to approve this product?');">
                                    <i class="bi bi-check-lg"></i> Approve Product
                                </button>
                            </form>

                            <form method="post" asp-page-handler="Reject">
                                <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                                <div class="mb-3">
                                    <label for="reason" class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                                    <select class="form-select" id="reason" name="reason" required>
                                        <option value="">Select reason...</option>
                                        <option value="Prohibited item - This item violates marketplace policies">Prohibited item</option>
                                        <option value="Inappropriate content - Description or images contain inappropriate content">Inappropriate content</option>
                                        <option value="Low quality listing - Missing required information or poor quality images">Low quality listing</option>
                                        <option value="Misleading information - Product information is inaccurate or misleading">Misleading information</option>
                                        <option value="Counterfeit or unauthorized - Product appears to be counterfeit or unauthorized">Counterfeit or unauthorized</option>
                                        <option value="Pricing issue - Price is unreasonable or appears to be an error">Pricing issue</option>
                                        <option value="Other - Please contact support for more information">Other</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-x-lg"></i> Reject Product
                                </button>
                            </form>
                        }
                        else if (Model.Product.ModerationStatus == "Approved")
                        {
                            <div class="alert alert-success mb-0">
                                <i class="bi bi-check-circle"></i> This product has been approved.
                                @if (Model.Product.LastModeratedAt.HasValue)
                                {
                                    <br><small>Approved on @Model.Product.LastModeratedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</small>
                                }
                            </div>
                        }
                        else if (Model.Product.ModerationStatus == "Rejected")
                        {
                            <div class="alert alert-danger mb-3">
                                <i class="bi bi-x-circle"></i> This product has been rejected.
                            </div>
                            
                            <form method="post" asp-page-handler="Approve">
                                <input type="hidden" name="productId" value="@Model.Product.ProductId" />
                                <button type="submit" class="btn btn-success w-100" 
                                        onclick="return confirm('Are you sure you want to approve this previously rejected product?');">
                                    <i class="bi bi-check-lg"></i> Approve Product
                                </button>
                            </form>
                        }
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Quick Links</h5>
                    </div>
                    <div class="card-body">
                        <a asp-page="/Admin/ProductModeration" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-arrow-left"></i> Back to Moderation Queue
                        </a>
                        @if (Model.Product.StoreId.HasValue)
                        {
                            <a href="/Buyer/Store?id=@Model.Product.StoreId" class="btn btn-outline-secondary w-100" target="_blank">
                                <i class="bi bi-shop"></i> View Store
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
