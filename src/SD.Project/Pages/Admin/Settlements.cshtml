@page
@model SD.Project.Pages.Admin.SettlementsModel
@{
    ViewData["Title"] = "Monthly Settlements";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Monthly Settlements</h1>
            <p class="text-muted mb-0">Generate and manage monthly settlement reports per seller.</p>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateModal">
            <i class="bi bi-plus-lg me-1"></i> Generate Settlement
        </button>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Summary Cards -->
    @if (Model.Summary != null)
    {
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title mb-0">@Model.Summary.TotalSettlements</h3>
                        <p class="card-text text-muted mb-0">Total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title mb-0 text-secondary">@Model.Summary.DraftCount</h3>
                        <p class="card-text text-muted mb-0">Draft</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title mb-0 text-info">@Model.Summary.FinalizedCount</h3>
                        <p class="card-text text-muted mb-0">Finalized</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title mb-0 text-success">@Model.Summary.ApprovedCount</h3>
                        <p class="card-text text-muted mb-0">Approved</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title mb-0 text-primary">@Model.Summary.ExportedCount</h3>
                        <p class="card-text text-muted mb-0">Exported</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title mb-0">@Model.Summary.Currency @Model.Summary.TotalNetPayable.ToString("N2")</h3>
                        <p class="card-text text-muted mb-0">Net Payable</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Store</label>
                    <select asp-for="StoreId" asp-items="Model.StoreOptions" class="form-select"></select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Year</label>
                    <select asp-for="Year" asp-items="Model.YearOptions" class="form-select"></select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Month</label>
                    <select asp-for="Month" asp-items="Model.MonthOptions" class="form-select"></select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select asp-for="Status" asp-items="Model.StatusOptions" class="form-select"></select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-funnel me-1"></i> Filter
                    </button>
                    <a asp-page="/Admin/Settlements" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg me-1"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Settlements.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">No settlements found</h4>
                <p class="text-muted">Generate monthly settlements to see them here.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateModal">
                    Generate Settlement
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Settlement #</th>
                                <th>Store</th>
                                <th>Period</th>
                                <th class="text-end">Net Payable</th>
                                <th class="text-center">Orders</th>
                                <th class="text-center">Version</th>
                                <th class="text-center">Status</th>
                                <th class="text-end">Created</th>
                                <th class="text-center" style="width: 180px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var settlement in Model.Settlements)
                            {
                                <tr>
                                    <td>
                                        <a asp-page="/Admin/SettlementDetails" asp-route-id="@settlement.Id" class="text-decoration-none">
                                            <strong>@settlement.SettlementNumber</strong>
                                        </a>
                                    </td>
                                    <td>@settlement.StoreName</td>
                                    <td>@settlement.PeriodDisplay</td>
                                    <td class="text-end">
                                        <strong>@settlement.Currency @settlement.NetPayable.ToString("N2")</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@settlement.OrderCount</span>
                                    </td>
                                    <td class="text-center">
                                        @if (settlement.Version > 1)
                                        {
                                            <span class="badge bg-warning text-dark">V@settlement.Version</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">V1</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @settlement.StatusBadgeClass">@settlement.Status</span>
                                    </td>
                                    <td class="text-end">@settlement.CreatedAt.ToString("MMM d, yyyy")</td>
                                    <td class="text-center">
                                        <a asp-page="/Admin/SettlementDetails" asp-route-id="@settlement.Id" class="btn btn-sm btn-outline-primary me-1" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (settlement.Status == "Draft")
                                        {
                                            <form method="post" asp-page-handler="Finalize" asp-route-settlementId="@settlement.Id" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to finalize this settlement? This will prevent further modifications.');">
                                                <button type="submit" class="btn btn-sm btn-outline-info me-1" title="Finalize">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (settlement.Status == "Finalized")
                                        {
                                            <form method="post" asp-page-handler="Approve" asp-route-settlementId="@settlement.Id" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to approve this settlement?');">
                                                <button type="submit" class="btn btn-sm btn-outline-success me-1" title="Approve">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (settlement.Status == "Finalized" || settlement.Status == "Approved")
                                        {
                                            <a asp-page-handler="Export" asp-route-settlementId="@settlement.Id" class="btn btn-sm btn-outline-secondary" title="Export CSV">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Settlement pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="/Admin/Settlements" asp-route-page="@(Model.CurrentPage - 1)"
                           asp-route-storeId="@Model.StoreId" asp-route-year="@Model.Year" asp-route-month="@Model.Month" asp-route-status="@Model.Status">
                            Previous
                        </a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="/Admin/Settlements" asp-route-page="@i"
                               asp-route-storeId="@Model.StoreId" asp-route-year="@Model.Year" asp-route-month="@Model.Month" asp-route-status="@Model.Status">
                                @i
                            </a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="/Admin/Settlements" asp-route-page="@(Model.CurrentPage + 1)"
                           asp-route-storeId="@Model.StoreId" asp-route-year="@Model.Year" asp-route-month="@Model.Month" asp-route-status="@Model.Status">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }

    <div class="mt-4">
        <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>

<!-- Generate Settlement Modal -->
<div class="modal fade" id="generateModal" tabindex="-1" aria-labelledby="generateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Generate">
                <div class="modal-header">
                    <h5 class="modal-title" id="generateModalLabel">Generate Monthly Settlement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="GenerateInput.Year" class="form-label">Year <span class="text-danger">*</span></label>
                        <select asp-for="GenerateInput.Year" class="form-select">
                            @for (var y = DateTime.UtcNow.Year; y >= DateTime.UtcNow.Year - 3; y--)
                            {
                                <option value="@y">@y</option>
                            }
                        </select>
                        <span asp-validation-for="GenerateInput.Year" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GenerateInput.Month" class="form-label">Month <span class="text-danger">*</span></label>
                        <select asp-for="GenerateInput.Month" class="form-select">
                            @for (var m = 1; m <= 12; m++)
                            {
                                var monthName = new DateTime(2000, m, 1).ToString("MMMM");
                                <option value="@m" selected="@(m == (DateTime.UtcNow.Month == 1 ? 12 : DateTime.UtcNow.Month - 1))">@monthName</option>
                            }
                        </select>
                        <span asp-validation-for="GenerateInput.Month" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GenerateInput.StoreId" class="form-label">Store</label>
                        <select asp-for="GenerateInput.StoreId" asp-items="Model.StoreOptions" class="form-select">
                        </select>
                        <div class="form-text">Leave empty if generating for all stores.</div>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="GenerateInput.GenerateAll" id="generateAllCheck">
                        <label class="form-check-label" for="generateAllCheck">
                            Generate for all stores with activity
                        </label>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="GenerateInput.Regenerate" id="regenerateCheck">
                        <label class="form-check-label" for="regenerateCheck">
                            Regenerate (create new version if settlement already exists)
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Generate Settlement</button>
                </div>
            </form>
        </div>
    </div>
</div>
