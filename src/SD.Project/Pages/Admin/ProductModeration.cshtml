@page
@model SD.Project.Pages.Admin.ProductModerationModel
@using SD.Project.ViewModels
@{
    ViewData["Title"] = "Product Moderation";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Product Moderation</h1>
        <span class="badge bg-primary fs-6">@Model.TotalCount products</span>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Stats Cards -->
    @if (Model.Stats != null)
    {
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card text-bg-warning">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.PendingCount</h3>
                        <small>Pending</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-bg-success">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.ApprovedCount</h3>
                        <small>Approved</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-bg-danger">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.RejectedCount</h3>
                        <small>Rejected</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-bg-info">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.ApprovedTodayCount</h3>
                        <small>Approved Today</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-bg-secondary">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-0">@Model.Stats.RejectedTodayCount</h3>
                        <small>Rejected Today</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="SearchTerm" class="form-label">Search</label>
                    <input type="text" class="form-control" id="SearchTerm" name="SearchTerm" 
                           value="@Model.SearchTerm" placeholder="Search in product name or description...">
                </div>
                <div class="col-md-3">
                    <label for="Status" class="form-label">Moderation Status</label>
                    <select class="form-select" id="Status" name="Status">
                        @foreach (var option in Model.StatusOptions)
                        {
                            <option value="@option.Value" selected="@(option.Value == Model.Status)">@option.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="Category" class="form-label">Category</label>
                    <input type="text" class="form-control" id="Category" name="Category" 
                           value="@Model.Category" placeholder="Filter by category...">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Batch Actions -->
    <div class="card mb-3" id="batchActionsCard" style="display: none;">
        <div class="card-body d-flex gap-2 align-items-center">
            <span id="selectedCount" class="badge bg-primary">0 selected</span>
            <button type="button" class="btn btn-success btn-sm" onclick="batchApprove()">
                <i class="bi bi-check-lg"></i> Approve Selected
            </button>
            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#batchRejectModal">
                <i class="bi bi-x-lg"></i> Reject Selected
            </button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="clearSelection()">
                Clear Selection
            </button>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Products.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <p class="text-muted mt-2">No products found matching your criteria.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 30px;">
                                    <input type="checkbox" class="form-check-input" id="selectAll" onchange="toggleSelectAll(this)">
                                </th>
                                <th style="width: 60px;">Image</th>
                                <th>Product / Store</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Moderation</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr class="@(product.ModerationStatus == "Rejected" ? "table-danger" : product.ModerationStatus == "PendingReview" ? "table-warning" : "")">
                                    <td>
                                        <input type="checkbox" class="form-check-input product-checkbox" 
                                               value="@product.ProductId" onchange="updateBatchActions()">
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(product.MainImageUrl))
                                        {
                                            <img src="@product.MainImageUrl" alt="@product.Name" 
                                                 class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                 style="width: 50px; height: 50px;">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@product.Name</div>
                                        <small class="text-muted">@(product.StoreName ?? "Unknown Store")</small>
                                        @if (!string.IsNullOrEmpty(product.SellerName))
                                        {
                                            <br><small class="text-muted">Seller: @product.SellerName</small>
                                        }
                                    </td>
                                    <td>@product.Category</td>
                                    <td>@product.Currency @product.Price.ToString("N2")</td>
                                    <td>
                                        <span class="badge @ProductModerationStatusHelper.GetProductStatusBadgeClass((SD.Project.Domain.Entities.ProductStatus)Enum.Parse(typeof(SD.Project.Domain.Entities.ProductStatus), product.Status))">
                                            @ProductModerationStatusHelper.GetProductStatusDisplayName((SD.Project.Domain.Entities.ProductStatus)Enum.Parse(typeof(SD.Project.Domain.Entities.ProductStatus), product.Status))
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @ProductModerationStatusHelper.GetStatusBadgeClass(product.ModerationStatus)">
                                            @ProductModerationStatusHelper.GetStatusDisplayName(product.ModerationStatus)
                                        </span>
                                        @if (!string.IsNullOrEmpty(product.ModerationRejectionReason))
                                        {
                                            <br><small class="text-danger" title="@product.ModerationRejectionReason">
                                                <i class="bi bi-info-circle"></i> @(product.ModerationRejectionReason.Length > 30 ? product.ModerationRejectionReason.Substring(0, 30) + "..." : product.ModerationRejectionReason)
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <span title="@product.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")">
                                            @product.CreatedAt.ToString("MMM dd, yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="/Admin/ProductModerationDetails" asp-route-id="@product.ProductId" 
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (product.ModerationStatus == "PendingReview")
                                            {
                                                <button type="button" class="btn btn-outline-success" 
                                                        onclick="approveProduct('@product.ProductId')" title="Approve">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" 
                                                        data-bs-toggle="modal" data-bs-target="#rejectModal"
                                                        data-product-id="@product.ProductId"
                                                        data-product-name="@product.Name"
                                                        title="Reject">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Products pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/Admin/ProductModeration" 
                       asp-route-Page="@(Model.CurrentPage - 1)"
                       asp-route-Status="@Model.Status"
                       asp-route-Category="@Model.Category"
                       asp-route-SearchTerm="@Model.SearchTerm">Previous</a>
                </li>
                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="/Admin/ProductModeration"
                           asp-route-Page="@i"
                           asp-route-Status="@Model.Status"
                           asp-route-Category="@Model.Category"
                           asp-route-SearchTerm="@Model.SearchTerm">@i</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/Admin/ProductModeration"
                       asp-route-Page="@(Model.CurrentPage + 1)"
                       asp-route-Status="@Model.Status"
                       asp-route-Category="@Model.Category"
                       asp-route-SearchTerm="@Model.SearchTerm">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Approve Form (hidden) -->
<form id="approveForm" method="post" asp-page-handler="Approve">
    <input type="hidden" id="approveProductId" name="productId" />
</form>

<!-- Batch Approve Form (hidden) -->
<form id="batchApproveForm" method="post" asp-page-handler="BatchApprove">
    <input type="hidden" id="batchApproveProductIds" name="productIds" />
</form>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Reject">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">Reject Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="rejectProductId" name="productId" />
                    <p>You are about to reject: <strong id="rejectProductName"></strong></p>
                    <div class="mb-3">
                        <label for="rejectReason" class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                        <select class="form-select" id="rejectReason" name="reason" required>
                            <option value="">Select reason...</option>
                            <option value="Prohibited item - This item violates marketplace policies">Prohibited item</option>
                            <option value="Inappropriate content - Description or images contain inappropriate content">Inappropriate content</option>
                            <option value="Low quality listing - Missing required information or poor quality images">Low quality listing</option>
                            <option value="Misleading information - Product information is inaccurate or misleading">Misleading information</option>
                            <option value="Counterfeit or unauthorized - Product appears to be counterfeit or unauthorized">Counterfeit or unauthorized</option>
                            <option value="Pricing issue - Price is unreasonable or appears to be an error">Pricing issue</option>
                            <option value="Other - Please contact support for more information">Other</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Product</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Batch Reject Modal -->
<div class="modal fade" id="batchRejectModal" tabindex="-1" aria-labelledby="batchRejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="BatchReject">
                <div class="modal-header">
                    <h5 class="modal-title" id="batchRejectModalLabel">Reject Selected Products</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="batchRejectProductIds" name="productIds" />
                    <p>You are about to reject <strong id="batchRejectCount">0</strong> product(s).</p>
                    <div class="mb-3">
                        <label for="batchRejectReason" class="form-label">Rejection Reason <span class="text-danger">*</span></label>
                        <select class="form-select" id="batchRejectReason" name="reason" required>
                            <option value="">Select reason...</option>
                            <option value="Prohibited item - This item violates marketplace policies">Prohibited item</option>
                            <option value="Inappropriate content - Description or images contain inappropriate content">Inappropriate content</option>
                            <option value="Low quality listing - Missing required information or poor quality images">Low quality listing</option>
                            <option value="Misleading information - Product information is inaccurate or misleading">Misleading information</option>
                            <option value="Counterfeit or unauthorized - Product appears to be counterfeit or unauthorized">Counterfeit or unauthorized</option>
                            <option value="Pricing issue - Price is unreasonable or appears to be an error">Pricing issue</option>
                            <option value="Other - Please contact support for more information">Other</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Selected</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function approveProduct(productId) {
            if (confirm('Are you sure you want to approve this product?')) {
                document.getElementById('approveProductId').value = productId;
                document.getElementById('approveForm').submit();
            }
        }

        function toggleSelectAll(checkbox) {
            var checkboxes = document.querySelectorAll('.product-checkbox');
            checkboxes.forEach(function(cb) {
                cb.checked = checkbox.checked;
            });
            updateBatchActions();
        }

        function getSelectedProductIds() {
            var checkboxes = document.querySelectorAll('.product-checkbox:checked');
            return Array.from(checkboxes).map(function(cb) {
                return cb.value;
            });
        }

        function updateBatchActions() {
            var ids = getSelectedProductIds();
            var batchCard = document.getElementById('batchActionsCard');
            var countBadge = document.getElementById('selectedCount');

            if (ids.length > 0) {
                batchCard.style.display = 'block';
                countBadge.textContent = ids.length + ' selected';
            } else {
                batchCard.style.display = 'none';
            }
        }

        function clearSelection() {
            var checkboxes = document.querySelectorAll('.product-checkbox');
            checkboxes.forEach(function(cb) {
                cb.checked = false;
            });
            document.getElementById('selectAll').checked = false;
            updateBatchActions();
        }

        function batchApprove() {
            var ids = getSelectedProductIds();
            if (ids.length === 0) {
                alert('No products selected.');
                return;
            }

            if (confirm('Are you sure you want to approve ' + ids.length + ' product(s)?')) {
                document.getElementById('batchApproveProductIds').value = ids.join(',');
                document.getElementById('batchApproveForm').submit();
            }
        }

        // Modal event handlers
        document.addEventListener('DOMContentLoaded', function() {
            var rejectModal = document.getElementById('rejectModal');
            if (rejectModal) {
                rejectModal.addEventListener('show.bs.modal', function(event) {
                    var button = event.relatedTarget;
                    var productId = button.getAttribute('data-product-id');
                    var productName = button.getAttribute('data-product-name');
                    document.getElementById('rejectProductId').value = productId;
                    document.getElementById('rejectProductName').textContent = productName;
                });
            }

            var batchRejectModal = document.getElementById('batchRejectModal');
            if (batchRejectModal) {
                batchRejectModal.addEventListener('show.bs.modal', function(event) {
                    var ids = getSelectedProductIds();
                    document.getElementById('batchRejectProductIds').value = ids.join(',');
                    document.getElementById('batchRejectCount').textContent = ids.length;
                });
            }
        });
    </script>
}
