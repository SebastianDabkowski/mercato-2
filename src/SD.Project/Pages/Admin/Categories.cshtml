@page
@model SD.Project.Pages.Admin.CategoriesModel
@{
    ViewData["Title"] = "Category Management";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Category Management</h1>
            <p class="text-muted mb-0">Manage the product category tree.</p>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
            <i class="bi bi-plus-lg me-1"></i> Add Category
        </button>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Categories.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">No categories yet</h4>
                <p class="text-muted">Start organizing your products by creating the first category.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
                    Add Your First Category
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 25%">Category Name</th>
                                <th>Slug</th>
                                <th>Parent</th>
                                <th class="text-center">Order</th>
                                <th class="text-center">Products</th>
                                <th class="text-center">Subcategories</th>
                                <th class="text-center">Status</th>
                                <th class="text-end">Created</th>
                                <th class="text-center" style="width: 150px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td>
                                        <span style="margin-left: @(category.Level * 20)px">
                                            @if (category.Level > 0)
                                            {
                                                <span class="text-muted">└─</span>
                                            }
                                            <strong>@category.Name</strong>
                                            @if (!string.IsNullOrEmpty(category.Description))
                                            {
                                                <br /><small class="text-muted">@(category.Description.Length > 50 ? category.Description.Substring(0, 50) + "..." : category.Description)</small>
                                            }
                                        </span>
                                    </td>
                                    <td><code class="text-muted">@category.Slug</code></td>
                                    <td class="text-muted">@category.ParentDisplay</td>
                                    <td class="text-center">@category.DisplayOrder</td>
                                    <td class="text-center">
                                        @if (category.ProductCount > 0)
                                        {
                                            <span class="badge bg-info">@category.ProductCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (category.ChildCount > 0)
                                        {
                                            <span class="badge bg-secondary">@category.ChildCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (category.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-end">@category.CreatedAt.ToString("MMM d, yyyy")</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-primary me-1"
                                                data-bs-toggle="modal" data-bs-target="#editCategoryModal"
                                                data-category-id="@category.Id"
                                                data-category-name="@category.Name"
                                                data-category-description="@(category.Description ?? "")"
                                                data-category-slug="@category.Slug"
                                                data-category-parent="@(category.ParentId?.ToString() ?? "")"
                                                data-category-order="@category.DisplayOrder"
                                                title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <form method="post" asp-page-handler="ToggleStatus" asp-route-categoryId="@category.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm @(category.IsActive ? "btn-outline-warning" : "btn-outline-success") me-1"
                                                    title="@(category.IsActive ? "Deactivate" : "Activate")">
                                                <i class="bi @(category.IsActive ? "bi-eye-slash" : "bi-eye")"></i>
                                            </button>
                                        </form>
                                        <form method="post" asp-page-handler="Delete" asp-route-categoryId="@category.Id" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this category? This action cannot be undone.');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Admin/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>

<!-- Create Category Modal -->
<div class="modal fade" id="createCategoryModal" tabindex="-1" aria-labelledby="createCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Create">
                <div class="modal-header">
                    <h5 class="modal-title" id="createCategoryModalLabel">Create New Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewCategory.Name" class="form-label">Category Name <span class="text-danger">*</span></label>
                        <input asp-for="NewCategory.Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="NewCategory.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCategory.Description" class="form-label">Description</label>
                        <textarea asp-for="NewCategory.Description" class="form-control" rows="3" placeholder="Optional description for this category"></textarea>
                        <span asp-validation-for="NewCategory.Description" class="text-danger"></span>
                        <div class="form-text">Brief description of the category (max 500 characters).</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCategory.Slug" class="form-label">URL Slug</label>
                        <input asp-for="NewCategory.Slug" class="form-control" placeholder="e.g., electronics-accessories" />
                        <span asp-validation-for="NewCategory.Slug" class="text-danger"></span>
                        <div class="form-text">SEO-friendly URL. Leave empty to auto-generate from name. Use lowercase letters, numbers, and hyphens only.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCategory.ParentId" class="form-label">Parent Category</label>
                        <select asp-for="NewCategory.ParentId" asp-items="Model.ParentCategoryOptions" class="form-select">
                        </select>
                        <div class="form-text">Leave as root to create a top-level category.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCategory.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="NewCategory.DisplayOrder" class="form-control" type="number" min="0" />
                        <span asp-validation-for="NewCategory.DisplayOrder" class="text-danger"></span>
                        <div class="form-text">Lower numbers appear first.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Category</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Category Modal -->
<div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCategoryModalLabel">Edit Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="EditCategory.CategoryId" id="editCategoryId" />
                    <div class="mb-3">
                        <label asp-for="EditCategory.Name" class="form-label">Category Name <span class="text-danger">*</span></label>
                        <input asp-for="EditCategory.Name" class="form-control" id="editCategoryName" placeholder="Enter category name" />
                        <span asp-validation-for="EditCategory.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditCategory.Description" class="form-label">Description</label>
                        <textarea asp-for="EditCategory.Description" class="form-control" rows="3" id="editCategoryDescription" placeholder="Optional description for this category"></textarea>
                        <span asp-validation-for="EditCategory.Description" class="text-danger"></span>
                        <div class="form-text">Brief description of the category (max 500 characters).</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditCategory.Slug" class="form-label">URL Slug</label>
                        <input asp-for="EditCategory.Slug" class="form-control" id="editCategorySlug" placeholder="e.g., electronics-accessories" />
                        <span asp-validation-for="EditCategory.Slug" class="text-danger"></span>
                        <div class="form-text">SEO-friendly URL. Changing this may affect existing links. Use lowercase letters, numbers, and hyphens only.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditCategory.ParentId" class="form-label">Parent Category</label>
                        <select asp-for="EditCategory.ParentId" asp-items="Model.ParentCategoryOptions" class="form-select" id="editCategoryParent">
                        </select>
                        <div class="form-text">Leave as root to make it a top-level category.</div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditCategory.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="EditCategory.DisplayOrder" class="form-control" type="number" min="0" id="editCategoryOrder" />
                        <span asp-validation-for="EditCategory.DisplayOrder" class="text-danger"></span>
                        <div class="form-text">Lower numbers appear first.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('editCategoryModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('editCategoryId').value = button.getAttribute('data-category-id');
            document.getElementById('editCategoryName').value = button.getAttribute('data-category-name');
            document.getElementById('editCategoryDescription').value = button.getAttribute('data-category-description');
            document.getElementById('editCategorySlug').value = button.getAttribute('data-category-slug');
            document.getElementById('editCategoryParent').value = button.getAttribute('data-category-parent');
            document.getElementById('editCategoryOrder').value = button.getAttribute('data-category-order');
        });
    </script>
}
