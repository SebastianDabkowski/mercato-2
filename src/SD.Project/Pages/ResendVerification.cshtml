@page
@model SD.Project.Pages.ResendVerificationModel
@{
    ViewData["Title"] = "Resend Verification Email";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h1 class="text-center mb-4">Resend Verification Email</h1>

        @if (Model.Success)
        {
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Email Sent!</h4>
                <p>@Model.Message</p>
            </div>
            <div class="d-grid">
                <a asp-page="/Login" class="btn btn-primary btn-lg">Go to Login</a>
            </div>
        }
        else
        {
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Message
                </div>
            }

            @if (Model.ShowForm)
            {
                <p class="text-muted text-center mb-4">
                    Enter your email address and we'll send you a new verification link.
                </p>

                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="Email"
                               value="@Model.Email" placeholder="you@example.com" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Send Verification Email</button>
                    </div>
                </form>

                <hr class="my-4">
                
                <p class="text-center">
                    Already verified? <a asp-page="/Login">Sign in here</a>
                </p>
            }
        }
    </div>
</div>
