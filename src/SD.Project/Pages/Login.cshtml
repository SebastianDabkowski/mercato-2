@page
@model SD.Project.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <h1 class="text-center mb-4">Sign In</h1>
        <p class="text-center text-muted mb-4">Welcome back to the marketplace</p>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success" role="alert">
                @Model.StatusMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @Model.ErrorMessage
                @if (Model.ShowResendVerification)
                {
                    <hr>
                    <form method="post" asp-page-handler="ResendVerification">
                        <input type="hidden" name="email" value="@Model.ResendEmail" />
                        <button type="submit" class="btn btn-link p-0">
                            Click here to resend the verification email
                        </button>
                    </form>
                }
            </div>
        }

        @if (Model.ExternalProviders.Any())
        {
            <div class="mb-4">
                <p class="text-center text-muted mb-3">Sign in with</p>
                <div class="d-grid gap-2">
                    @foreach (var provider in Model.ExternalProviders)
                    {
                        <form asp-page="/ExternalLogin" method="post">
                            <input type="hidden" name="provider" value="@provider" />
                            <button type="submit" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center gap-2">
                                @if (provider == "Google")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                    </svg>
                                    <span>Continue with Google</span>
                                }
                                else if (provider == "Facebook")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="#1877F2">
                                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                                    </svg>
                                    <span>Continue with Facebook</span>
                                }
                                else
                                {
                                    <span>Continue with @provider</span>
                                }
                            </button>
                        </form>
                    }
                </div>
                <div class="d-flex align-items-center my-4">
                    <hr class="flex-grow-1">
                    <span class="px-3 text-muted">or</span>
                    <hr class="flex-grow-1">
                </div>
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="Input.Email" 
                       value="@Model.Input.Email" placeholder="you@example.com" required autofocus>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="Input.Password" required>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="Input.RememberMe" 
                       value="true" @(Model.Input.RememberMe ? "checked" : "")>
                <label class="form-check-label" for="rememberMe">
                    Remember me
                </label>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
            </div>
        </form>

        <hr class="my-4">
        
        <p class="text-center">
            Don't have an account? <a asp-page="/Register">Create one here</a>
        </p>
    </div>
</div>
