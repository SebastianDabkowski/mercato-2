@page
@model SD.Project.Pages.RegisterModel
@using SD.Project.Domain.Entities
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <h1 class="text-center mb-4">Create an Account</h1>
        <p class="text-center text-muted mb-4">Join our marketplace as a buyer or seller</p>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Registration Successful!</h4>
                <p>@Model.SuccessMessage</p>
            </div>
        }

        @if (Model.Errors.Any())
        {
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Please correct the following errors:</h4>
                <ul class="mb-0">
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        @if (Model.ExternalProviders.Any())
        {
            <div class="mb-4">
                <div class="alert alert-info" role="alert">
                    <strong>Quick registration for buyers:</strong> Use your Google or Facebook account to create a buyer account instantly.
                </div>
                <div class="d-grid gap-2">
                    @foreach (var provider in Model.ExternalProviders)
                    {
                        <form asp-page="/ExternalLogin" method="post">
                            <input type="hidden" name="provider" value="@provider" />
                            <button type="submit" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center gap-2">
                                @if (provider == "Google")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                    </svg>
                                    <span>Continue with Google</span>
                                }
                                else if (provider == "Facebook")
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="#1877F2">
                                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                                    </svg>
                                    <span>Continue with Facebook</span>
                                }
                                else
                                {
                                    <span>Continue with @provider</span>
                                }
                            </button>
                        </form>
                    }
                </div>
                <div class="d-flex align-items-center my-4">
                    <hr class="flex-grow-1">
                    <span class="px-3 text-muted">or register with email</span>
                    <hr class="flex-grow-1">
                </div>
            </div>
        }

        <form method="post">
            <fieldset class="mb-4">
                <legend class="h5">Account Type</legend>
                <div class="btn-group w-100" role="group" aria-label="Account type selection">
                    <input type="radio" class="btn-check" name="Input.Role" id="roleBuyer" 
                           value="@((int)UserRole.Buyer)" 
                           @(Model.Input.Role == UserRole.Buyer ? "checked" : "")>
                    <label class="btn btn-outline-primary" for="roleBuyer">
                        <i class="bi bi-cart"></i> Register as Buyer
                    </label>
                    
                    <input type="radio" class="btn-check" name="Input.Role" id="roleSeller" 
                           value="@((int)UserRole.Seller)"
                           @(Model.Input.Role == UserRole.Seller ? "checked" : "")>
                    <label class="btn btn-outline-primary" for="roleSeller">
                        <i class="bi bi-shop"></i> Register as Seller
                    </label>
                </div>
            </fieldset>

            <fieldset class="mb-4">
                <legend class="h5">Account Credentials</legend>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" id="email" name="Input.Email" 
                           value="@Model.Input.Email" placeholder="you@example.com" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="password" name="Input.Password" required>
                    <div class="form-text">
                        Password must be at least 8 characters with uppercase, lowercase, and a digit.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" id="confirmPassword" name="Input.ConfirmPassword" required>
                </div>
            </fieldset>

            <fieldset class="mb-4">
                <legend class="h5">Personal Information</legend>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName" class="form-label">First Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="firstName" name="Input.FirstName" 
                               value="@Model.Input.FirstName" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="lastName" name="Input.LastName" 
                               value="@Model.Input.LastName" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="phoneNumber" name="Input.PhoneNumber" 
                           value="@Model.Input.PhoneNumber" placeholder="+1 (555) 000-0000">
                </div>
            </fieldset>

            <fieldset class="mb-4">
                <legend class="h5">Business Information <span class="text-muted fw-normal">(Optional)</span></legend>
                <div class="mb-3">
                    <label for="companyName" class="form-label">Company Name</label>
                    <input type="text" class="form-control" id="companyName" name="Input.CompanyName" 
                           value="@Model.Input.CompanyName">
                </div>
                <div class="mb-3">
                    <label for="taxId" class="form-label">Tax ID / VAT Number</label>
                    <input type="text" class="form-control" id="taxId" name="Input.TaxId" 
                           value="@Model.Input.TaxId">
                    <div class="form-text">Required for sellers and invoicing purposes.</div>
                </div>
            </fieldset>

            <div class="mb-4">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="acceptTerms" name="Input.AcceptTerms" 
                           value="true" @(Model.Input.AcceptTerms ? "checked" : "")>
                    <label class="form-check-label" for="acceptTerms">
                        I accept the <a href="/Privacy">Terms of Service and Privacy Policy</a> <span class="text-danger">*</span>
                    </label>
                </div>
            </div>

            @if (Model.ConsentTypes.Any())
            {
                <fieldset class="mb-4">
                    <legend class="h5">Communication Preferences</legend>
                    <p class="text-muted small mb-3">
                        Please review and select your data processing preferences. You can change these settings at any time in your account.
                    </p>
                    @foreach (var consent in Model.ConsentTypes)
                    {
                        var checkboxId = $"consent_{consent.Id}";
                        var isChecked = consent.AllowPreselection || consent.IsRequired;
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="@checkboxId" 
                                   name="Input.ConsentDecisions[@consent.Id]" 
                                   value="true"
                                   @(isChecked ? "checked" : "")
                                   @(consent.IsRequired ? "disabled" : "")>
                            @if (consent.IsRequired)
                            {
                                <input type="hidden" name="Input.ConsentDecisions[@consent.Id]" value="true" />
                            }
                            <label class="form-check-label" for="@checkboxId">
                                <strong>@consent.Name</strong>
                                @if (consent.IsRequired)
                                {
                                    <span class="badge bg-secondary ms-1">Required</span>
                                }
                            </label>
                            <div class="form-text">@consent.Description</div>
                        </div>
                    }
                </fieldset>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
            </div>
        </form>

        <hr class="my-4">
        
        <p class="text-center">
            Already have an account? <a asp-page="/Login">Sign in here</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
