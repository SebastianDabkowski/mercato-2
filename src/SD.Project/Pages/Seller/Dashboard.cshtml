@page
@model SD.Project.Pages.Seller.DashboardModel
@using SD.Project.Domain.Entities
@{
    ViewData["Title"] = "Seller Panel";
}

<h1>Seller Panel</h1>
<p>Welcome to your seller panel, @User.Identity?.Name!</p>

@if (Model.OnboardingRequired)
{
    <div class="alert alert-warning mb-4">
        <h5 class="alert-heading">Complete Your Seller Onboarding</h5>
        <p>You need to complete the seller onboarding wizard before you can start selling on the platform.</p>
        <a asp-page="/Seller/Onboarding" class="btn btn-primary">Start Onboarding</a>
    </div>
}
else if (Model.OnboardingStatus == OnboardingStatus.PendingVerification)
{
    <div class="alert alert-info mb-4">
        <h5 class="alert-heading">Verification Pending</h5>
        <p>Your seller application is being reviewed. We'll notify you once it's approved.</p>
        <a asp-page="/Seller/OnboardingComplete" class="btn btn-outline-info">View Status</a>
    </div>
}
else if (Model.OnboardingStatus == OnboardingStatus.Verified)
{
    <div class="alert alert-success mb-4">
        <h5 class="alert-heading">Store Active</h5>
        <p>Your store is active and ready to sell!</p>
    </div>
}

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100 border-primary">
            <div class="card-body">
                <h5 class="card-title">Sales Dashboard</h5>
                <p class="card-text">View your sales performance and trends over time.</p>
                <a asp-page="/Seller/SalesDashboard" class="btn btn-primary">View Analytics</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">My Products</h5>
                <p class="card-text">Manage your product listings.</p>
                <a asp-page="/Seller/Products" class="btn btn-primary">Manage Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Orders</h5>
                <p class="card-text">View and manage customer orders.</p>
                <a asp-page="/Seller/Orders" class="btn btn-primary">View Orders</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Payout History</h5>
                <p class="card-text">View your payout history and details.</p>
                <a asp-page="/Seller/Payouts" class="btn btn-primary">View Payouts</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Store Settings</h5>
                <p class="card-text">Configure your store profile.</p>
                <a asp-page="/Seller/StoreSettings" class="btn btn-primary">Store Settings</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Payout Settings</h5>
                <p class="card-text">Configure bank account and payout preferences.</p>
                <a asp-page="/Seller/PayoutSettings" class="btn btn-primary">Payout Settings</a>
            </div>
        </div>
    </div>
</div>
