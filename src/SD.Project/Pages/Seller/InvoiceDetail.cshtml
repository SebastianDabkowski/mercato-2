@page "{invoiceId:guid}"
@model SD.Project.Pages.Seller.InvoiceDetailModel
@{
    ViewData["Title"] = Model.Invoice is not null ? $"Invoice {Model.Invoice.InvoiceNumber}" : "Invoice Details";
}

<div class="container py-4">
    @if (Model.Invoice is null)
    {
        <div class="alert alert-danger">
            <h5 class="alert-heading">Invoice Not Found</h5>
            <p class="mb-0">The requested invoice could not be found.</p>
            <a asp-page="/Seller/Invoices" class="btn btn-primary mt-3">Back to Invoices</a>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-1">Invoice @Model.Invoice.InvoiceNumber</h1>
                <p class="text-muted mb-0">@Model.Invoice.PeriodDisplay</p>
            </div>
            <div class="d-flex gap-2">
                @if (Model.Invoice.CanDownloadPdf)
                {
                    <a asp-page="/Api/InvoicePdf" asp-route-invoiceId="@Model.Invoice.Id" class="btn btn-primary" target="_blank">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download me-2" viewBox="0 0 16 16">
                            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"/>
                            <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"/>
                        </svg>
                        Download PDF
                    </a>
                }
                <a asp-page="/Seller/Invoices" class="btn btn-outline-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                    </svg>
                    Back to Invoices
                </a>
            </div>
        </div>

        <div class="row">
            <!-- Invoice Summary Card -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Invoice Summary</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-6">Status</dt>
                            <dd class="col-6 text-end">
                                <span class="badge @Model.Invoice.StatusBadgeClass">@Model.Invoice.Status</span>
                                @if (Model.Invoice.IsOverdue)
                                {
                                    <span class="badge bg-danger ms-1">Overdue</span>
                                }
                            </dd>

                            <dt class="col-6">Invoice Number</dt>
                            <dd class="col-6 text-end">@Model.Invoice.InvoiceNumber</dd>

                            <dt class="col-6">Issue Date</dt>
                            <dd class="col-6 text-end">@Model.Invoice.IssueDate.ToString("dd MMM yyyy")</dd>

                            <dt class="col-6">Due Date</dt>
                            <dd class="col-6 text-end">@Model.Invoice.DueDate.ToString("dd MMM yyyy")</dd>

                            <dt class="col-6">Period</dt>
                            <dd class="col-6 text-end">@Model.Invoice.PeriodDisplay</dd>

                            <dt class="col-6 border-top pt-2">Net Amount</dt>
                            <dd class="col-6 text-end border-top pt-2">@Model.Invoice.Currency @Model.Invoice.NetAmount.ToString("N2")</dd>

                            <dt class="col-6">Tax (@Model.Invoice.TaxRate.ToString("N0")%)</dt>
                            <dd class="col-6 text-end">@Model.Invoice.Currency @Model.Invoice.TaxAmount.ToString("N2")</dd>

                            <dt class="col-6 fw-bold">Total Amount</dt>
                            <dd class="col-6 text-end fw-bold fs-5">@Model.Invoice.Currency @Model.Invoice.GrossAmount.ToString("N2")</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Parties Information -->
            <div class="col-lg-8 mb-4">
                <div class="row">
                    <!-- From (Issuer) -->
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">From (Issuer)</h6>
                            </div>
                            <div class="card-body">
                                <p class="fw-bold mb-1">@Model.Invoice.IssuerName</p>
                                @if (!string.IsNullOrEmpty(Model.Invoice.IssuerTaxId))
                                {
                                    <p class="mb-1 small text-muted">Tax ID: @Model.Invoice.IssuerTaxId</p>
                                }
                                <p class="mb-1">@Model.Invoice.IssuerAddress</p>
                                <p class="mb-0">@Model.Invoice.IssuerPostalCode @Model.Invoice.IssuerCity, @Model.Invoice.IssuerCountry</p>
                            </div>
                        </div>
                    </div>

                    <!-- To (Seller) -->
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">To (Billed Party)</h6>
                            </div>
                            <div class="card-body">
                                <p class="fw-bold mb-1">@Model.Invoice.SellerName</p>
                                @if (!string.IsNullOrEmpty(Model.Invoice.SellerTaxId))
                                {
                                    <p class="mb-1 small text-muted">Tax ID: @Model.Invoice.SellerTaxId</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Invoice.SellerAddress))
                                {
                                    <p class="mb-1">@Model.Invoice.SellerAddress</p>
                                    <p class="mb-0">@Model.Invoice.SellerPostalCode @Model.Invoice.SellerCity, @Model.Invoice.SellerCountry</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status Timeline -->
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">Timeline</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="text-center">
                                <div class="badge @(Model.Invoice.CreatedAt != default ? "bg-success" : "bg-secondary") rounded-circle p-2 mb-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                                    </svg>
                                </div>
                                <p class="small mb-0">Created</p>
                                <p class="small text-muted mb-0">@Model.Invoice.CreatedAt.ToString("dd/MM/yy")</p>
                            </div>
                            <div class="flex-grow-1 align-self-center mx-2" style="height: 2px; background: #dee2e6;"></div>
                            <div class="text-center">
                                <div class="badge @(Model.Invoice.IssuedAt.HasValue ? "bg-success" : "bg-secondary") rounded-circle p-2 mb-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                                        <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"/>
                                    </svg>
                                </div>
                                <p class="small mb-0">Issued</p>
                                <p class="small text-muted mb-0">@(Model.Invoice.IssuedAt?.ToString("dd/MM/yy") ?? "-")</p>
                            </div>
                            <div class="flex-grow-1 align-self-center mx-2" style="height: 2px; background: #dee2e6;"></div>
                            <div class="text-center">
                                <div class="badge @(Model.Invoice.PaidAt.HasValue ? "bg-success" : "bg-secondary") rounded-circle p-2 mb-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                        <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                                    </svg>
                                </div>
                                <p class="small mb-0">Paid</p>
                                <p class="small text-muted mb-0">@(Model.Invoice.PaidAt?.ToString("dd/MM/yy") ?? "-")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Invoice Lines -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Invoice Items</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Description</th>
                                <th scope="col" class="text-center">Qty</th>
                                <th scope="col" class="text-end">Unit Price</th>
                                <th scope="col" class="text-center">Tax Rate</th>
                                <th scope="col" class="text-end">Net</th>
                                <th scope="col" class="text-end">Tax</th>
                                <th scope="col" class="text-end">Gross</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.Invoice.Lines)
                            {
                                <tr>
                                    <td>@line.Description</td>
                                    <td class="text-center">@line.Quantity.ToString("N2")</td>
                                    <td class="text-end">@Model.Invoice.Currency @line.UnitPrice.ToString("N2")</td>
                                    <td class="text-center">@line.TaxRate.ToString("N0")%</td>
                                    <td class="text-end">@Model.Invoice.Currency @line.NetAmount.ToString("N2")</td>
                                    <td class="text-end">@Model.Invoice.Currency @line.TaxAmount.ToString("N2")</td>
                                    <td class="text-end fw-bold">@Model.Invoice.Currency @line.GrossAmount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end fw-bold">Total:</td>
                                <td class="text-end fw-bold">@Model.Invoice.Currency @Model.Invoice.NetAmount.ToString("N2")</td>
                                <td class="text-end fw-bold">@Model.Invoice.Currency @Model.Invoice.TaxAmount.ToString("N2")</td>
                                <td class="text-end fw-bold fs-5">@Model.Invoice.Currency @Model.Invoice.GrossAmount.ToString("N2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Credit Notes -->
        @if (Model.Invoice.CreditNotes is not null && Model.Invoice.CreditNotes.Count > 0)
        {
            <div class="card mb-4">
                <div class="card-header bg-warning bg-opacity-25">
                    <h5 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                        </svg>
                        Credit Notes
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Credit Note Number</th>
                                    <th scope="col" class="text-center">Type</th>
                                    <th scope="col">Issue Date</th>
                                    <th scope="col">Reason</th>
                                    <th scope="col" class="text-end">Amount</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var creditNote in Model.Invoice.CreditNotes)
                                {
                                    <tr>
                                        <td class="fw-medium">@creditNote.CreditNoteNumber</td>
                                        <td class="text-center">
                                            <span class="badge @creditNote.TypeBadgeClass">@creditNote.Type</span>
                                        </td>
                                        <td>@creditNote.IssueDate.ToString("dd MMM yyyy")</td>
                                        <td>@creditNote.Reason</td>
                                        <td class="text-end fw-bold text-danger">@creditNote.Currency @creditNote.GrossAmount.ToString("N2")</td>
                                        <td class="text-end">
                                            <a asp-page="/Api/CreditNotePdf" asp-route-creditNoteId="@creditNote.Id" class="btn btn-sm btn-outline-secondary" title="Download PDF" target="_blank">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                                                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"/>
                                                    <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"/>
                                                </svg>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Notes -->
        @if (!string.IsNullOrEmpty(Model.Invoice.Notes))
        {
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Notes</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Invoice.Notes</p>
                </div>
            </div>
        }
    }
</div>
