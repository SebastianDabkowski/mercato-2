@page
@model SD.Project.Pages.Seller.ImportProductsModel
@{
    ViewData["Title"] = "Import Products";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Import Products</h1>
            <p class="text-muted mb-0">Import your product catalog from a CSV file.</p>
        </div>
        <a asp-page="/Seller/Products" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Products
        </a>
    </div>

    @if (Model.ImportResult != null)
    {
        @if (!Model.ImportResult.IsSuccess)
        {
            <div class="alert alert-danger" role="alert">
                <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Import Failed</h5>
                <ul class="mb-0">
                    @foreach (var error in Model.ImportResult.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="alert @(Model.ImportResult.FailureCount == 0 ? "alert-success" : "alert-warning")" role="alert">
                <h5 class="alert-heading">
                    @if (Model.ImportResult.FailureCount == 0)
                    {
                        <i class="bi bi-check-circle me-2"></i>
                        <text>Import Completed Successfully</text>
                    }
                    else
                    {
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <text>Import Completed with Errors</text>
                    }
                </h5>
                <p class="mb-2">
                    <strong>@Model.ImportResult.CreatedCount</strong> products created,
                    <strong>@Model.ImportResult.UpdatedCount</strong> products updated,
                    <strong>@Model.ImportResult.FailureCount</strong> rows failed.
                </p>
                @if (Model.ImportResult.RowErrors.Count > 0)
                {
                    <hr>
                    <h6>Errors:</h6>
                    <ul class="mb-0">
                        @foreach (var rowError in Model.ImportResult.RowErrors.Take(10))
                        {
                            <li>Row @rowError.RowNumber (@(rowError.Sku ?? "no SKU")): @string.Join(", ", rowError.Errors)</li>
                        }
                        @if (Model.ImportResult.RowErrors.Count > 10)
                        {
                            <li><em>... and @(Model.ImportResult.RowErrors.Count - 10) more errors</em></li>
                        }
                    </ul>
                }
            </div>
        }
    }

    @if (Model.ValidationResult != null && Model.ImportResult == null)
    {
        @if (!Model.ValidationResult.IsValid && Model.ValidationResult.FileErrors.Count > 0)
        {
            <div class="alert alert-danger" role="alert">
                <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Validation Failed</h5>
                <ul class="mb-0">
                    @foreach (var error in Model.ValidationResult.FileErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
        else if (Model.ValidationResult.IsValid || Model.ValidationResult.ValidRows > 0)
        {
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Validation Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="fs-3 fw-bold">@Model.ValidationResult.TotalRows</div>
                            <div class="text-muted">Total Rows</div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="fs-3 fw-bold text-success">@Model.ValidationResult.ValidRows</div>
                            <div class="text-muted">Valid Rows</div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="fs-3 fw-bold text-primary">@Model.ValidationResult.ToBeCreated</div>
                            <div class="text-muted">To Be Created</div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="fs-3 fw-bold text-info">@Model.ValidationResult.ToBeUpdated</div>
                            <div class="text-muted">To Be Updated</div>
                        </div>
                    </div>

                    @if (Model.ValidationResult.RowErrors.Count > 0)
                    {
                        <hr>
                        <div class="alert alert-warning mb-0">
                            <h6><i class="bi bi-exclamation-triangle me-1"></i> @Model.ValidationResult.InvalidRows rows have validation errors and will be skipped:</h6>
                            <ul class="mb-0">
                                @foreach (var rowError in Model.ValidationResult.RowErrors.Take(5))
                                {
                                    <li>Row @rowError.RowNumber (@(rowError.Sku ?? "no SKU")): @string.Join(", ", rowError.Errors)</li>
                                }
                                @if (Model.ValidationResult.RowErrors.Count > 5)
                                {
                                    <li><em>... and @(Model.ValidationResult.RowErrors.Count - 5) more errors</em></li>
                                }
                            </ul>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form method="post" asp-page-handler="Confirm">
                        <input type="hidden" asp-for="ValidatedRowsJson" />
                        <input type="hidden" asp-for="FileName" />
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-cloud-upload me-2"></i>Confirm Import (@Model.ValidationResult.ValidRows rows)
                        </button>
                        <a asp-page="/Seller/ImportProducts" class="btn btn-outline-secondary btn-lg ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        }
    }

    @if (Model.ValidationResult == null && Model.ImportResult == null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-cloud-upload me-2"></i>Upload Import File</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Validate" enctype="multipart/form-data">
                            <div class="mb-4">
                                <label class="form-label">Select CSV File</label>
                                <input type="file" class="form-control form-control-lg" asp-for="ImportFile" accept=".csv" />
                                <div class="form-text">
                                    Upload a CSV file with your product data. Maximum file size: 10MB.
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Validate File
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>File Template</h5>
                    </div>
                    <div class="card-body">
                        <p>Download a template CSV file to see the expected format.</p>
                        <a asp-page-handler="DownloadTemplate" class="btn btn-outline-primary">
                            <i class="bi bi-download me-2"></i>Download Template
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-question-circle me-2"></i>Required Columns</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><strong>SKU</strong> - Unique product identifier (required for matching)</li>
                            <li class="mb-2"><strong>Name</strong> - Product title (3-200 chars)</li>
                            <li class="mb-2"><strong>Price</strong> - Product price (positive number)</li>
                            <li class="mb-2"><strong>Currency</strong> - 3-letter code (e.g., USD, EUR)</li>
                            <li class="mb-2"><strong>Stock</strong> - Available quantity</li>
                            <li class="mb-2"><strong>Category</strong> - Product category</li>
                        </ul>
                        <hr>
                        <p class="mb-0 text-muted small">
                            <strong>Optional:</strong> Description, WeightKg, LengthCm, WidthCm, HeightCm
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.ImportHistory.Count > 0)
    {
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Import History</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>File Name</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Total</th>
                                <th class="text-center">Created</th>
                                <th class="text-center">Updated</th>
                                <th class="text-center">Failed</th>
                                <th class="text-end">Date</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in Model.ImportHistory)
                            {
                                <tr>
                                    <td>@job.FileName</td>
                                    <td class="text-center">
                                        <span class="badge @job.StatusClass">@job.StatusDisplay</span>
                                    </td>
                                    <td class="text-center">@job.TotalRows</td>
                                    <td class="text-center text-success">@job.CreatedCount</td>
                                    <td class="text-center text-info">@job.UpdatedCount</td>
                                    <td class="text-center @(job.FailureCount > 0 ? "text-danger" : "")">@job.FailureCount</td>
                                    <td class="text-end">@job.CreatedAt.ToString("MMM d, yyyy HH:mm")</td>
                                    <td class="text-center">
                                        @if (job.HasErrorReport)
                                        {
                                            <a asp-page-handler="DownloadErrorReport" asp-route-jobId="@job.Id" class="btn btn-sm btn-outline-danger" title="Download Error Report">
                                                <i class="bi bi-file-earmark-text"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
