@page "{id:guid}"
@model SD.Project.Pages.Seller.ProductImagesModel
@{
    ViewData["Title"] = "Manage Product Images";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="mb-4">Manage Product Images</h1>
            <p class="text-muted">Upload and manage images for your product. The main image will be displayed as the primary thumbnail in product listings.</p>

            @if (Model.Errors.Any())
            {
                <div class="alert alert-danger">
                    <ul class="mb-0">
                        @foreach (var error in Model.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">
                    @Model.SuccessMessage
                </div>
            }

            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Product: @Model.ProductName</h5>
                    <a asp-page="/Seller/EditProduct" asp-route-id="@Model.ProductId" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i> Back to Edit
                    </a>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Upload" enctype="multipart/form-data">
                        <div class="row align-items-end">
                            <div class="col-md-8 mb-3">
                                <label for="imageFile" class="form-label">Upload Image</label>
                                <input type="file" class="form-control" id="imageFile" name="imageFile" accept=".jpg,.jpeg,.png,.webp" required />
                                <small class="text-muted">Allowed formats: JPG, PNG, WebP. Maximum size: 5 MB.</small>
                            </div>
                            <div class="col-md-2 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="setAsMain" name="setAsMain" value="true">
                                    <label class="form-check-label" for="setAsMain">
                                        Set as main
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-2 mb-3">
                                <button type="submit" class="btn btn-primary w-100">Upload</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Product Images (@Model.Images.Count of 10)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Images.Count == 0)
                    {
                        <div class="text-center text-muted py-5">
                            <p>No images uploaded yet. Upload your first image above.</p>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var image in Model.Images.OrderBy(i => i.DisplayOrder))
                            {
                                <div class="col-md-4 col-lg-3 mb-4">
                                    <div class="card h-100 @(image.IsMain ? "border-primary" : "")">
                                        <div class="position-relative">
                                            <img src="@image.ThumbnailUrl" class="card-img-top" alt="@image.FileName" style="height: 200px; object-fit: cover;">
                                            @if (image.IsMain)
                                            {
                                                <span class="badge bg-primary position-absolute top-0 start-0 m-2">Main</span>
                                            }
                                        </div>
                                        <div class="card-body p-2">
                                            <p class="card-text small text-truncate mb-2" title="@image.FileName">@image.FileName</p>
                                            <div class="d-flex gap-1">
                                                @if (!image.IsMain)
                                                {
                                                    <form method="post" asp-page-handler="SetMain" class="d-inline">
                                                        <input type="hidden" name="imageId" value="@image.Id" />
                                                        <button type="submit" class="btn btn-outline-primary btn-sm" title="Set as main image">
                                                            Set Main
                                                        </button>
                                                    </form>
                                                }
                                                <a href="@image.ImageUrl" target="_blank" class="btn btn-outline-secondary btn-sm" title="View full size">
                                                    View
                                                </a>
                                                <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this image?');">
                                                    <input type="hidden" name="imageId" value="@image.Id" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete image">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a asp-page="/Seller/Products" class="btn btn-outline-secondary">Back to Products</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
