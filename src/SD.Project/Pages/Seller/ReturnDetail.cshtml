                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 1rem;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Case Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Case ID</small>
                            <p class="mb-0 fw-bold">@Model.ReturnRequest.CaseNumber</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Order Number</small>
                            <p class="mb-0">@Model.ReturnRequest.OrderNumber</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Type</small>
                            <p class="mb-0">
                                <span class="badge @typeClass">@typeDisplay</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Status</small>
                            <p class="mb-0">
                                <span class="badge @statusClass">@statusDisplay</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Submitted</small>
                            <p class="mb-0">@Model.ReturnRequest.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                        @if (Model.ReturnRequest.ApprovedAt.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Approved</small>
                                <p class="mb-0">@Model.ReturnRequest.ApprovedAt.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                        @if (Model.ReturnRequest.RejectedAt.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Rejected</small>
                                <p class="mb-0">@Model.ReturnRequest.RejectedAt.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                        @if (Model.ReturnRequest.CompletedAt.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Completed</small>
                                <p class="mb-0">@Model.ReturnRequest.CompletedAt.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                        <hr>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold">Case Amount</span>
                            <span class="fw-bold text-primary">@Model.ReturnRequest.Currency @Model.ReturnRequest.SubOrderTotal.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
