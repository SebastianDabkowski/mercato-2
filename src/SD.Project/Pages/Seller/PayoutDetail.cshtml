@page "{payoutId:guid}"
@model SD.Project.Pages.Seller.PayoutDetailModel
@{
    ViewData["Title"] = "Payout Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Payout Details</h1>
            @if (!string.IsNullOrEmpty(Model.StoreName))
            {
                <p class="text-muted mb-0">@Model.StoreName</p>
            }
        </div>
        <a asp-page="/Seller/Payouts" class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
            </svg>
            Back to Payouts
        </a>
    </div>

    @if (Model.Payout is null)
    {
        <div class="alert alert-warning">
            <h5 class="alert-heading">Payout Not Found</h5>
            <p class="mb-0">The requested payout could not be found.</p>
            <a asp-page="/Seller/Payouts" class="btn btn-primary mt-3">View All Payouts</a>
        </div>
    }
    else
    {
        var statusClass = Model.Payout.Status switch
        {
            "Paid" => "bg-success",
            "Processing" => "bg-info",
            "Scheduled" => "bg-primary",
            "Failed" => "bg-danger",
            _ => "bg-secondary"
        };

        <!-- Payout Summary Card -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cash-stack me-2" viewBox="0 0 16 16">
                            <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4"/>
                            <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2z"/>
                        </svg>
                        Payout Summary
                    </h5>
                    <span class="badge @statusClass fs-6">@Model.Payout.Status</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Total Amount:</dt>
                            <dd class="col-sm-7 fw-bold fs-5">@Model.Payout.Currency @Model.Payout.TotalAmount.ToString("N2")</dd>

                            <dt class="col-sm-5">Payout Method:</dt>
                            <dd class="col-sm-7">@Model.Payout.PayoutMethod</dd>

                            <dt class="col-sm-5">Scheduled Date:</dt>
                            <dd class="col-sm-7">@Model.Payout.ScheduledDate.ToString("MMM dd, yyyy")</dd>

                            @if (Model.Payout.PaidAt.HasValue)
                            {
                                <dt class="col-sm-5">Paid Date:</dt>
                                <dd class="col-sm-7">@Model.Payout.PaidAt.Value.ToString("MMM dd, yyyy HH:mm")</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Payout.PayoutReference))
                            {
                                <dt class="col-sm-5">Reference:</dt>
                                <dd class="col-sm-7"><code>@Model.Payout.PayoutReference</code></dd>
                            }
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Orders Included:</dt>
                            <dd class="col-sm-7">@Model.Payout.OrderBreakdown.Count</dd>

                            <dt class="col-sm-5">Created:</dt>
                            <dd class="col-sm-7">@Model.Payout.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                            @if (Model.Payout.ProcessedAt.HasValue)
                            {
                                <dt class="col-sm-5">Processed:</dt>
                                <dd class="col-sm-7">@Model.Payout.ProcessedAt.Value.ToString("MMM dd, yyyy HH:mm")</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Payout.Status == "Failed")
        {
            <!-- Failed Payout Details -->
            <div class="alert alert-danger mb-4">
                <h5 class="alert-heading">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                        <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                        <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                    </svg>
                    Payout Failed
                </h5>
                @if (!string.IsNullOrEmpty(Model.Payout.ErrorMessage))
                {
                    <p class="mb-2"><strong>Reason:</strong> @Model.Payout.ErrorMessage</p>
                }
                @if (!string.IsNullOrEmpty(Model.Payout.ErrorReference))
                {
                    <p class="mb-2"><strong>Error Reference:</strong> <code>@Model.Payout.ErrorReference</code></p>
                }
                @if (Model.Payout.FailedAt.HasValue)
                {
                    <p class="mb-2"><strong>Failed At:</strong> @Model.Payout.FailedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                }
                <p class="mb-0">
                    <strong>Retry Status:</strong> 
                    @if (Model.Payout.CanRetry)
                    {
                        <span class="text-info">Retry @(Model.Payout.RetryCount + 1) of @Model.Payout.MaxRetries available</span>
                        @if (Model.Payout.NextRetryAt.HasValue)
                        {
                            <span> - Next retry: @Model.Payout.NextRetryAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                        }
                    }
                    else
                    {
                        <span class="text-danger">Maximum retries reached (@Model.Payout.RetryCount of @Model.Payout.MaxRetries)</span>
                    }
                </p>
            </div>
        }

        <!-- Order Breakdown Card -->
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list-ul me-2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2m0 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2"/>
                    </svg>
                    Order Breakdown
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Payout.OrderBreakdown.Count == 0)
                {
                    <div class="text-center py-4 text-muted">
                        No order breakdown available.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Order</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end">Seller Amount</th>
                                    <th scope="col" class="text-end">Shipping</th>
                                    <th scope="col" class="text-end">Commission</th>
                                    <th scope="col" class="text-end">Net Payout</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Payout.OrderBreakdown)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(order.OrderNumber))
                                            {
                                                <span class="fw-bold">@order.OrderNumber</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">@Model.Payout.Currency @order.SellerAmount.ToString("N2")</td>
                                        <td class="text-end">@Model.Payout.Currency @order.ShippingAmount.ToString("N2")</td>
                                        <td class="text-end text-danger">-@Model.Payout.Currency @order.CommissionAmount.ToString("N2")</td>
                                        <td class="text-end fw-bold">@Model.Payout.Currency @order.PayoutAmount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="5" class="text-end fw-bold">Total Payout:</td>
                                    <td class="text-end fw-bold fs-5">@Model.Payout.Currency @Model.Payout.TotalAmount.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>
