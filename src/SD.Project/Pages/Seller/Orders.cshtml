@page
@model SD.Project.Pages.Seller.OrdersModel
@{
    ViewData["Title"] = "My Orders";
    var hasFilters = !string.IsNullOrEmpty(Model.Status) || Model.FromDate.HasValue || Model.ToDate.HasValue || !string.IsNullOrEmpty(Model.BuyerSearch);
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Orders</h1>
            @if (!string.IsNullOrEmpty(Model.StoreName))
            {
                <p class="text-muted mb-0">Orders for @Model.StoreName</p>
            }
        </div>
        <a asp-page="/Seller/Dashboard" class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
            </svg>
            Back to Dashboard
        </a>
    </div>

    @if (!Model.StoreId.HasValue)
    {
        <div class="alert alert-warning">
            <h5 class="alert-heading">Store Not Found</h5>
            <p class="mb-0">You need to complete seller onboarding to view orders.</p>
            <a asp-page="/Seller/Onboarding" class="btn btn-primary mt-3">Complete Onboarding</a>
        </div>
    }
    else
    {
        @if (TempData["ExportError"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ExportError"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Filters Card -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel me-2" viewBox="0 0 16 16">
                        <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                    </svg>
                    Filter Orders
                </h6>
            </div>
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label for="status" class="form-label">Status</label>
                        <select class="form-select" id="status" name="Status">
                            <option value="">All Statuses</option>
                            @foreach (var status in Model.AvailableStatuses)
                            {
                                var displayName = status == "Paid" ? "Confirmed (Paid)" : status;
                                if (Model.Status == status)
                                {
                                    <option value="@status" selected>@displayName</option>
                                }
                                else
                                {
                                    <option value="@status">@displayName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="fromDate" class="form-label">From Date</label>
                        <input type="date" class="form-control" id="fromDate" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label for="toDate" class="form-label">To Date</label>
                        <input type="date" class="form-control" id="toDate" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-3">
                        <label for="buyerSearch" class="form-label">Customer/Order #</label>
                        <input type="text" class="form-control" id="buyerSearch" name="BuyerSearch" value="@Model.BuyerSearch" placeholder="Search by name or order #">
                    </div>
                    <div class="col-md-2 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search me-1" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                            </svg>
                            Filter
                        </button>
                        @if (hasFilters)
                        {
                            <a asp-page="/Seller/Orders" class="btn btn-outline-secondary" title="Clear Filters">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                                </svg>
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        @if (Model.SubOrders.Count == 0 && !hasFilters)
        {
            <div class="text-center py-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-bag-x text-muted mb-3" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6.146 8.146a.5.5 0 0 1 .708 0L8 9.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 10l1.147 1.146a.5.5 0 0 1-.708.708L8 10.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 10 6.146 8.854a.5.5 0 0 1 0-.708"/>
                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                </svg>
                <h4 class="text-muted">No orders yet</h4>
                <p class="text-muted">When customers purchase your products, their orders will appear here.</p>
                <a asp-page="/Seller/Products" class="btn btn-primary mt-2">Manage Products</a>
            </div>
        }
        else if (Model.SubOrders.Count == 0 && hasFilters)
        {
            <div class="text-center py-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-search text-muted mb-3" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                </svg>
                <h4 class="text-muted">No orders match your filters</h4>
                <p class="text-muted">Try adjusting your filter criteria or clear filters to see all orders.</p>
                <a asp-page="/Seller/Orders" class="btn btn-outline-primary mt-2">Clear Filters</a>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header bg-light">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag-check me-2" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z"/>
                                </svg>
                                Your Orders (@Model.TotalCount)
                                @if (hasFilters)
                                {
                                    <span class="badge bg-info ms-2">Filtered</span>
                                }
                            </h5>
                        </div>
                        <div class="col-auto">
                            <!-- Export Dropdown -->
                            <div class="dropdown">
                                <button class="btn btn-outline-success dropdown-toggle" type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download me-1" viewBox="0 0 16 16">
                                        <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"/>
                                        <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"/>
                                    </svg>
                                    Export
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="exportDropdown">
                                    <li>
                                        <form method="post" asp-page-handler="Export" class="d-inline">
                                            <input type="hidden" name="format" value="csv" />
                                            <input type="hidden" name="Status" value="@Model.Status" />
                                            <input type="hidden" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                                            <input type="hidden" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                                            <input type="hidden" name="BuyerSearch" value="@Model.BuyerSearch" />
                                            <button type="submit" class="dropdown-item">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filetype-csv me-2" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5zM3.517 14.841a1.13 1.13 0 0 0 .401.823q.195.162.478.252.284.091.665.091.507 0 .859-.158.354-.158.539-.44.187-.284.187-.656 0-.336-.134-.56a1 1 0 0 0-.375-.357 2 2 0 0 0-.566-.21l-.621-.144a1 1 0 0 1-.404-.176.37.37 0 0 1-.144-.299q0-.234.185-.384.188-.152.512-.152.214 0 .37.068a.6.6 0 0 1 .246.181.56.56 0 0 1 .12.258h.75a1.1 1.1 0 0 0-.2-.566 1.2 1.2 0 0 0-.5-.41 1.8 1.8 0 0 0-.78-.152q-.439 0-.776.15-.337.149-.527.421-.19.273-.19.639 0 .302.122.524.124.223.352.367.228.143.539.213l.618.144q.31.073.463.193a.39.39 0 0 1 .152.326.5.5 0 0 1-.085.29.56.56 0 0 1-.255.193q-.167.07-.413.07-.175 0-.32-.04a.8.8 0 0 1-.248-.115.58.58 0 0 1-.162-.184.6.6 0 0 1-.06-.266zm2.094-3.178a.5.5 0 0 1-.47.33H4.5a.5.5 0 0 1-.5-.5v-4a.5.5 0 0 1 .5-.5h.64a.5.5 0 0 1 .47.33l.47 1.28a.5.5 0 0 1 0 .34l-.47 1.28-.56-.84.59-.44-.03.26a.5.5 0 0 1-.47.33h-.59l.06-.43-.59.43Zm4.78 2.24a1.1 1.1 0 0 0-.263-.02H8.5a.5.5 0 0 1-.5-.5v-4a.5.5 0 0 1 .5-.5h1.67q.351 0 .597.09.249.088.42.24.17.152.26.343.09.191.09.395 0 .206-.09.399-.09.192-.26.349-.169.154-.42.254-.247.099-.596.109v.012q.35.012.603.12.253.109.426.271.174.162.267.358.093.196.093.418 0 .205-.09.39a.9.9 0 0 1-.26.316q-.171.135-.42.212a2 2 0 0 1-.597.081v.004z"/>
                                                </svg>
                                                Export as CSV
                                            </button>
                                        </form>
                                    </li>
                                    <li>
                                        <form method="post" asp-page-handler="Export" class="d-inline">
                                            <input type="hidden" name="format" value="xlsx" />
                                            <input type="hidden" name="Status" value="@Model.Status" />
                                            <input type="hidden" name="FromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" />
                                            <input type="hidden" name="ToDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" />
                                            <input type="hidden" name="BuyerSearch" value="@Model.BuyerSearch" />
                                            <button type="submit" class="dropdown-item">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-spreadsheet me-2" viewBox="0 0 16 16">
                                                    <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2M9.5 3A1.5 1.5 0 0 0 11 4.5h2V9H3V2a1 1 0 0 1 1-1h5.5zM3 12v-2h2v2zm0 1h2v2H4a1 1 0 0 1-1-1zm3 2v-2h3v2zm4 0v-2h3v1a1 1 0 0 1-1 1zm3-3h-3v-2h3zm-7 0v-2h3v2z"/>
                                                </svg>
                                                Export as Excel
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Order #</th>
                                    <th scope="col">Customer</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-center">Items</th>
                                    <th scope="col" class="text-center">Status</th>
                                    <th scope="col" class="text-end">Amount</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.SubOrders)
                                {
                                    var statusClass = order.Status switch
                                    {
                                        "Paid" => "bg-success",
                                        "Processing" => "bg-info",
                                        "Shipped" => "bg-primary",
                                        "Delivered" => "bg-success",
                                        "Cancelled" => "bg-secondary",
                                        "Refunded" => "bg-warning",
                                        _ => "bg-warning"
                                    };
                                    var statusDisplay = order.Status switch
                                    {
                                        "Paid" => "Confirmed",
                                        _ => order.Status
                                    };
                                    <tr>
                                        <td>
                                            <a asp-page="/Seller/OrderDetail" asp-route-subOrderId="@order.SubOrderId" class="fw-bold text-decoration-none">
                                                @order.OrderNumber
                                            </a>
                                        </td>
                                        <td>@order.BuyerName</td>
                                        <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="text-center">@order.ItemCount</td>
                                        <td class="text-center">
                                            <span class="badge @statusClass">@statusDisplay</span>
                                        </td>
                                        <td class="text-end fw-bold">@order.Currency @order.Total.ToString("N2")</td>
                                        <td class="text-end">
                                            <a asp-page="/Seller/OrderDetail" asp-route-subOrderId="@order.SubOrderId" class="btn btn-sm btn-outline-primary">
                                                View Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-light">
                        <nav aria-label="Order pagination">
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Seller/Orders" 
                                       asp-route-PageNumber="@(Model.CurrentPage - 1)"
                                       asp-route-Status="@Model.Status"
                                       asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                       asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
                                       asp-route-BuyerSearch="@Model.BuyerSearch">Previous</a>
                                </li>
                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-page="/Seller/Orders"
                                           asp-route-PageNumber="@i"
                                           asp-route-Status="@Model.Status"
                                           asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                           asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
                                           asp-route-BuyerSearch="@Model.BuyerSearch">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Seller/Orders"
                                       asp-route-PageNumber="@(Model.CurrentPage + 1)"
                                       asp-route-Status="@Model.Status"
                                       asp-route-FromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                       asp-route-ToDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
                                       asp-route-BuyerSearch="@Model.BuyerSearch">Next</a>
                                </li>
                            </ul>
                        </nav>
                        <p class="text-muted text-center mt-2 mb-0 small">
                            Showing @Model.DisplayStartItem-@Model.DisplayEndItem of @Model.TotalCount orders
                        </p>
                    </div>
                }
            </div>
        }
    }
</div>
