@page
@model SD.Project.Pages.Seller.ProductsModel
@using SD.Project.Domain.Entities
@{
    ViewData["Title"] = "My Products";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>My Products</h1>
            <p class="text-muted mb-0">Manage your product catalog.</p>
        </div>
        <div>
            <a asp-page="/Seller/ImportProducts" class="btn btn-outline-success me-2">
                <i class="bi bi-cloud-upload me-1"></i> Import
            </a>
            <a asp-page="/Seller/BulkUpdate" class="btn btn-outline-primary me-2">
                <i class="bi bi-collection me-1"></i> Bulk Update
            </a>
            <a asp-page="/Seller/AddProduct" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Add Product
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Products.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <h4 class="text-muted">No products yet</h4>
                <p class="text-muted">Start building your catalog by adding your first product.</p>
                <a asp-page="/Seller/AddProduct" class="btn btn-primary">Add Your First Product</a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>Category</th>
                                <th class="text-end">Price</th>
                                <th class="text-center">Stock</th>
                                <th class="text-center">Status</th>
                                <th class="text-end">Created</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>
                                        <strong>@product.Name</strong>
                                    </td>
                                    <td>@product.Category</td>
                                    <td class="text-end">@product.Amount.ToString("N2") @product.Currency</td>
                                    <td class="text-center">
                                        @if (product.Stock == 0)
                                        {
                                            <span class="badge bg-danger">Out of stock</span>
                                        }
                                        else if (product.Stock < 10)
                                        {
                                            <span class="badge bg-warning text-dark">@product.Stock</span>
                                        }
                                        else
                                        {
                                            <span>@product.Stock</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (product.Status == ProductStatus.Draft)
                                        {
                                            <span class="badge bg-secondary">@product.StatusDisplay</span>
                                        }
                                        else if (product.Status == ProductStatus.Active)
                                        {
                                            <span class="badge bg-success">@product.StatusDisplay</span>
                                        }
                                        else if (product.Status == ProductStatus.Archived)
                                        {
                                            <span class="badge bg-dark">@product.StatusDisplay</span>
                                        }
                                        else if (product.Status == ProductStatus.Suspended)
                                        {
                                            <span class="badge bg-danger">@product.StatusDisplay</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">@product.StatusDisplay</span>
                                        }
                                    </td>
                                    <td class="text-end">@product.CreatedAt.ToString("MMM d, yyyy")</td>
                                    <td class="text-center">
                                        @if (product.Status != ProductStatus.Archived)
                                        {
                                            <a asp-page="/Seller/EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="/Seller/ProductStatus" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary me-1" title="Change Status">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </a>
                                            <a asp-page="/Seller/DeleteProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Archived</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Seller/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
</div>
