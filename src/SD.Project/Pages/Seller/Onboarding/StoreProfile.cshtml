@page
@model SD.Project.Pages.Seller.Onboarding.StoreProfileModel
@{
    ViewData["Title"] = "Store Profile - Seller Onboarding";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="mb-4">Seller Onboarding</h1>

            <!-- Progress Indicator -->
            <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-center flex-fill">
                        <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                            @if (Model.StoreProfileCompleted)
                            {
                                <span>✓</span>
                            }
                            else
                            {
                                <span>1</span>
                            }
                        </div>
                        <div class="small mt-1"><strong>Store Profile</strong></div>
                    </div>
                    <div class="flex-fill border-top" style="height: 2px;"></div>
                    <div class="text-center flex-fill">
                        <div class="rounded-circle @(Model.VerificationCompleted ? "bg-success" : (Model.StoreProfileCompleted ? "bg-primary" : "bg-secondary")) text-white d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                            @if (Model.VerificationCompleted)
                            {
                                <span>✓</span>
                            }
                            else
                            {
                                <span>2</span>
                            }
                        </div>
                        <div class="small mt-1">Verification</div>
                    </div>
                    <div class="flex-fill border-top" style="height: 2px;"></div>
                    <div class="text-center flex-fill">
                        <div class="rounded-circle @(Model.PayoutCompleted ? "bg-success" : (Model.VerificationCompleted ? "bg-primary" : "bg-secondary")) text-white d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                            @if (Model.PayoutCompleted)
                            {
                                <span>✓</span>
                            }
                            else
                            {
                                <span>3</span>
                            }
                        </div>
                        <div class="small mt-1">Payout</div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Step 1: Store Profile</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            @Model.SuccessMessage
                        </div>
                    }

                    @if (Model.Errors.Count > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <ul class="mb-0">
                                @foreach (var error in Model.Errors)
                                {
                                    <li>@error</li>
                                }
                            </ul>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.StoreName" class="form-label">Store Name <span class="text-danger">*</span></label>
                            <input asp-for="Input.StoreName" class="form-control" placeholder="Enter your store name" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.StoreDescription" class="form-label">Store Description <span class="text-danger">*</span></label>
                            <textarea asp-for="Input.StoreDescription" class="form-control" rows="4" placeholder="Describe your store and what you sell"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.StoreAddress" class="form-label">Store Address <span class="text-danger">*</span></label>
                            <input asp-for="Input.StoreAddress" class="form-control" placeholder="Street address" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.StoreCity" class="form-label">City <span class="text-danger">*</span></label>
                                <input asp-for="Input.StoreCity" class="form-control" placeholder="City" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.StorePostalCode" class="form-label">Postal Code <span class="text-danger">*</span></label>
                                <input asp-for="Input.StorePostalCode" class="form-control" placeholder="Postal code" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.StoreCountry" class="form-label">Country <span class="text-danger">*</span></label>
                            <input asp-for="Input.StoreCountry" class="form-control" placeholder="Country" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" asp-page-handler="Save" class="btn btn-secondary">Save Draft</button>
                            <button type="submit" asp-page-handler="Next" class="btn btn-primary">Save & Continue →</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
