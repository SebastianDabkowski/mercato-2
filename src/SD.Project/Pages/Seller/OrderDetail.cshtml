                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-secondary me-3 mt-1">Cancelled</span>
                                    <div>
                                        <strong>Order cancelled</strong>
                                        <br><small class="text-muted">@Model.SubOrder.CancelledAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                            @if (Model.SubOrder.RefundedAt.HasValue)
                            {
                                <li class="d-flex align-items-start">
                                    <span class="badge bg-warning me-3 mt-1">Refunded</span>
                                    <div>
                                        <strong>Order refunded</strong>
                                        <br><small class="text-muted">@Model.SubOrder.RefundedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between">
                    <a asp-page="/Seller/Orders" class="btn btn-outline-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
                        </svg>
                        Back to Orders
                    </a>
                </div>
            </div>

            <!-- Order Summary Sidebar -->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 1rem;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">Sub-Order ID</small>
                            <p class="mb-0 fw-bold font-monospace" style="font-size: 0.75rem;">@Model.SubOrder.SubOrderId</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Parent Order ID</small>
                            <p class="mb-0 fw-bold font-monospace" style="font-size: 0.75rem;">@Model.SubOrder.OrderId</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Order Number</small>
                            <p class="mb-0 fw-bold">@Model.SubOrder.OrderNumber</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Order Date</small>
                            <p class="mb-0">@Model.SubOrder.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Status</small>
                            <p class="mb-0">
                                <span class="badge @statusClass">@statusDisplay</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">Payment Status</small>
                            <p class="mb-0 @paymentStatusClass fw-bold">@Model.SubOrder.PaymentStatus</p>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items Subtotal</span>
                            <span>@Model.SubOrder.Currency @Model.SubOrder.Subtotal.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            <span>@Model.SubOrder.Currency @Model.SubOrder.ShippingCost.ToString("N2")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold fs-5">Total</span>
                            <span class="fw-bold fs-5 text-primary">@Model.SubOrder.Currency @Model.SubOrder.Total.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
