@page "{subOrderId:guid}"
@model SD.Project.Pages.Seller.OrderDetailModel
@{
    ViewData["Title"] = Model.SubOrder is not null ? $"Order {Model.SubOrder.OrderNumber}" : "Order Details";
}

<div class="container py-4">
    @if (Model.SubOrder is null)
    {
        <div class="text-center py-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-question-circle text-muted mb-3" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286m1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94"/>
            </svg>
            <h4 class="text-muted">Order not found</h4>
            <p class="text-muted">The order you're looking for doesn't exist or doesn't belong to your store.</p>
            <a asp-page="/Seller/Orders" class="btn btn-primary mt-3">Back to Orders</a>
        </div>
    }
    else
    {
        var statusClass = Model.SubOrder.Status switch
        {
            "Paid" => "bg-success",
            "Processing" => "bg-info",
            "Shipped" => "bg-primary",
            "Delivered" => "bg-success",
            "Cancelled" => "bg-secondary",
            "Refunded" => "bg-warning",
            _ => "bg-warning"
        };
        var statusDisplay = Model.SubOrder.Status switch
        {
            "Paid" => "Confirmed",
            _ => Model.SubOrder.Status
        };
        var paymentStatusClass = Model.SubOrder.PaymentStatus switch
        {
            "Paid" => "text-success",
            "Pending" => "text-warning",
            "Failed" => "text-danger",
            "Cancelled" => "text-secondary",
            "Refunded" => "text-info",
            _ => "text-muted"
        };

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a asp-page="/Seller/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a asp-page="/Seller/Orders">Orders</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.SubOrder.OrderNumber</li>
                    </ol>
                </nav>
                <h1 class="mb-0">Order @Model.SubOrder.OrderNumber</h1>
            </div>
            <span class="badge @statusClass fs-5">@statusDisplay</span>
        </div>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Order Status Timeline -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-clock-history me-2" viewBox="0 0 16 16">
                                <path d="M8.515 1.019A7 7 0 0 0 8 1V0a8 8 0 0 1 .589.022zm2.004.45a7 7 0 0 0-.985-.299l.219-.976q.576.129 1.126.342zm1.37.71a7 7 0 0 0-.439-.27l.493-.87a8 8 0 0 1 .979.654l-.615.789a7 7 0 0 0-.418-.302zm1.834 1.79a7 7 0 0 0-.653-.796l.724-.69q.406.429.747.91zm.744 1.352a7 7 0 0 0-.214-.468l.893-.45a8 8 0 0 1 .45 1.088l-.95.313a7 7 0 0 0-.179-.483m.53 2.507a7 7 0 0 0-.1-1.025l.985-.17q.1.58.116 1.17zm-.131 1.538q.05-.254.081-.51l.993.123a8 8 0 0 1-.23 1.155l-.964-.267q.069-.247.12-.501m-.952 2.379q.276-.436.486-.908l.914.405q-.24.54-.555 1.038zm-.964 1.205q.183-.183.35-.378l.758.653a8 8 0 0 1-.401.432z"/>
                                <path d="M8 1a7 7 0 1 0 4.95 11.95l.707.707A8.001 8.001 0 1 1 8 0z"/>
                                <path d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5"/>
                            </svg>
                            Order Status
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div class="text-center flex-fill">
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center @(Model.SubOrder.Status != "Pending" ? "bg-success" : "bg-secondary") text-white" style="width: 40px; height: 40px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                                        <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                                    </svg>
                                </div>
                                <p class="mt-2 mb-0 small">Confirmed</p>
                            </div>
                            <div class="text-center flex-fill">
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center @(Model.SubOrder.Status == "Processing" || Model.SubOrder.Status == "Shipped" || Model.SubOrder.Status == "Delivered" ? "bg-success" : "bg-secondary") text-white" style="width: 40px; height: 40px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box-seam" viewBox="0 0 16 16">
                                        <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z"/>
                                    </svg>
                                </div>
                                <p class="mt-2 mb-0 small">Processing</p>
                            </div>
                            <div class="text-center flex-fill">
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center @(Model.SubOrder.Status == "Shipped" || Model.SubOrder.Status == "Delivered" ? "bg-success" : "bg-secondary") text-white" style="width: 40px; height: 40px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-truck" viewBox="0 0 16 16">
                                        <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5zm1.294 7.456A2 2 0 0 1 4.732 11h5.536a2 2 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456M12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2"/>
                                    </svg>
                                </div>
                                <p class="mt-2 mb-0 small">Shipped</p>
                                @if (Model.SubOrder.ShippedAt.HasValue)
                                {
                                    <p class="mb-0 text-muted" style="font-size: 0.7rem;">@Model.SubOrder.ShippedAt.Value.ToString("MMM dd")</p>
                                }
                            </div>
                            <div class="text-center flex-fill">
                                <div class="rounded-circle d-inline-flex align-items-center justify-content-center @(Model.SubOrder.Status == "Delivered" ? "bg-success" : "bg-secondary") text-white" style="width: 40px; height: 40px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-check" viewBox="0 0 16 16">
                                        <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.708L8 2.207l-5 5V13.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 1 0 1h-4A1.5 1.5 0 0 1 2 13.5V8.207l-.646.647a.5.5 0 1 1-.708-.708z"/>
                                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m1.679-4.493-1.335 2.226a.75.75 0 0 1-1.174.144l-.774-.773a.5.5 0 0 1 .708-.707l.547.547 1.17-1.951a.5.5 0 1 1 .858.514"/>
                                    </svg>
                                </div>
                                <p class="mt-2 mb-0 small">Delivered</p>
                                @if (Model.SubOrder.DeliveredAt.HasValue)
                                {
                                    <p class="mb-0 text-muted" style="font-size: 0.7rem;">@Model.SubOrder.DeliveredAt.Value.ToString("MMM dd")</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @* Status Messages *@
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                            <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                        </svg>
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
                            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                        </svg>
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @* Return Request Alert *@
                @if (Model.ReturnRequest is not null)
                {
                    var returnStatusClass = SD.Project.ViewModels.ReturnRequestStatusHelper.GetStatusAlertClass(Model.ReturnRequest.Status);
                    var returnStatusDisplay = SD.Project.ViewModels.ReturnRequestStatusHelper.GetStatusDisplayName(Model.ReturnRequest.Status);

                    <div class="alert @returnStatusClass mb-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-return-left me-2" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
                                </svg>
                                <div>
                                    <strong>Return Request: @returnStatusDisplay</strong>
                                    <p class="mb-0 small">Buyer requested a return on @Model.ReturnRequest.CreatedAt.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                            <a asp-page="/Seller/ReturnDetail" asp-route-returnRequestId="@Model.ReturnRequest.ReturnRequestId" class="btn btn-sm btn-outline-dark">
                                View Return Request
                            </a>
                        </div>
                    </div>
                }

                @* Fulfilment Actions Card *@
                @if (Model.StatusTransitions is not null && (Model.StatusTransitions.AvailableTransitions.Count > 0 || Model.StatusTransitions.CanUpdateTracking || Model.StatusTransitions.CanCancel))
                {
                    <div class="card mb-4 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-gear me-2" viewBox="0 0 16 16">
                                    <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492M5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0"/>
                                    <path d="M9.796 1.343c-.527-1.79-3.065-1.79-3.592 0l-.094.319a.873.873 0 0 1-1.255.52l-.292-.16c-1.64-.892-3.433.902-2.54 2.541l.159.292a.873.873 0 0 1-.52 1.255l-.319.094c-1.79.527-1.79 3.065 0 3.592l.319.094a.873.873 0 0 1 .52 1.255l-.16.292c-.892 1.64.901 3.434 2.541 2.54l.292-.159a.873.873 0 0 1 1.255.52l.094.319c.527 1.79 3.065 1.79 3.592 0l.094-.319a.873.873 0 0 1 1.255-.52l.292.16c1.64.893 3.434-.902 2.54-2.541l-.159-.292a.873.873 0 0 1 .52-1.255l.319-.094c1.79-.527 1.79-3.065 0-3.592l-.319-.094a.873.873 0 0 1-.52-1.255l.16-.292c.893-1.64-.902-3.433-2.541-2.54l-.292.159a.873.873 0 0 1-1.255-.52zm-2.633.283c.246-.835 1.428-.835 1.674 0l.094.319a1.873 1.873 0 0 0 2.693 1.115l.291-.16c.764-.415 1.6.42 1.184 1.185l-.159.292a1.873 1.873 0 0 0 1.116 2.692l.318.094c.835.246.835 1.428 0 1.674l-.319.094a1.873 1.873 0 0 0-1.115 2.693l.16.291c.415.764-.42 1.6-1.185 1.184l-.291-.159a1.873 1.873 0 0 0-2.693 1.116l-.094.318c-.246.835-1.428.835-1.674 0l-.094-.319a1.873 1.873 0 0 0-2.692-1.115l-.292.16c-.764.415-1.6-.42-1.184-1.185l.159-.291A1.873 1.873 0 0 0 1.945 8.93l-.319-.094c-.835-.246-.835-1.428 0-1.674l.319-.094A1.873 1.873 0 0 0 3.06 4.377l-.16-.292c-.415-.764.42-1.6 1.185-1.184l.292.159a1.873 1.873 0 0 0 2.692-1.115z"/>
                                </svg>
                                Fulfilment Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            @* Status Transition Buttons *@
                            @if (Model.StatusTransitions.AvailableTransitions.Contains("Processing"))
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted mb-2">Start Preparing</h6>
                                    <p class="small text-muted mb-2">Mark this order as being prepared for shipment.</p>
                                    <form method="post" asp-page-handler="StartPreparing" asp-route-subOrderId="@Model.SubOrder.SubOrderId">
                                        <button type="submit" class="btn btn-info">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-seam me-2" viewBox="0 0 16 16">
                                                <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z"/>
                                            </svg>
                                            Start Preparing
                                        </button>
                                    </form>
                                </div>
                                <hr>
                            }

                            @if (Model.StatusTransitions.AvailableTransitions.Contains("Shipped"))
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted mb-2">Mark as Shipped</h6>
                                    <p class="small text-muted mb-2">Enter shipping details and mark this order as shipped.</p>
                                    <form method="post" asp-page-handler="Ship" asp-route-subOrderId="@Model.SubOrder.SubOrderId">
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-4">
                                                <label for="carrierName" class="form-label">Carrier <span class="text-muted">(optional)</span></label>
                                                <input type="text" class="form-control" id="carrierName" name="CarrierName" asp-for="CarrierName" placeholder="e.g., FedEx, UPS, DHL">
                                            </div>
                                            <div class="col-md-4">
                                                <label for="trackingNumber" class="form-label">Tracking Number <span class="text-muted">(optional)</span></label>
                                                <input type="text" class="form-control" id="trackingNumber" name="TrackingNumber" asp-for="TrackingNumber" placeholder="e.g., 1Z999AA10123456784">
                                            </div>
                                            <div class="col-md-4">
                                                <label for="trackingUrl" class="form-label">Tracking URL <span class="text-muted">(optional)</span></label>
                                                <input type="url" class="form-control" id="trackingUrl" name="TrackingUrl" asp-for="TrackingUrl" placeholder="https://...">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-truck me-2" viewBox="0 0 16 16">
                                                <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5zm1.294 7.456A2 2 0 0 1 4.732 11h5.536a2 2 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456M12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2"/>
                                            </svg>
                                            Mark as Shipped
                                        </button>
                                    </form>
                                </div>
                                <hr>
                            }

                            @if (Model.StatusTransitions.CanUpdateTracking)
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted mb-2">Update Tracking Information</h6>
                                    <p class="small text-muted mb-2">Correct or update the shipping tracking details.</p>
                                    <form method="post" asp-page-handler="UpdateTracking" asp-route-subOrderId="@Model.SubOrder.SubOrderId">
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-4">
                                                <label for="updateCarrierName" class="form-label">Carrier</label>
                                                <input type="text" class="form-control" id="updateCarrierName" name="CarrierName" asp-for="CarrierName" placeholder="e.g., FedEx, UPS, DHL">
                                            </div>
                                            <div class="col-md-4">
                                                <label for="updateTrackingNumber" class="form-label">Tracking Number</label>
                                                <input type="text" class="form-control" id="updateTrackingNumber" name="TrackingNumber" asp-for="TrackingNumber" placeholder="e.g., 1Z999AA10123456784">
                                            </div>
                                            <div class="col-md-4">
                                                <label for="updateTrackingUrl" class="form-label">Tracking URL</label>
                                                <input type="url" class="form-control" id="updateTrackingUrl" name="TrackingUrl" asp-for="TrackingUrl" placeholder="https://...">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-outline-primary">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square me-2" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                            </svg>
                                            Update Tracking
                                        </button>
                                    </form>
                                </div>
                                <hr>
                            }

                            @if (Model.StatusTransitions.AvailableTransitions.Contains("Delivered"))
                            {
                                <div class="mb-3">
                                    <h6 class="text-muted mb-2">Mark as Delivered</h6>
                                    <p class="small text-muted mb-2">Confirm the order has been delivered to the customer.</p>
                                    <form method="post" asp-page-handler="MarkDelivered" asp-route-subOrderId="@Model.SubOrder.SubOrderId">
                                        <button type="submit" class="btn btn-success">
