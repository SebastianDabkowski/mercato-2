@page "{id:guid}"
@model SD.Project.Pages.Seller.EditProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Edit Product</h1>
            <p class="text-muted">Update your product details below.</p>

            @if (Model.Errors.Any())
            {
                <div class="alert alert-danger">
                    <ul class="mb-0">
                        @foreach (var error in Model.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <form method="post">
                <input type="hidden" asp-for="Input.Id" />
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Product Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label"></label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Enter product title" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                            <small class="text-muted">A clear, descriptive title for your product.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label"></label>
                            <textarea asp-for="Input.Description" class="form-control" rows="4" placeholder="Describe your product in detail"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                            <small class="text-muted">Provide a detailed description of your product (optional, max 2000 characters).</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Category" class="form-label"></label>
                            <input asp-for="Input.Category" class="form-control" placeholder="e.g., Electronics, Clothing, Home & Garden" />
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                            <small class="text-muted">Choose a category that best describes your product.</small>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Pricing & Inventory</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Price" class="form-label"></label>
                                <input asp-for="Input.Price" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                                <span asp-validation-for="Input.Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Currency" class="form-label"></label>
                                <select asp-for="Input.Currency" class="form-select">
                                    <option value="USD">USD - US Dollar</option>
                                    <option value="EUR">EUR - Euro</option>
                                    <option value="GBP">GBP - British Pound</option>
                                    <option value="PLN">PLN - Polish Zloty</option>
                                </select>
                                <span asp-validation-for="Input.Currency" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Stock" class="form-label"></label>
                            <input asp-for="Input.Stock" class="form-control" type="number" min="0" placeholder="0" />
                            <span asp-validation-for="Input.Stock" class="text-danger"></span>
                            <small class="text-muted">Enter the number of items available for sale.</small>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Shipping Parameters</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">Optional shipping information used for logistics and shipping cost calculation.</p>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.WeightKg" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Input.WeightKg" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                    <span class="input-group-text">kg</span>
                                </div>
                                <span asp-validation-for="Input.WeightKg" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.LengthCm" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Input.LengthCm" class="form-control" type="number" step="0.1" min="0" placeholder="0" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Input.LengthCm" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.WidthCm" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Input.WidthCm" class="form-control" type="number" step="0.1" min="0" placeholder="0" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Input.WidthCm" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Input.HeightCm" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Input.HeightCm" class="form-control" type="number" step="0.1" min="0" placeholder="0" />
                                    <span class="input-group-text">cm</span>
                                </div>
                                <span asp-validation-for="Input.HeightCm" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="/Seller/Products" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
